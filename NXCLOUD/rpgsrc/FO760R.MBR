      *
     c     end_pgm       tag
     c                   eval      *inlr = *on
     c                   return
      *
      * - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
      *  Sjekke ordrelinjer
      * - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
      *
     csr   sjek_ordr     begsr
      *
     c                   eval      w_updt = 1
     c                   eval      w_oord = 0
      *
     c                   eval      fodtlx_lage = vllage
     c                   eval      fodtlx_vare = vlvare
     c     fodtlx_key    setll     fodtlx
     c     fodtlx_key    reade     fodtlx
      *
     c                   dow       not %eof
      *
6.27 c                   if        fdvare <> *blank and
6.27 c                             fdlety <> 1
      *
      *  Hent opplysninger fra ORDRE-HODE-REGISTER
      *
     c                   eval      fohel1_numm = fdnumm
     c                   eval      fohel1_suff = fdsuff
     c     fohel1_key    chain     fohel1r
     c                   if        %found(fohel1)
      *
      *  Hent opplysninger fra Ordre-type
      *
     c                   eval      votyl1_otyp = footyp
     c     votyl1_key    chain     votyl1r
      *
      *  Hent opplysninger fra Linje-type
      *
     c                   eval      vltyl1_ltyp = fdltyp
     c     vltyl1_key    chain     vltyl1r
      *
      * Oppdatering skal bare foregå for
      * behandlingskode som = 1  og
6.30  * Kode, oppd. lager = 1
      *
     c                   if        vaoakk = 1
6.30 c                             and vaolag = 1
     c                   eval      w_anta = fdanta
      *
      * Sjekk om negativ ordretype
      *
     c                   if        vaokre = '-'
     c                   eval      w_anta = w_anta * -1
     c                   endif
      *
      * Sjekk om negativ linjetype
      *
     c                   if        valkre = '-'
     c                   eval      w_anta = w_anta * -1
     c                   endif
6.26  *
6.26  * Regn om antallet dersom nødvendig
6.26  *
6.26 c                   exsr      omr_antall
      *
     c                   eval      w_oord = w_oord + w_anta
      *
     c                   endif
     c                   endif
     c                   endif
      *
     c     fodtlx_key    reade     fodtlx
     c                   enddo
      *
     csr                 endsr
6.26  *
6.26  * - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
6.26  * Subrutine for omregning av antall i forhold til lagerenhet
6.26  * - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
6.26  *
6.26 c     omr_antall    begsr
6.26  *
6.26  * Henter vareinformasjon
6.26  *
6.26 c                   eval      vvarl1_vare = fdvare
6.26 c     vvarl1_key    chain     vvarl1r
6.26 c                   if        not %found(vvarl1)
6.26 c                   goto      end_omr
6.26 c                   endif
6.26  *
6.26  * Dersom solgt enhet er lik lagerenhet beholdes antall
6.26  *
6.26 c                   if        fdenh1 = vvenhl
6.26 c                   goto      end_omr
6.26 c                   endif
6.26  *
6.26  * Finner omregningsfaktor volum for lagerenhet og for solgt enhet
6.26  * Antall regnes om etter forholdet mellom disse
6.26  *
6.26 c                   eval      vvenl1_vare = fdvare
6.26 c     vvenl1_key    setll     vvenl1
6.26 c     vvenl1_key    reade     vvenl1                                 90
6.26 c                   dow       *in90 = *off
6.26 c                   if        fdenh1 = veenhe
6.26 c                   eval      w_omrs = veomre
6.26 c                   endif
6.26 c                   if        vvenhl = veenhe
6.26 c                   eval      w_omrl = veomre
6.26 c                   endif
6.26 c     vvenl1_key    reade     vvenl1                                 90
6.26 c                   enddo
6.26  *
6.26 c                   if        w_omrs = 0
6.26 c                   eval      w_omrs = 1
6.26 c                   endif
6.26  *
6.26 c                   if        w_omrl = 0
6.26 c                   eval      w_omrl = 1
6.26 c                   endif
6.26  *
6.26 c                   eval      w_anta = w_anta * w_omrs / w_omrl
6.26  *
6.26 c     end_omr       endsr
