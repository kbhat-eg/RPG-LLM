6.26 fvvenl1    if   e           k disk    rename(vvenpfr:vvenl1r)
     fvlaglu    uf   e           k disk    rename(vlagpfr:vlaglur)
     ffohel1    if   e           k disk    rename(fohepfr:fohel1r)
     ffodtlx    if   e           k disk    rename(fodtpfr:fodtlxr)
     fvotyl1    if   e           k disk    rename(votypfr:votyl1r)
     fvltyl1    if   e           k disk    rename(vltypfr:vltyl1r)
      *
     d                uds
     d l_user                911    920
     d  dssfir               944    946  0
      *
      * Definering av variable
      *
     d w_firm          s                   like(fofirm)
     d w_anta          s                   like(fdanta)
     d w_oord          s                   like(vloord)
     d w_updt          s              1  0
6.26 d w_omrl          s                   like(veomre)
6.26 d w_omrs          s                   like(veomre)
      *
      * Definering av variable i nøkler
      *
6.26 d vvarl1_vare     s                   like(vvvare)
6.26 d vvenl1_vare     s                   like(vevare)
     d vlaglu_vare     s                   like(vlvare)
     d vlaglu_lage     s                   like(vllage)
     d fohel1_numm     s                   like(fonumm)
     d fohel1_suff     s                   like(fosuff)
     d fodtlx_lage     s                   like(fdlage)
     d fodtlx_vare     s                   like(fdvare)
     d votyl1_otyp     s                   like(vaotyp)
     d vltyl1_ltyp     s                   like(valtyp)
      *
      * - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
      *  Leser igjennom LAGER-REGISTER for å sjekke avvik
      * - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
      *
     c                   eval      vlaglu_vare = *blank
     c                   eval      vlaglu_lage = *zero
     c     vlaglu_key    setll     vlaglur
     c                   read      vlaglur
      *
     c                   dow       not %eof
      *
     c                   if        vlfirm <> w_firm
     c                   unlock    vlaglu
     c                   leave
     c                   endif
      *
     c                   exsr      sjek_ordr
      *
      *> Ikke i bruk               vlpakk = 0
      *> Ikke i bruk               vlores = 0
      *
     c                   if        vloord = w_oord
     c                   eval      w_updt = 0
     c                   endif
      *
     c                   if        w_updt = 1
     c                   eval      vloord = w_oord
     c                   time                    vledat
     c                   time                    vletim
     c                   eval      vleusr = l_user
     c                   update    vlaglur
     c                   else
     c                   unlock    vlaglu
     c                   endif
      *
     c                   read      vlaglur
     c                   enddo
      *
      * - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
