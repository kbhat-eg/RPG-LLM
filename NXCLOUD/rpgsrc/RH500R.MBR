7.02 c                   if        p_text = '*Prosjekt'
7.02 c                   eval      w_bare_prosj = 'J'
7.02 c                   endif
      *
      * Henter parametre, og initierer skjermbildet
      *
     c                   eval      w_firm = l_firm
      *
     c                   eval      *in22 = *on
      *
      * Posisjonerer databasen, og fyller opp subfile
      *
     c                   eval      rhovl1_kont = 0
     c     rhovl1_key    setll     rhovl1
      *
     c                   exsr      crt_subfile
      *
     c                   endsr
