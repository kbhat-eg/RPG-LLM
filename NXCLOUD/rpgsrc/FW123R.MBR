     c                   if        *in91  = *on
     c                   eval      *in32  = *on
     c                   eval      b_feil = *on
     c                   goto      end_sjekk
     c                   endif
      *
     c                   eval      b1utxt = vgutxt
      *
      * Lagerkode
      *
     c                   if        b1vtyp <> 'L' and
     c                             b1vtyp <> 'S'
     c                   eval      *in35  = *on
     c                   eval      b_feil = *on
     c                   goto      end_sjekk
     c                   endif
      *
      * Priskode
      *
     c                   if        b1kpri <> ' ' and
     c                             b1kpri <> 'N' and
     c                             b1kpri <> 'B'
     c                   eval      *in36  = *on
     c                   eval      b_feil = *on
     c                   goto      end_sjekk
     c                   endif
      *
      * Varenummer
      *
     c                   if        b1varf < 0
     c                   eval      *in37  = *on
     c                   eval      b_feil = *on
     c                   goto      end_sjekk
     c                   endif
      *
     c                   if        b1varf >= 10000000
     c                   eval      *in38  = *on
     c                   eval      b_feil = *on
     c                   goto      end_sjekk
     c                   endif
      *
     c                   if        b1kvar <> 0 and
     c                             b1kvar <> 1
     c                   eval      *in39  = *on
     c                   eval      b_feil = *on
     c                   goto      end_sjekk
     c                   endif
      *
     c                   if        b1varf <> 0 and
     c                             b1kvar <> 0
     c                   eval      *in40  = *on
     c                   eval      b_feil = *on
     c                   goto      end_sjekk
     c                   endif
      *
     c     end_sjekk     endsr
