      * - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
      *
     c     xc2bld        begsr
      *
     c                   eval      w_arow = 0
     c                   eval      w_acol = 0
      *
     c                   eval      vgkpir_hkod = *blank
     c                   movel     c2vare        vgkpir_vare
     c     vgkpir_key    chain     vgkpir
      *
     c                   if        %found
     c                   movel     vgvare        c2vare
     c                   eval      c2busr = vgbusr
     c                   eval      c2enhe = vgenhe
     c                   eval      c2type = vgtype
     c                   eval      c2cost = vgcost
     c                   eval      c2best = vgbest
     c                   eval      c2suff = vgsuff
     c                   eval      c2line = vgline
     c                   eval      c2gmkp = vggmkp
     c                   eval      c2inkp = vginkp
     c                   eval      c2pkod = '(' + vgpkod + ')'
     c                   eval      c2behl = vgbehl
     c                   eval      c2anta = vganta
     c     *hms          move      vgttim        w_ttim
     c                   movel     w_ttim        c2ttim
     c                   eval      c2type = vgtype
      *
      * Hent varetekst
      *
     c                   movel     c2vare        w_var1
     c                   exsr      les_vare
     c                   eval      c2vtek = vvtek1
      *
      * Dato gjeldene fra
      *
     c                   if        vggdat = *loval
     c                   eval      c2gdat = *zeros
     c                   else
     c     *dmy          move      vggdat        c2gdat
     c                   endif
      *
      * Dato beregnet
     c                   if        vgbdat = *loval
     c                   eval      c2bdat = *zeros
     c                   else
     c     *dmy          move      vgbdat        c2bdat
     c                   endif
      *
     c                   else
     c                   eval      c2vare = 0
     c                   eval      c2gdat = *zeros
     c                   eval      c2enhe = *blank
     c                   eval      c2vtek = *blank
     c                   eval      c2cost = *zeros
     c                   eval      c2bdat = *zeros
     c                   eval      c2type = *blank
     c                   eval      c2ttim = *zeros
     c                   eval      c2busr = *blank
     c                   endif
      *
     c                   if        b1valg = 2
     c                   eval      *in30 = *on
     c                   eval      c2cost = 0
     c                   eval      c2gdat = *zeros
     c                   endif
      *
     c                   if        b1valg = 5
     c                   eval      *in31 = *on
     c                   endif
      *
     c     c2taga        tag
      *
     c                   exfmt     c2bld
      *
     c                   if        *inkc or *inkl or *in31
     c                   goto      end_c2bld
     c                   endif
      *
      * Spørring
     c                   if        *inkd
      * Varenummer
      *
     c                   if        w_afld = 'C2VARE'
     c                   exsr      sok_vare
     c                   movel     w_vare        c2vare
     c                   movel     c2vare        w_vare
     c                   movel     c2vare        w_var1
     c                   exsr      les_vare
     c                   eval      c2vtek = vvtek1
     c                   eval      c2enhe = vvenhl
     c                   eval      c2type = 'M'
     c                   goto      c2taga
     c                   endif
      *
     c                   endif
      *
      *  Sjekk, Finnes vare i vare registeret
      *
     c                   movel     c2vare        w_var1
     c                   exsr      les_vare
     c                   if        b_feil = *on
     c                   exfmt     c1msg
     c                   goto      c2taga
     c                   else
     c                   eval      c2enhe = vvenhl
     c                   eval      c2type = 'M'
     c                   endif
      *
      *  Sjekk,   dato, kan ikke være blank
      *
     c                   if        c2gdat = 0
     c                   exfmt     c2msg
     c                   goto      c2taga
     c                   endif
      *
      * Sjekk  kostpris
      *
     c                   if        c2cost = *zeros
     c                   exfmt     c3msg
     c                   goto      c2taga
     c                   endif
      *
      * Oppdatering
      *
     c                   eval      vgkpiu_hkod = *blank
     c                   movel     c2vare        vgkpiu_vare
     c     vgkpiu_key    chain     vgkpiu
      *
     c                   if        %found
     c                   exsr      pris_hist
     c                   end
      *
     c                   clear                   vgkpiur
     c                   eval      vgfirm = w_firm
     c                   eval      vglage = w_lage
     c                   eval      vghkod = ' '
     c                   movel     c2vare        vgvare
     c     *dmy          move      c2gdat        vggdat
     c                   time                    vggtim
     c                   eval      vgenhe = c2enhe
     c                   eval      vgtype = c2type
     c                   eval      vgcost = c2cost
      *
     c                   time                    vgttim
     c                   time                    vgbdat
     c                   eval      vgbusr = l_user
      *
     c                   write     vgkpiur
