      *
     c     posisjoner    begsr
      *
      * Varenummer
      *
     c                   if        b2vare <> *blanks
     c                   eval      w_seqe = *blank
     c                   eval      vgkpi1_vare = b2vare
     c     vgkpi1_key    setll     vgkpi1
     c                   goto      end_pos
     c                   endif
      *
     c                   if        b2lage <> 0
     c                   eval      w_seqe = *blank
     c                   eval      vgkpi1_lage = b2lage
