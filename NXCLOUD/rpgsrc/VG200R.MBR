     c                   eval      w_stel = w_stel + 1
      *
     c                   eval      vgkpi1_vare = vgvare
      *
     c                   enddo
      *
     c                   if        %eof
     c     vgkpi1_key    setll     vgkpi1
     c                   endif
      *
      * Blanker og fyller opp subfile
      *
     c                   exsr      clr_subfile
     c                   exsr      crt_subfile
      *
     c                   endsr
      *
