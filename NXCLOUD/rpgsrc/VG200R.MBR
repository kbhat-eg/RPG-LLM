     c                   endif
      *
     c                   eval      vgkpi1_lage = b2lage
     c                   eval      vgkpi1_vare = b1vare
     c     vgkpi1_key    setll     vgkpi1
      *
     c                   exsr      clr_subfile
     c                   exsr      crt_subfile
      *
     c     end_forny     endsr
