      * - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
      *
     c     bck_subfile   begsr
      *
     c                   if        *in15
     c                   select
     c                   when      w_seqe = 'B'
     c     ilonl2_key    setgt     ilonl2
     c                   readp     ilonl2
     c                   other
     c     ilonl1_key    setgt     ilonl1
     c                   readp     ilonl1
     c                   endsl
     c                   endif
      *
      * Leser tilbake en side
      *
     c                   eval      w_stel = 0
      *
     c                   dou       w_stel = w_ssrn + c_sfil
      *
     c                   select
     c                   when      w_seqe = 'B'
     c                   readp     ilonl2
     c                   other
     c                   readp     ilonl1
     c                   endsl
      *
     c                   if        %eof or
     c                             ilrkli <> w_rkli
     c                   leave
     c                   endif
      *
     c                   eval      w_stel = w_stel + 1
      *
     c                   select
     c                   when      w_seqe = 'B'
     c                   eval      ilonl2_rnav = ilrnav
     c                   other
     c                   eval      ilonl1_rlnr = ilrlnr
     c                   endsl
      *
     c                   enddo
      *
     c                   if        %eof
     c                   select
     c                   when      w_seqe = 'B'
     c     ilonl2_key    setll     ilonl2
     c                   other
     c     ilonl1_key    setll     ilonl1
     c                   endsl
     c                   endif
      *
      * Blanker og fyller opp subfile
      *
     c                   exsr      clr_subfile
     c                   exsr      crt_subfile
      *
     c                   endsr
