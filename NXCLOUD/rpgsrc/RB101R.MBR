     c                   if        %eof or
     c                             r00fir <> w_firm
     c                   eval      *in15 = *on
     c                   leave
     c                   endif
      *  Bare type 'MVAKODE'
     c                   if        r00typ <> w_type
     c                   iter
     c                   endif
      *
     c                   eval      w_srrn = w_srrn + 1
      *
     c                   select
     c                   when      w_seqe = 'B'
     c                   eval      rb00l2_vtxt = r00txt
     c                   other
     c                   eval      rb00l1_gkod = r00kod
     c                   endsl
