     c                   eval      b1nkod = r00nko
     c                   eval      b1vtxt = r00txt
      *
     c                   write     b1sfl
      *
     c                   enddo
      *
     c                   if        w_srrn > w_ssrn
     c                   eval      w_sfrn = w_ssrn + 1
