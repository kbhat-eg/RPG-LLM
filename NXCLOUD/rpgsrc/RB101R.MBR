     c                   eval      c2vtxt = *blank
     c                   eval      c2eusr = *blank
     c                   eval      c2edat = 0
     c                   endif
      *
     c                   if        b1valg = 5
     c                   eval      *in30 = *on
     c                   endif
      *
     c     c2taga        tag
      *
      * Validering
     c                   move      c1gkod        ra05l1_akod
     c     ra05l1_key    chain     ra05l1
     c                   if        %found
     c                   eval      c2vtxt = raetxt
     c                   endif
      *
     c                   exfmt     c2bld
      *
     c                   if        *inkc or *inkl or *in30
     c                   goto      end_c2bld
     c                   endif
      *
      * Spørring
      *
     c                   if        *inkd
     c                   goto      c2taga
     c                   endif
      *
      * Validering av input
     c                   if        c2nkod = *blank
     c                   eval      *in33 = *on
     c                   exsr      xc1msg
     c                   goto      c2taga
     c                   endif
      *
      *
      * Oppdatering
      *
     c                   clear                   rb00lur
      *
     c                   eval      rb00lu_gkod = c1gkod
     c     rb00lu_key    chain     rb00lur
      *
     c                   eval      r00txt = c2vtxt
     c                   eval      r00nko = c2nkod
      *
     c                   time                    r00dat
     c                   time                    r00tim
     c                   eval      r00usr = l_user
      *
     c                   if        %found
     c                   update    rb00lur
     c                   else
     c                   eval      r00fir = w_firm
     c                   eval      r00typ = w_type
     c                   eval      r00kod = c1gkod
     c                   eval      r00nko = c2nkod
     c                   eval      r00txt = c2vtxt
     c                   write     rb00lur
     c                   endif
      *
      * Oppdater subfile
      *
     c                   if        b1valg = 2
     c                   eval      b1vtxt = r00txt
     c                   eval      b1nkod = r00nko
     c                   endif
      *
     c                   if        b_oppr = *on or
     c                             b1valg = 3
     c                   eval      b_forn = *on
     c                   endif
      *
     c     end_c2bld     tag
      *
     c                   eval      *in30  = *off
      *
     c                   endsr
