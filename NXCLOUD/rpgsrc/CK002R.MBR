      * - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
      *
     c     xd1win        begsr
      *
     c                   eval      ckgrlr_gkat = d1gkat
     c                   eval      ckgrlr_gkla = d1gkla
     c     ckgrlr_key    chain     ckgrlr
      *
     c                   exfmt     d1win
      *
     c                   if        *inkc or *inkl
     c                   leavesr
     c                   endif
      *
     c                   eval      b_forn = *on
      *
      * Sletter rad
      *
     c                   eval      ckgrlu_gkat = d1gkat
     c                   eval      ckgrlu_gkla = d1gkla
     c     ckgrlu_key    chain     ckgrlur
      *
     c                   delete    ckgrlur
      *
     c                   endsr
      *
      * - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
      * Subrutine for tømming av subfile
      * - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
      *
     c     clr_subfile   begsr
      *
     c                   eval      *in14 = *on
     c                   write     b2ctl
     c                   eval      *in14 = *off
      *
     c                   eval      *in15 = *off
     c                   eval      w_srrn = 0
     c                   eval      w_sfrn = 0
     c                   eval      w_ssrn = 0
     c                   eval      w_spge = 0
      *
     c                   endsr
      *
      * - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
      * Subrutine for å fylle opp subfile
      * - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
      *
     c     crt_subfile   begsr
      *
     c                   eval      w_spge = w_spge + c_sfil
     c                   eval      w_srrn = w_ssrn
      *
     c                   dou       w_srrn = w_spge
      *
     c                   read      ckgrl1
      *
     c                   if        %eof or
     c                             ckgfir <> w_firm
     c                   eval      *in15 = *on
     c                   leave
     c                   endif
      *
     c                   eval      w_srrn = w_srrn + 1
      *
     c                   eval      ckgrl1_gkla = ckgkla
     c                   eval      ckgrl1_gkat = ckgkat
      *
     c                   eval      b1valg = 0
     c                   eval      b1gkla = ckgkla
      *
     c                   eval      ckkllr_kkla = ckgkla
     c     ckkllr_key    chain     ckkllr
     c                   if        %found
     c                   eval      b1gtxt = ckktxt
     c                   else
     c                   eval      b1gtxt = *blank
     c                   endif
     c                   eval      b1gkat = ckgkat
     c                   eval      ra11lr_kkod = ckgkat
     c     ra11lr_key    chain     ra11lr
     c                   if        %found(ra11lr)
     c                   eval      b1ktxt = raktxt
     c                   else
     c                   eval      b1ktxt = *blank
     c                   endif
      *
     c                   write     b1sfl
      *
     c                   enddo
      *
     c                   if        w_srrn > w_ssrn
     c                   eval      w_sfrn = w_ssrn + 1
     c                   endif
      *
     c                   eval      w_ssrn = w_srrn
     c                   eval      w_virn = w_sfrn
      *
     c                   endsr
      *
      * - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
