      * Subrutine for posisjonering i subfile
      * - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
      *
     c     posisjoner    begsr
      *
      * Posisjoner startverdi på påslag
      *
     c                   if        b2orol <> *blank
     c                   eval      w_seqe = ' '
     c                   eval      rrolir_orol = b2orol
     c     rrolir_key    setll     rrolir
     c                   goto      end_pos
     c                   endif
      *
      * Posisjoner startverdi på beskrivelse
      *
     c*                  if        b2obes <> *blank
     c*                  eval      w_seqe = 'B'
     c*                  eval      rroli2_obes = b2obes
     c*    rroli2_key    setll     rroli2
     c*                  goto      end_pos
     c*                  endif
      *
     c     end_pos       tag
      *
      * Blanker subfile, og fyller opp i.h.t. posisjonering
      *
     c                   eval      *in22 = *off
      *
     c                   exsr      clr_subfile
     c                   exsr      crt_subfile
      *
      * Blanker posisjoneringsfelter
      *
     c                   eval      b2orol = *blank
     c*                  eval      b2besk = *blank
      *
     c                   endsr
