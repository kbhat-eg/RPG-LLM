-- Overføring Kunde

CREATE OR REPLACE TABLE BOKUST( 
 Firma                FOR COLUMN FIRM NUMERIC(3, 0) NOT NULL,
 Kunde                FOR COLUMN KUND NUMERIC(6, 0) NOT NULL,
 Navn                                 CHAR(35) CCSID 277,
 Adresse1             FOR COLUMN ADR1 CHAR(35) CCSID 277,
 Adresse2             FOR COLUMN ADR2 CHAR(35) CCSID 277,
 Postnr               FOR COLUMN PONR CHAR(10) CCSID 277,
 Poststed             FOR COLUMN STED CHAR(35) CCSID 277,
 Kontaktperson        FOR COLUMN KPRS CHAR(35) CCSID 277,
 Telefon              FOR COLUMN TLFN CHAR(15) CCSID 277,
 Mobil                FOR COLUMN MOBN CHAR(15) CCSID 277,
 Telefaks             FOR COLUMN TLFX CHAR(15) CCSID 277,
 EmailAdresse         FOR COLUMN MAIL CHAR(50) CCSID 277,
 Organisasjonsnr      FOR COLUMN ORGN NUMERIC(9, 0),
 EANLokasjonsnr       FOR COLUMN EANL NUMERIC(13, 0),
 FakturaKundenr       FOR COLUMN FAKU NUMERIC(6, 0),
 KonsernKundenr       FOR COLUMN KOKU NUMERIC(6, 0),
 Avdeling             FOR COLUMN AVDE NUMERIC(4, 0),
 Lager                FOR COLUMN LAGE NUMERIC(2, 0),
 Selger               FOR COLUMN SELG NUMERIC(4, 0),
 Distrikt             FOR COLUMN DIST NUMERIC(4, 0),
 Rute                 FOR COLUMN KJOR NUMERIC(2, 0),
 RuteRekkefolge       FOR COLUMN KJNR NUMERIC(5, 0),
 Kundekategori        FOR COLUMN KKAT NUMERIC(4, 0),
 KundekatBeskrivelse  FOR COLUMN KKBE CHAR(35) CCSID 277,
 Rabattkategori       FOR COLUMN RKAT NUMERIC(3, 0),
 RabattkatBeskrivelse FOR COLUMN RKBE CHAR(35) CCSID 277,
 Ordrerabatt          FOR COLUMN RABO NUMERIC(5, 2),
 Betalingsbetingelse  FOR COLUMN BETB NUMERIC(2, 0),
 Betalingsmate        FOR COLUMN BETM NUMERIC(1, 0),
 Land                                 CHAR(2) CCSID 277,
 Valuta               FOR COLUMN VALU CHAR(3) CCSID 277,
 MvaKode              FOR COLUMN KMVA NUMERIC(1, 0),
 Almenning            FOR COLUMN ALME NUMERIC(4, 0),
 KravRekvisisjon      FOR COLUMN REKV NUMERIC(1, 0),
 IkkeFakturagebyr     FOR COLUMN KFGB NUMERIC(1, 0),
 Fakturasekvens       FOR COLUMN SEKV NUMERIC(2, 0),
 Kreditsperre         FOR COLUMN KRES NUMERIC(1, 0),
 Kreditgrense         FOR COLUMN GRNS NUMERIC(5, 0),
 Saldo                FOR COLUMN SALD NUMERIC(11, 2),
 Memosaldo            FOR COLUMN MEMS NUMERIC(11, 2),
 Spesialavtale1       FOR COLUMN SPA1 CHAR(30) CCSID 277,
 Spesialavtale2       FOR COLUMN SPA2 CHAR(30) CCSID 277,
 Spesialavtale3       FOR COLUMN SPA3 CHAR(30) CCSID 277,
 OpprettetDato        FOR COLUMN ODAT DATE NOT NULL DEFAULT CURRENT_DATE,
 OpprettetTid         FOR COLUMN OTIM TIME NOT NULL DEFAULT CURRENT_TIME,
 OpprettetAv          FOR COLUMN OUSR CHAR(10) CCSID 277 NOT NULL DEFAULT ' ',
 Soketekst            FOR COLUMN STEK CHAR(200) CCSID 277 NOT NULL DEFAULT ' ',
 EndretDato           FOR COLUMN EDAT DATE NOT NULL DEFAULT CURRENT_DATE,
 EndretTid            FOR COLUMN ETIM TIME NOT NULL DEFAULT CURRENT_TIME,
 EndretAv             FOR COLUMN EUSR CHAR(10) CCSID 277 NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

LABEL ON TABLE BOKUST
	IS 'Overføring Kunde';
