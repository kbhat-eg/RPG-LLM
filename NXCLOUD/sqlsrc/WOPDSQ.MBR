-- Oppdterings Skyggetabell

CREATE OR REPLACE TABLE WOPDST(
 Register    FOR COLUMN woregi char(10) NOT NULL  DEFAULT ' ',
 Forekomst   FOR COLUMN wofore char(10) NOT NULL  DEFAULT ' ',
 Felt        FOR COLUMN wofelt char(10) NOT NULL  DEFAULT ' ',
 Ny_verdi    FOR COLUMN woverd char(30) NOT NULL  DEFAULT ' ',
 Feilmeling  FOR COLUMN wofeil char(30) NOT NULL  DEFAULT ' ',
 EndretDato  FOR COLUMN woEDAT DATE     NOT NULL  DEFAULT CURRENT_DATE,
 EndretTid   FOR COLUMN woETIM TIME     NOT NULL  DEFAULT CURRENT_TIME,
 EndretAv    FOR COLUMN woEUSR CHAR(10) NOT NULL  DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

CREATE UNIQUE INDEX WOPDIU
	ON WOPDST (woregi, wofore, wofelt);

LABEL ON TABLE WOPDST
	IS 'Regsiter oppdateringstabell';
