CREATE OR REPLACE TABLE MPLDST(
  UID              FOR COLUMN MLDUID NUMERIC(18, 0) NOT NULL
                   GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  Firma            FOR COLUMN MLDFIR NUMERIC(3, 0) NOT NULL,
  Leverandor       FOR COLUMN MLDLEV NUMERIC(6, 0) NOT NULL,
  Lager            FOR COLUMN MLDLAG NUMERIC(2, 0) NOT NULL,
  Beskrivelse      FOR COLUMN MLDBES CHAR(35) NOT NULL DEFAULT ' ',
  DatoOpprettet    FOR COLUMN MLDODA DATE NOT NULL DEFAULT CURRENT_DATE,
  DatoEndret       FOR COLUMN MLDEDA DATE NOT NULL DEFAULT CURRENT_DATE,
  SistBruker       FOR COLUMN MLDUSR CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

LABEL ON TABLE MPLDST IS 'Leverand√∏rer i bestillingsforslag';

CREATE UNIQUE INDEX MPLDIU ON MPLDST(MLDFIR,MLDLEV,MLDLAG);
CREATE UNIQUE INDEX MPLDIR ON MPLDST(MLDFIR,MLDLEV,MLDLAG);
CREATE UNIQUE INDEX MPLDI1 ON MPLDST(MLDFIR,MLDLEV,MLDLAG);
