-- Innstillinger for kasseoppgjør pr kasse

CREATE OR REPLACE TABLE BOT2ST( 
 Firma              FOR COLUMN B2FIRM NUMERIC(3, 0) NOT NULL,
 Kasse              FOR COLUMN B2KASS CHAR(3) CCSID 277 NOT NULL,
 BrukerStyrt        FOR COLUMN B2BSTY NUMERIC(1, 0) DEFAULT 0,
 GruppeStyrt        FOR COLUMN B2GSTY NUMERIC(1, 0) DEFAULT 0,
 Gruppe             FOR COLUMN B2GRUP CHAR(10) CCSID 277 DEFAULT ' ',
 FjernstyrtOk       FOR COLUMN B2FSOK NUMERIC(1, 0) DEFAULT 0,
 OpprettetDato      FOR COLUMN B2ODAT DATE NOT NULL DEFAULT CURRENT DATE,
 OpprettetTid       FOR COLUMN B2OTIM TIME NOT NULL DEFAULT CURRENT TIME,
 OpprettetAv        FOR COLUMN B2OUSR CHAR(10) CCSID 277 NOT NULL DEFAULT ' ',
 EndretDato         FOR COLUMN B2EDAT DATE NOT NULL DEFAULT CURRENT DATE,
 EndretTid          FOR COLUMN B2ETIM TIME NOT NULL DEFAULT CURRENT TIME,
 EndretAv           FOR COLUMN B2EUSR CHAR(10) CCSID 277 NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

CREATE INDEX BOT2I1
	ON BOT2ST (B2FIRM, B2KASS);

CREATE UNIQUE INDEX BOT2IR
	ON BOT2ST (B2FIRM, B2KASS);

CREATE INDEX BOT2IU
	ON BOT2ST (B2FIRM, B2KASS);

LABEL ON TABLE BOT2ST
	IS 'Innstillinger for kasseoppgjør pr kasse';
