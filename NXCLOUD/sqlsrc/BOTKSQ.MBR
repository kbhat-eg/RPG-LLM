-- Kasseoppgjør rapport, kommentar

CREATE OR REPLACE TABLE BOTKST( 
 Firma              FOR COLUMN BKFIRM NUMERIC(3, 0) NOT NULL,
 Telling            FOR COLUMN BKTELL NUMERIC(6, 0) NOT NULL,
 Linje              FOR COLUMN BKLINE NUMERIC(6, 0) NOT NULL,
 Tekstlinje         FOR COLUMN BKTEK1 CHAR(80) CCSID 277 DEFAULT ' ',
 OpprettetDato      FOR COLUMN BKODAT DATE NOT NULL DEFAULT CURRENT DATE,
 OpprettetTid       FOR COLUMN BKOTIM TIME NOT NULL DEFAULT CURRENT TIME,
 OpprettetAv        FOR COLUMN BKOUSR CHAR(10) CCSID 277 NOT NULL DEFAULT ' ',
 EndretDato         FOR COLUMN BKEDAT DATE NOT NULL DEFAULT CURRENT DATE,
 EndretTid          FOR COLUMN BKETIM TIME NOT NULL DEFAULT CURRENT TIME,
 EndretAv           FOR COLUMN BKEUSR CHAR(10) CCSID 277 NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

CREATE INDEX BOTKI1
	ON BOTKST (BKFIRM, BKTELL, BKLINE);

CREATE UNIQUE INDEX BOTKIR
	ON BOTKST (BKFIRM, BKTELL, BKLINE);

CREATE INDEX BOTKIU
	ON BOTKST (BKFIRM, BKTELL, BKLINE);

LABEL ON TABLE BOTKST
	IS 'Kasseoppgjør, kommentar';
