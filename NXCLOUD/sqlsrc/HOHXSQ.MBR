-- Hjelpefil HT-Ekspedisjon - temporær løsning før ver. 6.20

CREATE OR REPLACE TABLE HOHXPF( 
 Firma               FOR COLUMN HXFIRM NUMERIC(3, 0) NOT NULL,
 Referansenummer     FOR COLUMN HXREFN NUMERIC(8, 0) NOT NULL,
 Avdeling            FOR COLUMN HXAVDE NUMERIC(4, 0) DEFAULT 0,
 Lager               FOR COLUMN HXLAGE NUMERIC(2, 0) DEFAULT 0,
 OpprettetDato       FOR COLUMN HXEODA DATE NOT NULL DEFAULT CURRENT_DATE,
 OpprettetTid        FOR COLUMN HXEOTI TIME NOT NULL DEFAULT CURRENT_TIME,
 OpprettetAv         FOR COLUMN HXEOUS CHAR(10) NOT NULL DEFAULT ' ',
 EndretDato          FOR COLUMN HXEEDA DATE NOT NULL DEFAULT CURRENT_DATE,
 EndretTid           FOR COLUMN HXEETI TIME NOT NULL DEFAULT CURRENT_TIME,
 EndretAv            FOR COLUMN HXEEUS CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

CREATE UNIQUE INDEX HOHXL1
	ON HOHXPF (HXFIRM, HXREFN);

CREATE UNIQUE INDEX HOHXLR
	ON HOHXPF (HXFIRM, HXREFN);

CREATE UNIQUE INDEX HOHXLU
	ON HOHXPF (HXFIRM, HXREFN);

LABEL ON TABLE HOHXPF
	IS 'Temporær håndterminalfil';
