CREATE OR REPLACE TABLE PAKKSEDDELBESTILLINGSREFERANSE FOR SYSTEM NAME LBREST
(
  UID              FOR COLUMN PBRUID NUMERIC(18, 0) NOT NULL GENERATED ALWAYS
                   AS IDENTITY (START WITH 1 INCREMENT BY 1 CYCLE),
  Firma            FOR COLUMN PBRFIR NUMERIC(3, 0) NOT NULL,
  NXBestNr         FOR COLUMN PBRNUM NUMERIC(8, 0) NOT NULL,
  NXBestSuffiks    FOR COLUMN PBRSUF NUMERIC(2, 0) NOT NULL,
  NXBestLinjeNr    FOR COLUMN PBRLIN NUMERIC(6, 0) NOT NULL,

  Status           FOR COLUMN PBRSTA CHAR(2) NOT NULL DEFAULT ' ',

  OpprettetDato    FOR COLUMN PBRODA DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetKl      FOR COLUMN PBROTI TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN PBROUS CHAR(10) NOT NULL DEFAULT ' ',
  EndretDato       FOR COLUMN PBREDA DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretTid        FOR COLUMN PBRETI TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN PBREUS CHAR(10) NOT NULL DEFAULT ' ')

ON REPLACE PRESERVE ALL ROWS;


CREATE UNIQUE INDEX PAKKSEDDELBESTILLINGSREFERANSE_IU FOR SYSTEM NAME LBREIU ON
                    PAKKSEDDELBESTILLINGSREFERANSE(Firma,NXBestNr,
                    NXBestSuffiks,NXBestLinjeNr);

CREATE UNIQUE INDEX PAKKSEDDELBESTILLINGSREFERANSE_IR FOR SYSTEM NAME LBREIR ON
                    PAKKSEDDELBESTILLINGSREFERANSE(Firma,NXBestNr,
                    NXBestSuffiks,NXBestLinjeNr);

CREATE UNIQUE INDEX PAKKSEDDELBESTILLINGSREFERANSE_I1 FOR SYSTEM NAME LBREI1 ON
                    PAKKSEDDELBESTILLINGSREFERANSE(Firma,NXBestNr,
                    NXBestSuffiks,NXBestLinjeNr);


LABEL ON TABLE PAKKSEDDELBESTILLINGSREFERANSE    IS  'EDI Pakkseddel-Bestilling-
slinje referanse';
LABEL ON INDEX PAKKSEDDELBESTILLINGSREFERANSE_IU IS  'EDI Pakkseddel-Bestilling-
slinje referanse';
LABEL ON INDEX PAKKSEDDELBESTILLINGSREFERANSE_I1 IS  'EDI Pakkseddel-Bestilling-
slinje referanse';
LABEL ON INDEX PAKKSEDDELBESTILLINGSREFERANSE_IR IS  'EDI Pakkseddel-Bestilling-
slinje referanse';
