CREATE OR REPLACE TABLE LXL4ST (
    UID NUMERIC(15, 0) NOT NULL GENERATED ALWAYS AS IDENTITY
        (START WITH 1 INCREMENT BY 1 CYCLE),
    Identnr           FOR COLUMN LX4IDE NUMERIC(10, 0) NOT NULL DEFAULT 0,
    Bruker            FOR COLUMN LX4USR CHAR(10) NOT NULL DEFAULT ' ',
    Navn              FOR COLUMN LX4NAM CHAR(35) NOT NULL DEFAULT ' ',
    Sist_pal_dato     FOR COLUMN LX4PAD DATE NOT NULL DEFAULT CURRENT_DATE,
    Sist_pal_tid      FOR COLUMN LX4PAT TIME NOT NULL DEFAULT CURRENT_TIME,
    Lager             FOR COLUMN LX4LAG NUMERIC(2, 0) NOT NULL DEFAULT 0,
    Avdeling          FOR COLUMN LX4AVD NUMERIC(4, 0) NOT NULL DEFAULT 0,
    PRIMARY KEY(UID))
ON REPLACE PRESERVE ALL ROWS;

LABEL ON TABLE LXL4ST IS 'SlipStream brukerliste';
