-- BETALINGSTRANSER

CREATE OR REPLACE TABLE BBBLST( 
 Firma              FOR COLUMN BEFIRM NUMERIC(3, 0) NOT NULL,
 Kasse              FOR COLUMN BEKASS CHAR(3) CCSID 277 NOT NULL,
 BongNr             FOR COLUMN BEBONG CHAR(12) CCSID 277 DEFAULT ' ',
 Linjenr            FOR COLUMN BELINJ NUMERIC(3, 0) NOT NULL,
 Korttype           FOR COLUMN BETYPE CHAR(3) CCSID 277 DEFAULT ' ',
 RefNummer          FOR COLUMN BEREFN CHAR(64) CCSID 277 DEFAULT ' ',
 KidNummer          FOR COLUMN BEKIDN CHAR(64) CCSID 277 DEFAULT ' ',
 Timestamp          FOR COLUMN BETIMS CHAR(14) CCSID 277 DEFAULT ' ',
 SumBetaling        FOR COLUMN BESUMB NUMERIC(9, 2) NOT NULL,
 OpprettetDato      FOR COLUMN BEODAT DATE NOT NULL DEFAULT CURRENT_DATE,
 OpprettetTid       FOR COLUMN BEOTIM TIME NOT NULL DEFAULT CURRENT_TIME,
 OpprettetAv        FOR COLUMN BEOUSR CHAR(10) CCSID 277 NOT NULL DEFAULT ' ',
 EndretDato         FOR COLUMN BEEDAT DATE NOT NULL DEFAULT CURRENT_DATE,
 EndretTid          FOR COLUMN BEETIM TIME NOT NULL DEFAULT CURRENT_TIME,
 EndretAv           FOR COLUMN BEEUSR CHAR(10) CCSID 277 NOT NULL DEFAULT ' ')
 ON REPLACE PRESERVE ALL ROWS;

CREATE INDEX BBBLI1
	ON BBBLST (BEFIRM, BEBONG, BELINJ);

CREATE INDEX BBBLIR
	ON BBBLST (BEFIRM, BEBONG, BELINJ);

CREATE UNIQUE INDEX BBBLIU
	ON BBBLST (BEFIRM, BEBONG, BELINJ);

LABEL ON TABLE BBBLST
	IS 'Betalingstranser';
