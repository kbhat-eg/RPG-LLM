CREATE OR REPLACE TABLE XLNKST(
  UID              NUMERIC(15, 0) NOT NULL GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  Firmanr          FOR COLUMN XLFIRM NUMERIC(3, 0) NOT NULL,
  Year             FOR COLUMN XLYEAR NUMERIC(4, 0) NOT NULL,
  DocumentNumber   FOR COLUMN XLDOCN NUMERIC(12, 0) NOT NULL,
  BatchNo          FOR COLUMN XLBATC CHAR(50) NOT NULL,
  BatchType        FOR COLUMN XLBATT VARCHAR(50) NOT NULL,
  RefNr            FOR COLUMN XLREFN VARCHAR(256) DEFAULT ' ',
  Timestamp        FOR COLUMN XLSTMP TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  OpprettetDato    FOR COLUMN XLODAT DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetKl      FOR COLUMN XLOTIM TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretDato       FOR COLUMN XLEDAT DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretKl         FOR COLUMN XLETIM TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN XLOUSR CHAR(10) NOT NULL DEFAULT ' ',
  EndretAv         FOR COLUMN XLEUSR CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;


LABEL ON TABLE XLNKST IS 'Arkiv, link til dokument';
