CREATE OR REPLACE TABLE CMAHST(
  UID              NUMERIC(15, 0) NOT NULL GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  Firma            FOR COLUMN CMHFIR NUMERIC(3, 0) NOT NULL DEFAULT 0,
  Malkode          FOR COLUMN CMHKOD CHAR(15) NOT NULL DEFAULT ' ',
  Beskrivelse      FOR COLUMN CMHBES CHAR(30) NOT NULL DEFAULT ' ',
  Sortiment        FOR COLUMN CMHSOR CHAR(15) NOT NULL DEFAULT ' ',
  OpprettetDato    FOR COLUMN CMHODA DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretDato       FOR COLUMN CMHEDA DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretKl         FOR COLUMN CMHETI TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN CMHEUS CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

ALTER TABLE CMAHST ADD CONSTRAINT CMAHPK PRIMARY KEY (UID);
ALTER TABLE CMADST ADD CONSTRAINT CMADFK FOREIGN  KEY (CMAHST_UID)
REFERENCES CMAHST(UID);
CREATE UNIQUE INDEX CMAHIU on CMAHST(CMHFIR,CMHKOD);
CREATE INDEX CMAHIR on CMAHST(CMHFIR,CMHKOD);
CREATE INDEX CMAHI1 on CMAHST(CMHFIR,CMHKOD);

LABEL ON TABLE CMAHST IS 'Mal Hode';
