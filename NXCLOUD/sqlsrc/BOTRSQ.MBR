-- Kasseoppgjør rapport
-- 130912 BOF Utvidet med kode for godkjente

CREATE OR REPLACE TABLE BOTRST( 
 Firma              FOR COLUMN BRFIRM NUMERIC(3, 0) NOT NULL,
 Telling            FOR COLUMN BRTELL NUMERIC(6, 0) NOT NULL,
 StartBeholdning    FOR COLUMN BRSTRT NUMERIC(9, 2) DEFAULT 0,
 SluttBeholdning    FOR COLUMN BRSLUT NUMERIC(9, 2) DEFAULT 0,
 BeregnetBeholdning FOR COLUMN BRBERG NUMERIC(9, 2) DEFAULT 0,
 Differanse         FOR COLUMN BRDIFF NUMERIC(9, 2) DEFAULT 0,
 Macadresse         FOR COLUMN BRMACA CHAR(17) CCSID 277 DEFAULT ' ',
 Godkjent           FOR COLUMN BRGODK NUMERIC(1, 0) DEFAULT 0,
 OpprettetDato      FOR COLUMN BRODAT DATE NOT NULL DEFAULT CURRENT DATE,
 OpprettetTid       FOR COLUMN BROTIM TIME NOT NULL DEFAULT CURRENT TIME,
 OpprettetAv        FOR COLUMN BROUSR CHAR(10) CCSID 277 NOT NULL DEFAULT ' ',
 EndretDato         FOR COLUMN BREDAT DATE NOT NULL DEFAULT CURRENT DATE,
 EndretTid          FOR COLUMN BRETIM TIME NOT NULL DEFAULT CURRENT TIME,
 EndretAv           FOR COLUMN BREUSR CHAR(10) CCSID 277 NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

CREATE INDEX BOTRI3
	ON BOTRST (BRFIRM, BRODAT);

CREATE INDEX BOTRI2
	ON BOTRST (BRFIRM, BRDIFF);

CREATE INDEX BOTRI1
	ON BOTRST (BRFIRM, BRTELL DESC);

CREATE UNIQUE INDEX BOTRIR
	ON BOTRST (BRFIRM, BRTELL);

CREATE INDEX BOTRIU
	ON BOTRST (BRFIRM, BRTELL);

LABEL ON TABLE BOTRST
	IS 'Kasseoppgjør';
