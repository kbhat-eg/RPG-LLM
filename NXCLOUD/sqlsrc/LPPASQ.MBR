CREATE OR REPLACE TABLE PAKKSEDDELPART FOR SYSTEM NAME LPPAST
(
  UID              FOR COLUMN PPPUID NUMERIC(18, 0) NOT NULL GENERATED ALWAYS
                   AS IDENTITY (START WITH 1 INCREMENT BY 1 CYCLE),
  Firma            FOR COLUMN PPFIRM NUMERIC(3, 0) NOT NULL,
  Type             FOR COLUMN PPTYPE CHAR(4) NOT NULL DEFAULT ' ',
  Meldingsnummer   FOR COLUMN PPMNUM NUMERIC(8, 0) NOT NULL,
  Ar               FOR COLUMN PPAARR NUMERIC(4, 0) NOT NULL,
  PakkseddelID     FOR COLUMN PPPAID CHAR(17) NOT NULL DEFAULT ' ',
  Versjonsnummer   FOR COLUMN PPPVER NUMERIC(3, 0) NOT NULL,
  Parttype         FOR COLUMN PPPATY CHAR(2) NOT NULL DEFAULT ' ',

  Status           FOR COLUMN PPSTAT CHAR(2) NOT NULL DEFAULT ' ',
  PartnerID        FOR COLUMN PPPART CHAR(35) NOT NULL DEFAULT ' ',
  PartnerName      FOR COLUMN PPNAVN CHAR(35) NOT NULL DEFAULT ' ',
  Adresse1         FOR COLUMN PPADR1 CHAR(35) NOT NULL DEFAULT ' ',
  Adresse2         FOR COLUMN PPADR2 CHAR(35) NOT NULL DEFAULT ' ',
  Postnummer       FOR COLUMN PPPONR CHAR(35) NOT NULL DEFAULT ' ',
  Sted             FOR COLUMN PPSTED CHAR(35) NOT NULL DEFAULT ' ',
  Landkode         FOR COLUMN PPLAND CHAR(3) NOT NULL DEFAULT ' ',
  Kontaktperson    FOR COLUMN PPKONT CHAR(70) NOT NULL DEFAULT ' ',
  Telefonnummer    FOR COLUMN PPTLNR CHAR(35) NOT NULL DEFAULT ' ',
  Email            FOR COLUMN PPEMAL CHAR(70) NOT NULL DEFAULT ' ',

  OpprettetDato    FOR COLUMN PPODAT DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetKl      FOR COLUMN PPOTIM TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN PPOUSR CHAR(10) NOT NULL DEFAULT ' ',
  EndretDato       FOR COLUMN PPEDAT DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretTid        FOR COLUMN PPETIM TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN PPEUSR CHAR(10) NOT NULL DEFAULT ' ')

ON REPLACE PRESERVE ALL ROWS;

CREATE UNIQUE INDEX PAKKSEDDELPART_IU FOR SYSTEM NAME LPPAIU ON
                    PAKKSEDDELPART(Firma,Type,Meldingsnummer,Ar,Pakkseddelid,
                                   Versjonsnummer,Parttype);

CREATE UNIQUE INDEX PAKKSEDDELPART_I1 FOR SYSTEM NAME LPPAI1 ON
                    PAKKSEDDELPART(Firma,Type,Meldingsnummer,Ar,Pakkseddelid,
                                   Versjonsnummer,Parttype);

CREATE UNIQUE INDEX PAKKSEDDELPART_IR FOR SYSTEM NAME LPPAIR ON
                    PAKKSEDDELPART(Firma,Type,Meldingsnummer,Ar,Pakkseddelid,
                                   Versjonsnummer,Parttype);

LABEL ON TABLE PAKKSEDDELPART      IS 'Pakkseddel parter';
LABEL ON INDEX PAKKSEDDELPART_IU   IS 'Pakkseddel parter';
LABEL ON INDEX PAKKSEDDELPART_I1   IS 'Pakkseddel parter';
LABEL ON INDEX PAKKSEDDELPART_IR   IS 'Pakkseddel parter';
