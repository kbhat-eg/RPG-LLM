-- MALER KOBLINGSTABELL

CREATE OR REPLACE TABLE EMBKST( 
 Firma               FOR COLUMN EMKFIR NUMERIC(3, 0) NOT NULL,
 Bonustype           FOR COLUMN EMKBOT CHAR(2) DEFAULT ' ',
 Malnummer           FOR COLUMN EMKMNR NUMERIC(5, 0) NOT NULL,
 Kundekategori       FOR COLUMN EMKKAT NUMERIC(4, 0) NOT NULL,
 OppdatertDato       FOR COLUMN EMKDAT DATE DEFAULT '0001-01-01',
 OpprettetDato       FOR COLUMN EMKODA DATE NOT NULL DEFAULT CURRENT_DATE,
 OpprettetTid        FOR COLUMN EMKOTI TIME NOT NULL DEFAULT CURRENT_TIME,
 OpprettetAv         FOR COLUMN EMKOUS CHAR(10) NOT NULL DEFAULT ' ',
 EndretDato          FOR COLUMN EMKEDA DATE NOT NULL DEFAULT CURRENT_DATE,
 EndretTid           FOR COLUMN EMKETI TIME NOT NULL DEFAULT CURRENT_TIME,
 EndretAv            FOR COLUMN EMKEUS CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

CREATE UNIQUE INDEX EMBKIU
	ON EMBKST (EMKFIR, EMKBOT, EMKMNR, EMKKAT);

CREATE UNIQUE INDEX EMBKIR
	ON EMBKST (EMKFIR, EMKBOT, EMKMNR, EMKKAT);

CREATE UNIQUE INDEX EMBKI1
	ON EMBKST (EMKFIR, EMKBOT, EMKMNR, EMKKAT);

LABEL ON TABLE EMBKST
	IS 'Maler kundekategori koblingstabell';
