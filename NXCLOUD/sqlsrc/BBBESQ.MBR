CREATE OR REPLACE TABLE BBBEST(
  UID              NUMERIC(18, 0) NOT NULL GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  Firma            FOR COLUMN KKFIRM NUMERIC(3, 0) NOT NULL,
  Bongnr           FOR COLUMN KKBONG CHAR(12) NOT NULL,
  Betalingstype    FOR COLUMN KKBTYP CHAR(32) NOT NULL,
  Betaltsum        FOR COLUMN KKBSUM NUMERIC(9, 2) NOT NULL,
  Betalttid        FOR COLUMN KKTIME TIMESTAMP NOT NULL,
  Opprettettid     FOR COLUMN KKTMST TIMESTAMP NOT NULL FOR EACH ROW ON
                   UPDATE AS ROW CHANGE TIMESTAMP,
  OpprettetAv      FOR COLUMN KKOUSR CHAR(10) NOT NULL DEFAULT ' ',
  OpprettetKl      FOR COLUMN KKOTIM TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetDato    FOR COLUMN KKODAT DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretDato       FOR COLUMN KKEDAT DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretKl         FOR COLUMN KKETIM TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN KKEUSR CHAR(10) NOT NULL DEFAULT ' ')
 ON REPLACE PRESERVE ALL ROWS;

CREATE UNIQUE INDEX BBBEIU ON BBBEST(KKFIRM, KKBONG);

LABEL ON TABLE BBBEST IS 'Betalingstyper pr bong';
