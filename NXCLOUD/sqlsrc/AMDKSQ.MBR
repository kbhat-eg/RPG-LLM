CREATE OR REPLACE TABLE AMDKST(
  UID              NUMERIC(15, 0) NOT NULL GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  Kjedekode        FOR COLUMN AQKJED CHAR(2) NOT NULL DEFAULT ' ',
  Forhandlernr     FOR COLUMN AQFORH CHAR(10) NOT NULL DEFAULT ' ',
  Navn             FOR COLUMN AQNAVN CHAR(80) NOT NULL DEFAULT ' ',
  Beskrivelse      FOR COLUMN AQBESK VARCHAR(256) NOT NULL DEFAULT ' ',
  MimeType         FOR COLUMN AQMIME CHAR(50) NOT NULL DEFAULT ' ',
  OriginalSuffix   FOR COLUMN AQSUFF CHAR(10) NOT NULL DEFAULT ' ',
  FilData          FOR COLUMN AQFILD BLOB(30M),
  OpprettetDato    FOR COLUMN AQODAT DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretDato       FOR COLUMN AQEDAT DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretKl         FOR COLUMN AQETIM TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN AQEUSR CHAR(10) NOT NULL DEFAULT ' ',
  HOVED_KATEGORI_ID FOR COLUMN ADHKID  NUMERIC(15, 0) DEFAULT 0 NOT NULL,
  UNDER_KATEGORI1_ID FOR COLUMN ADK1ID NUMERIC(15, 0) DEFAULT 0 NOT NULL,
  UNDER_KATEGORI2_ID FOR COLUMN ADK2ID NUMERIC(15, 0) DEFAULT 0 NOT NULL)
ON REPLACE PRESERVE ALL ROWS;

ALTER TABLE AMDKST ADD CONSTRAINT AMDKPK PRIMARY KEY (UID);
CREATE UNIQUE INDEX AMDKIU on AMDKST(AQKJED, AQFORH, AQNAVN);
CREATE INDEX AMDKIR on AMDKST(AQKJED, AQFORH, AQNAVN);

LABEL ON TABLE AMDKST IS 'Avtaler og filer';
