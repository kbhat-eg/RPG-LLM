CREATE OR REPLACE TABLE GEDSST(
  UID              FOR COLUMN GEDUID NUMERIC(18, 0) NOT NULL
                   GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  Firma            FOR COLUMN GEDFIR NUMERIC(3, 0) NOT NULL,
  Meldingsnummer   FOR COLUMN GEDNUM NUMERIC(8, 0) NOT NULL,
  Meldingstype     FOR COLUMN GEDTYP CHAR(4) NOT NULL DEFAULT ' ',
  Niva             FOR COLUMN GEDNIV CHAR(1) NOT NULL DEFAULT ' ',
  Statuskode       FOR COLUMN GEDSTA CHAR(1) NOT NULL DEFAULT ' ',
  Beskrivelse      FOR COLUMN GEDBES CHAR(35) NOT NULL DEFAULT ' ',
  OpprettetDato    FOR COLUMN GEDODA DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetTid     FOR COLUMN GEDOTI TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN GEDOUS CHAR(10) NOT NULL DEFAULT ' ',
  SistEndretDat    FOR COLUMN GEDEDA DATE NOT NULL DEFAULT CURRENT_DATE,
  SistEndretTid    FOR COLUMN GEDETI TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN GEDEUS CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

LABEL ON TABLE GEDSST IS 'Statuskoder for EDI meldinger';

CREATE INDEX GEDSIU ON GEDSST(GEDFIR,GEDNUM,GEDTYP,GEDNIV,GEDSTA);
CREATE INDEX GEDSI1 ON GEDSST(GEDFIR,GEDNUM,GEDTYP,GEDNIV,GEDSTA);
CREATE INDEX GEDSIR ON GEDSST(GEDFIR,GEDNUM,GEDTYP,GEDNIV,GEDSTA);
