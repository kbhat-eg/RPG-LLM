CREATE OR REPLACE TABLE BRSTST(
  UID              FOR COLUMN BSTUID NUMERIC(18, 0) NOT NULL
                   GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  WorkMember       FOR COLUMN BSTMEM CHAR(10) NOT NULL DEFAULt ' ',
  WorkLine         FOR COLUMN BSTLIN NUMERIC(8, 0) NOT NULL,
  Lager            FOR COLUMN BSTLAG NUMERIC(2, 0) NOT NULL,
  LagerTekst       FOR COLUMN BSTLTX CHAR(35) NOT NULL DEFAULT ' ',
  LagerID          FOR COLUMN BSTLID CHAR(5) NOT NULL DEFAULT ' ',
  Leverandor       FOR COLUMN BSTLDO NUMERIC(6, 0) NOT NULL,
  LeverandorTekst  FOR COLUMN BSTLDT CHAR(35) NOT NULL DEFAULT ' ',
  Varenummer       FOR COLUMN BSTVAR CHAR(15) NOT NULL DEFAULT ' ',
  VareTekst        FOR COLUMN BSTVTX CHAR(70) NOT NULL DEFAULT ' ',
  Beholdning       FOR COLUMN BSTBEH NUMERIC(11, 3) NOT NULL,
  IBestilling      FOR COLUMN BSTIBE NUMERIC(11, 3) NOT NULL,
  ForsteLevDato    FOR COLUMN BSTFLD DATE NOT NULL DEFAULT CURRENT_DATE,
  IOrdrePassert    FOR COLUMN BSTIOP NUMERIC(11, 3) NOT NULL,
  IOrdre           FOR COLUMN BSTIOR NUMERIC(11, 3) NOT NULL,
  Status           FOR COLUMN BSTSTA NUMERIC(1, 0) NOT NULL,
  OpprettetDato    FOR COLUMN BSTODA DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetKl      FOR COLUMN BSTOTI TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN BSTOUS CHAR(10) NOT NULL DEFAULT ' ')

ON REPLACE PRESERVE ALL ROWS;

  CREATE INDEX BRSTIU
   ON BRSTST (BSTMEM, BSTVAR, BSTLAG);
  CREATE INDEX BRSTIR
   ON BRSTST (BSTMEM, BSTVAR, BSTLAG);

LABEL ON INDEX BRSTIR IS 'Blueridge export stock - workfile';
LABEL ON INDEX BRSTIU IS 'Blueridge export stock - workfile';
LABEL ON TABLE BRSTST IS 'Blueridge export stock - workfile';
