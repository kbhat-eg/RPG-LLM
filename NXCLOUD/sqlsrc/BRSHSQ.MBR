CREATE OR REPLACE TABLE BRSHST(
  UID              FOR COLUMN BRHUID NUMERIC(18, 0) NOT NULL
                   GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  WorkMember       FOR COLUMN BRHMEM CHAR(10) NOT NULL DEFAULt ' ',
  WorkLine         FOR COLUMN BRHLIN NUMERIC(8, 0) NOT NULL,
  Lager            FOR COLUMN BRHLAG NUMERIC(2, 0) NOT NULL,
  LagerTekst       FOR COLUMN BRHLTX CHAR(35) NOT NULL DEFAULT ' ',
  LagerID          FOR COLUMN BRHLID CHAR(5) NOT NULL DEFAULT ' ',
  Varenummer       FOR COLUMN BRHVAR CHAR(15) NOT NULL DEFAULT ' ',
  VareTekst        FOR COLUMN BRHVTX CHAR(70) NOT NULL DEFAULT ' ',
  Periode          FOR COLUMN BRHPER CHAR(10) NOT NULL DEFAULT ' ',
  Leverandor       FOR COLUMN BRHLDO NUMERIC(6, 0) NOT NULL,
  LeverandorTekst  FOR COLUMN BRHLDT CHAR(35) NOT NULL DEFAULT ' ',
  TotaltSalg       FOR COLUMN BRHSQT NUMERIC(11, 3) NOT NULL,
  InternSalg       FOR COLUMN BRHIQT NUMERIC(11, 3) NOT NULL,
  Status           FOR COLUMN BRHSTA NUMERIC(1, 0) NOT NULL,
  OpprettetDato    FOR COLUMN BRHODA DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetKl      FOR COLUMN BRHOTI TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN BRHOUS CHAR(10) NOT NULL DEFAULT ' ')

ON REPLACE PRESERVE ALL ROWS;

  CREATE INDEX BRSHIU
   ON BRSHST (BRHMEM, BRHVAR, BRHLAG, BRHPER);
  CREATE INDEX BRSHIR
   ON BRSHST (BRHMEM, BRHVAR, BRHLAG, BRHPER);

LABEL ON INDEX BRSHIR IS 'Blueridge export invoice history - workfile';
LABEL ON INDEX BRSHIU IS 'Blueridge export invoice history - workfile';
LABEL ON TABLE BRSHST IS 'Blueridge export invoice history - workfile';
