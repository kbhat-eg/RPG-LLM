CREATE OR REPLACE TABLE RA61ST(
  UID              FOR COLUMN RVHUID NUMERIC(18, 0) NOT NULL
                   GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  Firma            FOR COLUMN RVHFIR NUMERIC(3, 0) NOT NULL,
  Valutakode       FOR COLUMN RVHVAL CHAR(3) NOT NULL DEFAULT ' ',
  Dato             FOR COLUMN RVHDAT DATE NOT NULL DEFAULT CURRENT_DATE,
  Tid              FOR COLUMN RVHTID TIME NOT NULL DEFAULT CURRENT_TIME,
  Nykurs           FOR COLUMN RVHNKU NUMERIC(10, 6) NOT NULL,
  Gmlkurs          FOR COLUMN RVHGKU NUMERIC(10, 6) NOT NULL,
  EndretAv         FOR COLUMN RVHEUS CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

LABEL ON TABLE RA61ST IS 'Historisk valutakurs tabell';

CREATE UNIQUE INDEX RA61IU ON RA61ST(RVHUID);
CREATE INDEX RA61I1 ON RA61ST(RVHUID);
CREATE INDEX RA61IR ON RA61ST(RVHUID);
CREATE INDEX RA61I2 ON RA61ST(RVHFIR,RVHVAL,RVHDAT DESC,RVHTID DESC);

