CREATE OR REPLACE TABLE FRONT_PAKKSEDDELLINJE FOR SYSTEM NAME XPKLST
(
  Firma            FOR COLUMN XLFIRM NUMERIC(3, 0) NOT NULL,
  Guid             FOR COLUMN XLGUID CHAR(40) NOT NULL DEFAULT ' ',
  LinjeNummer      FOR COLUMN XLLINR NUMERIC(6, 0) NOT NULL,

  SSCCKode         FOR COLUMN XLSSCC NUMERIC(18, 0) NOT NULL,
  GTINnummer       FOR COLUMN XLGTIN CHAR(14) NOT NULL DEFAULT ' ',
  LevVarenummer    FOR COLUMN XLLVAR CHAR(35) NOT NULL DEFAULT ' ',
  NOBBnummer       FOR COLUMN XLNOBB NUMERIC(8, 0) NOT NULL,
  TUNnummer        FOR COLUMN XLTUNN CHAR(35) NOT NULL DEFAULT ' ',
  FINFOnummer      FOR COLUMN XLFINF CHAR(35) NOT NULL DEFAULT ' ',
  ArtikkelNavn     FOR COLUMN XLNAVN CHAR(70) NOT NULL DEFAULT ' ',
  BestiltAntall    FOR COLUMN XLBANT NUMERIC(15, 4) NOT NULL,
  BestiltEnhet     FOR COLUMN XLBENH CHAR(3) NOT NULL DEFAULT ' ',
  PakkseddelAntall FOR COLUMN XLPANT NUMERIC(15, 4) NOT NULL,
  PakkseddelEnhet  FOR COLUMN XLPENH CHAR(3) NOT NULL DEFAULT ' ',
  RestetAntall     FOR COLUMN XLRANT NUMERIC(15, 4) NOT NULL,
  RestetEnhet      FOR COLUMN XLRENH CHAR(3) NOT NULL DEFAULT ' ',
  RestetKode       FOR COLUMN XLRKOD CHAR(3) NOT NULL DEFAULT ' ',
  RestetArsak      FOR COLUMN XLRBES CHAR(70) NOT NULL DEFAULT ' ',
  RestetLevDato    FOR COLUMN XLRDAT DATE NOT NULL DEFAULT CURRENT_DATE,
  BestillingsNr    FOR COLUMN XLBNUM CHAR(17) NOT NULL DEFAULT ' ',
  BestNrLinje      FOR COLUMN XLBLIN NUMERIC(6, 0) NOT NULL)

ON REPLACE PRESERVE ALL ROWS;

LABEL ON TABLE FRONT_PAKKSEDDELLINJE IS 'Pakkseddel kolli linjer - forsystem';
