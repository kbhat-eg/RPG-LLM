CREATE OR REPLACE TABLE LEDSST
(
  UID              FOR COLUMN LDSUID NUMERIC(18, 0) NOT NULL GENERATED ALWAYS
                   AS IDENTITY (START WITH 1 INCREMENT BY 1 CYCLE),
  Firma            FOR COLUMN LDSFIR NUMERIC(3, 0) NOT NULL,
  NXBestNr         FOR COLUMN LDSNUM NUMERIC(8, 0) NOT NULL,
  NXBestSuffiks    FOR COLUMN LDSSUF NUMERIC(2, 0) NOT NULL,
  NXBestLinjeNr    FOR COLUMN LDSLIN NUMERIC(4, 0) NOT NULL,
  GTINNummer       FOR COLUMN LDSGTI NUMERIC(14, 0) NOT NULL,
  NOBBNummer       FOR COLUMN LDSNOB NUMERIC(8, 0) NOT NULL,
  Enhet            FOR COLUMN LDSENH CHAR(3) NOT NULL,
  NXOrdrenummer    FOR COLUMN LDSONU NUMERIC(8, 0) NOT NULL,
  NXOrdresuffiks   FOR COLUMN LDSOSU NUMERIC(2, 0) NOT NULL,
  NXOrdrelinje     FOR COLUMN LDSOLI NUMERIC(4, 0) NOT NULL,

  OpprettetDato    FOR COLUMN LDSODA DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetKl      FOR COLUMN LDSOTI TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN LDSOUS CHAR(10) NOT NULL DEFAULT ' ')

ON REPLACE PRESERVE ALL ROWS;

CREATE UNIQUE INDEX LEDSIU ON LEDSST(Firma,NXBestNr,
                    NXBestSuffiks,NXBestLinjeNr);

LABEL ON TABLE LEDSST IS 'EDI Fakturalinjer - arbeidstabell';
LABEL ON INDEX LEDSIU IS 'EDI Fakturalinjer - arbeidstabell';
