CREATE OR REPLACE TABLE RLOHST(
  UID              FOR COLUMN RLHOID NUMERIC(18, 0) NOT NULL
                   GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  Firma            FOR COLUMN RLHFIR NUMERIC(3, 0) NOT NULL,
  Transtype        FOR COLUMN RLHTYP CHAR(4) NOT NULL DEFAULT ' ',
  Tid_dannet       FOR COLUMN RLHTS1 TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  Sum_dannet       FOR COLUMN RLHBS1 NUMERIC(12, 2) NOT NULL,
  Bruker_dannet    FOR COLUMN RLHBR1 CHAR(10) NOT NULL DEFAULT ' ',
  Tid_overfort     FOR COLUMN RLHTS2 TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  Sum_overfort     FOR COLUMN RLHBS2 NUMERIC(12, 2) NOT NULL,
  Bruker_overfort  FOR COLUMN RLHBR2 CHAR(10) NOT NULL DEFAULT ' ',
  Feil_overfort    FOR COLUMN RLHFL2 CHAR(2) NOT NULL DEFAULT ' ',
  Tid_kladd        FOR COLUMN RLHTS3 TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  Sum_kladd        FOR COLUMN RLHBS3 NUMERIC(12, 2) NOT NULL,
  Bruker_kladd     FOR COLUMN RLHBR3 CHAR(10) NOT NULL DEFAULT ' ',
  Feil_kladd       FOR COLUMN RLHFL3 CHAR(2) NOT NULL DEFAULT ' ',
  Tid_journ        FOR COLUMN RLHTS4 TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  Sum_journ        FOR COLUMN RLHBS4 NUMERIC(12, 2) NOT NULL,
  Bruker_journ     FOR COLUMN RLHBR4 CHAR(10) NOT NULL DEFAULT ' ',
  Feil_journ       FOR COLUMN RLHFL4 CHAR(2) NOT NULL DEFAULT ' ',
  Tid_omkjor       FOR COLUMN RLHTS5 TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  Bruker_omkjor    FOR COLUMN RLHBR5 CHAR(10) NOT NULL DEFAULT ' ',
  Tid_slett        FOR COLUMN RLHTS6 TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  Bruker_slett     FOR COLUMN RLHBR6 CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

LABEL ON TABLE RLOHST IS 'Regnskapstranslogg hode';

CREATE UNIQUE INDEX RLOHIU ON RLOHST(RLHFIR,RLHTS1);
CREATE INDEX RLOHIR ON RLOHST(RLHFIR,RLHTS1 DESC);
CREATE INDEX RLOHI1 ON RLOHST(RLHFIR,RLHTS1 DESC);
CREATE INDEX RLOHI2 ON RLOHST(RLHFIR,RLHTYP,RLHTS1 DESC);

