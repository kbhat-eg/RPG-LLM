CREATE OR REPLACE TABLE IORDST(
  UID              INTEGER GENERATED ALWAYS AS IDENTITY,
  Company          FOR COLUMN IOFIRM NUMERIC(3, 0) NOT NULL,
  Bilagsnummer     FOR COLUMN IOBILN NUMERIC(8, 0) NOT NULL,
  Bilagsdato       FOR COLUMN IOBDAT DATE NOT NULL,
  Forfallsdato     FOR COLUMN IOFDAT DATE NOT NULL,
  Bilagskode       FOR COLUMN IOBILK NUMERIC(2, 0) NOT NULL,
  Bilagstekst      FOR COLUMN IOTEXT CHAR(20) NOT NULL DEFAULT,
  Debetavd         FOR COLUMN IODAVD NUMERIC(4, 0) NOT NULL,
  Debetkonto       FOR COLUMN IODKTO NUMERIC(6, 0) NOT NULL,
  Debetspes        FOR COLUMN IODSPS NUMERIC(4, 0) NOT NULL,
  Debetmvakode     FOR COLUMN IODMOM CHAR(1) NOT NULL DEFAULT,
  Kreditavd        FOR COLUMN IOCAVD NUMERIC(4, 0) NOT NULL,
  Kredittonto      FOR COLUMN IOCKTO NUMERIC(6, 0) NOT NULL,
  Kreditspes       FOR COLUMN IOCSPS NUMERIC(4, 0) NOT NULL,
  Kreditmvakode    FOR COLUMN IOCMOM CHAR(1) NOT NULL DEFAULT,
  Belop            FOR COLUMN IOBELP NUMERIC(10, 2) NOT NULL,
  Mvagrunnlag      FOR COLUMN IOMVAG NUMERIC(10, 2) NOT NULL,
  Kundenummer      FOR COLUMN IOKUND NUMERIC(6, 0) NOT NULL,
  Kreditreferanse  FOR COLUMN IOKREF NUMERIC(8, 0) NOT NULL,
  Kid              FOR COLUMN IOKIDI CHAR(25) NOT NULL DEFAULT,
  Kortkid          FOR COLUMN IOKIDR CHAR(9) NOT NULL DEFAULT,
  Valutakode       FOR COLUMN IOVALK CHAR(3) NOT NULL DEFAULT,
  Valutabelop      FOR COLUMN IOVALB NUMERIC(11, 2) NOT NULL,
  Prosjekt         FOR COLUMN IOPROJ CHAR(6) NOT NULL DEFAULT,
  Aktivitet        FOR COLUMN IOAKTI CHAR(6) NOT NULL DEFAULT,
  OpprettetDato    FOR COLUMN IOODAT DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetKl      FOR COLUMN IOOTIM TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN IOOUSR CHAR(10) NOT NULL DEFAULT 'NXSYSTEM',
  Underprosjekt    FOR COLUMN IOUPRO CHAR(6) NOT NULL DEFAULT,
  Transaksjonstype FOR COLUMN IOTYPE CHAR(4) NOT NULL DEFAULT,
  Betbet           FOR COLUMN IOBETB NUMERIC(2, 0) NOT NULL,
  Lest_flagg       FOR COLUMN IOFLAG CHAR(1) NOT NULL DEFAULT,
  Depositum        FOR COLUMN IODEPO CHAR(1) NOT NULL DEFAULT,
  Bokforingsdato   FOR COLUMN IOBODA DATE NOT NULL)
ON REPLACE PRESERVE ALL ROWS;

ALTER TABLE IORDST ADD CONSTRAINT IO_UID PRIMARY KEY (UID);

LABEL ON TABLE IORDST IS 'Regnskapstranser fra ordre til NAV';
