-- Kasseoppgjør rapport, LINJE

CREATE OR REPLACE TABLE BOTLST( 
 Firma              FOR COLUMN BLFIRM NUMERIC(3, 0) NOT NULL,
 Telling            FOR COLUMN BLTELL NUMERIC(6, 0) NOT NULL,
 Bongnr             FOR COLUMN BLBONG CHAR(12) CCSID 277 DEFAULT ' ',
 BeholdTrans        FOR COLUMN BLBTRA CHAR(12) CCSID 277 DEFAULT ' ',
 OpprettetDato      FOR COLUMN BLODAT DATE NOT NULL DEFAULT CURRENT DATE,
 OpprettetTid       FOR COLUMN BLOTIM TIME NOT NULL DEFAULT CURRENT TIME,
 OpprettetAv        FOR COLUMN BLOUSR CHAR(10) CCSID 277 NOT NULL DEFAULT ' ',
 EndretDato         FOR COLUMN BLEDAT DATE NOT NULL DEFAULT CURRENT DATE,
 EndretTid          FOR COLUMN BLETIM TIME NOT NULL DEFAULT CURRENT TIME,
 EndretAv           FOR COLUMN BLEUSR CHAR(10) CCSID 277 NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

CREATE INDEX BOTLI1
	ON BOTLST (BLFIRM, BLTELL, BLBONG);

CREATE UNIQUE INDEX BOTLIR
	ON BOTLST (BLFIRM, BLTELL, BLBONG, BLBTRA);

CREATE INDEX BOTLIU
	ON BOTLST (BLFIRM, BLTELL, BLBONG);

LABEL ON TABLE BOTLST
	IS 'Kasseoppgjør, linjer';
