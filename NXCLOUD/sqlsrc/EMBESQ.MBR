-- Bonus maler

CREATE OR REPLACE TABLE EMBEST( 
 Firma               FOR COLUMN EMEFIR NUMERIC(3, 0) NOT NULL,
 Bonustype           FOR COLUMN EMEBOT CHAR(2) DEFAULT ' ',
 Malnummer           FOR COLUMN EMEMNR NUMERIC(5, 0) NOT NULL,
 Overgruppe          FOR COLUMN EMEOGR NUMERIC(2, 0) DEFAULT 0,
 Hovedgruppe         FOR COLUMN EMEHGR NUMERIC(2, 0) DEFAULT 0,
 Undergruppe         FOR COLUMN EMEUGR NUMERIC(3, 0) DEFAULT 0,
 Leverandor          FOR COLUMN EMELDO NUMERIC(6, 0) DEFAULT 0,
 Modulnr             FOR COLUMN EMEMOD NUMERIC(8, 0) DEFAULT 0,
 Varenr              FOR COLUMN EMEVAR CHAR(15) DEFAULT ' ',
 Enhet               FOR COLUMN EMEENH CHAR(3) DEFAULT ' ',
 Leveringstype       FOR COLUMN EMELET NUMERIC(1, 0) DEFAULT 0,
 FraDato             FOR COLUMN EMEFDA DATE DEFAULT '0001-01-01',
 TilDato             FOR COLUMN EMETDA DATE DEFAULT '0001-01-01',
 Merknad             FOR COLUMN EMEMRK CHAR(50) DEFAULT ' ',
 Bonusbyggende       FOR COLUMN EMEBYG NUMERIC(1, 0) DEFAULT 0,
 OpprettetDato       FOR COLUMN EMEODA DATE NOT NULL DEFAULT CURRENT_DATE,
 OpprettetTid        FOR COLUMN EMEOTI TIME NOT NULL DEFAULT CURRENT_TIME,
 OpprettetAv         FOR COLUMN EMEOUS CHAR(10) NOT NULL DEFAULT ' ',
 EndretDato          FOR COLUMN EMEEDA DATE NOT NULL DEFAULT CURRENT_DATE,
 EndretTid           FOR COLUMN EMEETI TIME NOT NULL DEFAULT CURRENT_TIME,
 EndretAv            FOR COLUMN EMEEUS CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

CREATE UNIQUE INDEX EMBEIU
	ON EMBEST (EMEFIR, EMEBOT, EMEMNR, EMEOGR, EMEHGR, EMEUGR, EMELDO,
	           EMEMOD, EMEVAR, EMEENH, EMELET, EMEFDA, EMETDA);

CREATE UNIQUE INDEX EMBEIR
	ON EMBEST (EMEFIR, EMEBOT, EMEMNR, EMEOGR, EMEHGR, EMEUGR, EMELDO,
	           EMEMOD, EMEVAR, EMEENH, EMELET, EMEFDA, EMETDA);

CREATE UNIQUE INDEX EMBEI1
	ON EMBEST (EMEFIR, EMEBOT, EMEMNR, EMEOGR, EMEHGR, EMEUGR, EMELDO,
	           EMEMOD, EMEVAR, EMEENH, EMELET, EMEFDA, EMETDA);

LABEL ON TABLE EMBEST
	IS 'Bonus elementdetaljer maler';
