CREATE OR REPLACE TABLE TRANSPORT_INFO FOR SYSTEM NAME FTRPST
(
  UID              FOR COLUMN FRTUID NUMERIC(18, 0) NOT NULL
                   GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  Firmanummer      FOR COLUMN FTRFIR NUMERIC(3, 0) NOT NULL,
  OrdreId          FOR COLUMN FTROID CHAR(35) NOT NULL,
  Ordrenummer      FOR COLUMN FTRNUM NUMERIC(8, 0) NOT NULL,
  Ordresuffiks     FOR COLUMN FTRSUF NUMERIC(2, 0) NOT NULL,
  ConsRef          FOR COLUMN FTRCRE CHAR(20) NOT NULL,
  Status           FOR COLUMN FTRSTA CHAR(10) NOT NULL DEFAULT ' ',
  AntallKolli      FOR COLUMN FTRAKO NUMERIC(5, 0) NOT NULL,
  EndretDato       FOR COLUMN FTREDA DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretKl         FOR COLUMN FTRETI TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN FTREUS CHAR(10) NOT NULL DEFAULT ' ',
  OpprettetDato    FOR COLUMN FTRODA DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetKl      FOR COLUMN FTROTI TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN FTROUS CHAR(10) NOT NULL DEFAULT ' ')

ON REPLACE PRESERVE ALL ROWS;

  CREATE INDEX FTRPIU
   ON FTRPST (FTRFIR, FTROID);

  CREATE INDEX FTRPIR
   ON FTRPST (FTRFIR, FTROID);

  CREATE INDEX FTRPI1
   ON FTRPST (FTRFIR, FTROID);

  CREATE INDEX FTRPI2
   ON FTRPST (FTRFIR, FTRNUM, FTRSUF);

LABEL ON INDEX FTRPIU IS 'Transport information - firm/oid';
LABEL ON INDEX FTRPIR IS 'Transport information - firm/oid';
LABEL ON INDEX FTRPI1 IS 'Transport information - firm/oid';
LABEL ON INDEX FTRPI2 IS 'Transport information - firm/numm/suff';
LABEL ON TABLE FTRPST IS 'Transport information';
