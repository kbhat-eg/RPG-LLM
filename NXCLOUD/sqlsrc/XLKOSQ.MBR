CREATE OR REPLACE TABLE XLKOST(
  UID              NUMERIC(15, 0) NOT NULL GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  Firmanr          FOR COLUMN XOFIRM NUMERIC(3, 0) NOT NULL,
  Year             FOR COLUMN XOYEAR NUMERIC(4, 0) NOT NULL,
  DocumentNumber   FOR COLUMN XODOCN NUMERIC(12, 0) NOT NULL,
  Suffix           FOR COLUMN XOSUFF NUMERIC(2, 0) NOT NULL,
  BatchNo          FOR COLUMN XOBATC CHAR(50) NOT NULL,
  BatchType        FOR COLUMN XOBATT VARCHAR(50) NOT NULL,
  RefNr            FOR COLUMN XOREFN VARCHAR(256) DEFAULT ' ',
  Timestamp        FOR COLUMN XOSTMP TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  OpprettetDato    FOR COLUMN XOODAT DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetKl      FOR COLUMN XOOTIM TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretDato       FOR COLUMN XOEDAT DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretKl         FOR COLUMN XOETIM TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN XOOUSR CHAR(10) NOT NULL DEFAULT ' ',
  EndretAv         FOR COLUMN XOEUSR CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;


LABEL ON TABLE XLKOST IS 'Arkiv, link til ordredokument';
