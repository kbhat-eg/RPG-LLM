CREATE OR REPLACE TABLE LXL1ST (
    UID NUMERIC(15, 0) NOT NULL GENERATED ALWAYS AS IDENTITY
        (START WITH 1 INCREMENT BY 1 CYCLE),
    Identnr           FOR COLUMN LXLIDE NUMERIC(10, 0) NOT NULL DEFAULT 0,
    Firma             FOR COLUMN LXLFIR NUMERIC(3, 0) NOT NULL DEFAULT 0,
    Overgruppe        FOR COLUMN LXLOGR NUMERIC(2, 0) NOT NULL DEFAULT 0,
    Hovedgruppe       FOR COLUMN LXLHGR NUMERIC(2, 0) NOT NULL DEFAULT 0,
    Undergruppe       FOR COLUMN LXLUGR NUMERIC(3, 0) NOT NULL DEFAULT 0,
    Lager             FOR COLUMN LXLLAG NUMERIC(2, 0) NOT NULL DEFAULT 0,
    NOBBnummer        FOR COLUMN LXLNOB NUMERIC(8, 0) NOT NULL DEFAULT 0,
    Varenummer        FOR COLUMN LXLVAR CHAR(15) NOT NULL DEFAULT ' ',
    Varetekst1        FOR COLUMN LXLTX1 CHAR(35) NOT NULL DEFAULT ' ',
    Varetekst2        FOR COLUMN LXLTX2 CHAR(35) NOT NULL DEFAULT ' ',
    Enhet             FOR COLUMN LXLENH CHAR(3) NOT NULL DEFAULT ' ',
    Salgspris         FOR COLUMN LXLSAP NUMERIC(9, 2) DEFAULT 0,
    Kostpris          FOR COLUMN LXLKOS NUMERIC(9, 2) DEFAULT 0,
    Gjkostpris        FOR COLUMN LXLGKP NUMERIC(9, 2) DEFAULT 0,
    Kvantum           FOR COLUMN LXLQTY NUMERIC(11, 2) DEFAULT 0,
    Verdi             FOR COLUMN LXLVER NUMERIC(13, 2) DEFAULT 0,
    Kostverdi         FOR COLUMN LXLKVE NUMERIC(13, 2) DEFAULT 0,
    Gjkostverdi       FOR COLUMN LXLGKV NUMERIC(11, 2) DEFAULT 0,
    Transdato         FOR COLUMN LXLTDA DATE NOT NULL DEFAULT CURRENT_DATE,
    PRIMARY KEY(UID))
ON REPLACE PRESERVE ALL ROWS;

LABEL ON TABLE LXL1ST IS 'SlipStream lagerverdiliste';
