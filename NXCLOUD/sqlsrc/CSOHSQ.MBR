CREATE OR REPLACE TABLE CSOHST(
  UID              NUMERIC(15, 0) NOT NULL GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  Firma            FOR COLUMN CSHFIR NUMERIC(3, 0) NOT NULL DEFAULT 0,
  Sortimentskode   FOR COLUMN CSHKOD CHAR(15) NOT NULL DEFAULT ' ',
  Beskrivelse      FOR COLUMN CSHBES CHAR(30) NOT NULL DEFAULT ' ',
  Sortimentstype   FOR COLUMN CSHTYP CHAR(15) NOT NULL DEFAULT ' ',
  Kundekategori    FOR COLUMN CSHKAT NUMERIC(4, 0) NOT NULL DEFAULT 0,
  Distrikt         FOR COLUMN CSHDIS NUMERIC(4, 0) NOT NULL DEFAULT 0,
  Lager            FOR COLUMN CSHLAG NUMERIC(2, 0) NOT NULL DEFAULT 0,
  CSOHST_UID       NUMERIC(15, 0),
  OpprettetDato    FOR COLUMN CSHODA DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretDato       FOR COLUMN CSHEDA DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretKl         FOR COLUMN CSHETI TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN CSHEUS CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

ALTER TABLE CSOHST ADD CONSTRAINT CSOHPK PRIMARY KEY (UID);
ALTER TABLE CSOHST ADD CONSTRAINT CSOHST_UID FOREIGN KEY (CSOHST_UID)
REFERENCES CSOHST (UID);
ALTER TABLE CSODST ADD CONSTRAINT CSODFK FOREIGN  KEY (CSOHST_UID)
REFERENCES CSOHST(UID);
CREATE UNIQUE INDEX CSOHIU on CSOHST(CSHFIR,CSHKOD);
CREATE INDEX CSOHIR on CSOHST(CSHFIR,CSHKOD);
CREATE INDEX CSOHI1 on CSOHST(CSHFIR,CSHKOD);

LABEL ON TABLE CSOHST IS 'Sortiment Hode';
