-- BETALINGSTRANSER

CREATE OR REPLACE TABLE BOBLST( 
 Firma              FOR COLUMN BJFIRM NUMERIC(3, 0) NOT NULL,
 Kasse              FOR COLUMN BJKASS CHAR(3) CCSID 277 NOT NULL,
 Aar                FOR COLUMN BJAARR NUMERIC(4, 0) NOT NULL,
 BongNr             FOR COLUMN BJBONG CHAR(12) CCSID 277 DEFAULT ' ',
 Linjenr            FOR COLUMN BJLINJ NUMERIC(3, 0) NOT NULL,
 Korttype           FOR COLUMN BJTYPE CHAR(3) CCSID 277 DEFAULT ' ',
 RefNummer          FOR COLUMN BJREFN CHAR(14) CCSID 277 DEFAULT ' ',
 Timestamp          FOR COLUMN BJTIMS CHAR(14) CCSID 277 DEFAULT ' ',
 SumBetaling        FOR COLUMN BJSUMB NUMERIC(9, 2) NOT NULL,
 OpprettetDato      FOR COLUMN BJODAT DATE DEFAULT CURRENT_DATE,
 OpprettetTid       FOR COLUMN BJOTIM TIME DEFAULT CURRENT_TIME,
 OpprettetAv        FOR COLUMN BJOUSR CHAR(10) CCSID 277 DEFAULT ' ',
 EndretDato         FOR COLUMN BJEDAT DATE DEFAULT CURRENT_DATE,
 EndretTid          FOR COLUMN BJETIM TIME DEFAULT CURRENT_TIME,
 EndretAv           FOR COLUMN BJEUSR CHAR(10) CCSID 277 DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

CREATE INDEX BOBLI2
	ON BOBLST (BJFIRM, BJAARR, BJBONG);

CREATE INDEX BOBLI1
	ON BOBLST (BJFIRM, BJKASS, BJAARR, BJBONG, BJLINJ);

CREATE INDEX BOBLIR
	ON BOBLST (BJFIRM, BJKASS, BJAARR, BJBONG, BJLINJ);

CREATE UNIQUE INDEX BOBLIU
	ON BOBLST (BJFIRM, BJKASS, BJAARR, BJBONG, BJLINJ);

LABEL ON TABLE BOBLST
	IS 'Betalingstranser, bong';
