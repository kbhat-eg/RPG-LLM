CREATE OR REPLACE TABLE ORDREBETALINGSTRANSER FOR SYSTEM NAME ORBTST
(
  UID           FOR COLUMN ORBUID
                BIGINT NOT NULL GENERATED ALWAYS AS IDENTITY,
  FIRMA         FOR COLUMN ORBFIR NUMERIC(3, 0) NOT NULL DEFAULT 0,
  ORDRENUMMER   FOR COLUMN ORBNUM NUMERIC(8, 0) NOT NULL DEFAULT 0,
  SUFFIX        FOR COLUMN ORBSUF NUMERIC(2, 0) NOT NULL DEFAULT 0,
  BETALINGSTYPE FOR COLUMN ORBBTY VARCHAR(50) NOT NULL DEFAULT ' ',
  BETALINGSREF  FOR COLUMN ORBREF VARCHAR(256) NOT NULL DEFAULT ' ',
  ORDRESUM      FOR COLUMN ORBSUM NUMERIC(9, 2)  NOT NULL DEFAULT 0,
  EPOST         FOR COLUMN ORBEMA VARCHAR(256) NOT NULL DEFAULT ' ',
  MOBIL         FOR COLUMN ORBMOB VARCHAR(256) NOT NULL DEFAULT ' ',
  OPPRETTETTID  FOR COLUMN ORBODA TIMESTAMP DEFAULT CURRENT_TIMESTAMP NOT NULL,
  OPPRETTETAV   FOR COLUMN ORBOUS VARCHAR(50) DEFAULT USER NOT NULL,
  ENDRETTID     FOR COLUMN ORBEDA TIMESTAMP DEFAULT CURRENT_TIMESTAMP NOT NULL)
ON REPLACE PRESERVE ALL ROWS;


CREATE UNIQUE INDEX ORDREBETALINGSTRANSER_IU FOR SYSTEM NAME ORBTIU ON
                    ORDREBETALINGSTRANSER(UID);

CREATE INDEX ORDREBETALINGSTRANSER_I1 FOR SYSTEM NAME ORBTI1 ON
                    ORDREBETALINGSTRANSER(FIRMA,ORDRENUMMER,SUFFIX);

LABEL ON TABLE ORBTST IS 'Ordrebetalingstranser';
