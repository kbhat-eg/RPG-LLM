CREATE OR REPLACE TABLE VTKOST(
  UID              FOR COLUMN TKOUID NUMERIC(18, 0) NOT NULL
                   GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  Firma            FOR COLUMN VTOFIR NUMERIC(3, 0) NOT NULL,
  Kampanje         FOR COLUMN VTOKAM CHAR(5) NOT NULL DEFAULT ' ',
  Kundekategori    FOR COLUMN VTOKKA NUMERIC(4, 0) NOT NULL,
  Rabattkategori   FOR COLUMN VTORKA NUMERIC(3, 0) NOT NULL,
  OpprettetDato    FOR COLUMN VTOODA DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetTid     FOR COLUMN VTOOTI TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN VTOOUS CHAR(10) NOT NULL DEFAULT ' ',
  SistEndretDat    FOR COLUMN VTOEDA DATE NOT NULL DEFAULT CURRENT_DATE,
  SistEndretTid    FOR COLUMN VTOETI TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN VTOEUS CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

LABEL ON TABLE VTKOST IS 'Tilbud koblingstabell kund.kat/rab.kat';

CREATE INDEX VTKOIU ON VTKOST(VTOFIR,VTOKAM,VTOKKA,VTORKA);
CREATE INDEX VTKOI1 ON VTKOST(VTOFIR,VTOKAM,VTOKKA,VTORKA);
CREATE INDEX VTKOIR ON VTKOST(VTOFIR,VTOKAM,VTOKKA,VTORKA);
