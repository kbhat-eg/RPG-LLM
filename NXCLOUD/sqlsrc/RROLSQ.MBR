CREATE OR REPLACE TABLE RROLST(
  UID              FOR COLUMN THLUID NUMERIC(18, 0) NOT NULL
                   GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  Firma            FOR COLUMN RROFIR NUMERIC(3, 0) NOT NULL,
  Rolle            FOR COLUMN RROROL CHAR(20) NOT NULL DEFAULT ' ',
  Beskrivelse      FOR COLUMN RROBES CHAR(70) NOT NULL DEFAULT ' ',
  SistEndretDat    FOR COLUMN RROEDA DATE NOT NULL DEFAULT CURRENT_DATE,
  SistEndretTid    FOR COLUMN RROETI TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN RROEUS CHAR(10) NOT NULL DEFAULT ' ',
  OpprettetDato    FOR COLUMN RROODA DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetTid     FOR COLUMN RROOTI TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN RROOUS CHAR(10) NOT NULL DEFAULT ' ')

ON REPLACE PRESERVE ALL ROWS;

LABEL ON TABLE RROLST IS 'Felles - personroller';

CREATE UNIQUE INDEX RROLIU ON RROLST(RROFIR,RROROL);
CREATE INDEX RROLI1 ON RROLST(RROFIR,RROROL);
CREATE INDEX RROLIR ON RROLST(RROFIR,RROROL);

