CREATE OR REPLACE TABLE CKAHST(
  UID              NUMERIC(15, 0) NOT NULL GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  Firma            FOR COLUMN CKHFIR NUMERIC(3, 0) NOT NULL DEFAULT 0,
  Kampanjekode     FOR COLUMN CKHKOD CHAR(15) NOT NULL DEFAULT ' ',
  Beskrivelse      FOR COLUMN CKHBES CHAR(30) NOT NULL DEFAULT ' ',
  Ansvarlig        FOR COLUMN CKHANS CHAR(15) NOT NULL DEFAULT ' ',
  Fradat           FOR COLUMN CKHFDA DATE NOT NULL DEFAULT CURRENT_DATE,
  Tildat           FOR COLUMN CKHTDA DATE NOT NULL DEFAULT CURRENT_DATE,
  Overfort         FOR COLUMN CKHOVF DATE  NOT NULL,
  Kampanjebilde    FOR COLUMN CKHBLD BLOB(20M) DEFAULT NULL,
  Kampanjetekst    FOR COLUMN CKHTEK VARCHAR(2000) NOT NULL DEFAULT ' ',
  OpprettetDato    FOR COLUMN CKHODA DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretDato       FOR COLUMN CKHEDA DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretKl         FOR COLUMN CKHETI TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN CKHEUS CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

ALTER TABLE CKAHST ADD CONSTRAINT CKAHPK PRIMARY KEY (UID);
ALTER TABLE CKADST ADD CONSTRAINT CKADFK FOREIGN  KEY (CKAHST_UID)
REFERENCES CKAHST(UID);

CREATE UNIQUE INDEX CKAHIU on CKAHST(CKHFIR,CKHKOD);
CREATE INDEX CKAHIR on CKAHST(CKHFIR,CKHKOD);
CREATE INDEX CKAHI1 on CKAHST(CKHFIR,CKHKOD);

LABEL ON TABLE CKAHST IS 'Kampanje Hode';
