CREATE OR REPLACE TABLE ZKUNST(
  Instans          FOR COLUMN ZKINST CHAR(10) CCSID 277 NOT NULL,
  Firma            FOR COLUMN ZKFIRM NUMERIC(3, 0) NOT NULL,
  Kundenummer      FOR COLUMN ZKKUND NUMERIC(6, 0) NOT NULL,
  Kundegruppe      FOR COLUMN ZKKUGR CHAR(10) CCSID 277 DEFAULT ' ',
  Kundekjopstype   FOR COLUMN ZKKKTY CHAR(10) CCSID 277 DEFAULT ' ',
  Budsjett         FOR COLUMN ZKBUDJ NUMERIC(11, 0) NOT NULL,
  Kilde            FOR COLUMN ZKKILD CHAR(3) CCSID 277 DEFAULT ' ',
  Timestamp        FOR COLUMN ZKTMST TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  OpprettetDato    FOR COLUMN ZKODAT DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetKl      FOR COLUMN ZKOTIM TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN ZKOUSR CHAR(10) NOT NULL DEFAULT ' ',
  EndretDato       FOR COLUMN ZKEDAT DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretTid        FOR COLUMN ZKETIM TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN ZKEUSR CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

  CREATE INDEX ZKUNI1
   ON ZKUNST (ZKINST, ZKFIRM, ZKKUND);

  CREATE UNIQUE INDEX ZKUNIR
   ON ZKUNST (ZKINST, ZKFIRM, ZKKUND);

  CREATE INDEX ZKUNIU
   ON ZKUNST (ZKINST, ZKFIRM, ZKKUND);

LABEL ON TABLE ZKUNST IS 'Kundeinformasjon for Zilliant';
