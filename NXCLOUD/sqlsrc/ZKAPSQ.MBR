CREATE OR REPLACE TABLE ZKAPST(
  Instans          FOR COLUMN ZXINST CHAR(10) CCSID 277 NOT NULL,
  Firma            FOR COLUMN ZXFIRM NUMERIC(3, 0) NOT NULL,
  Kundenummer      FOR COLUMN ZXKUND NUMERIC(6, 0) NOT NULL,
  Ordrenummer      FOR COLUMN ZXORDR NUMERIC(8, 0) NOT NULL,
  Varenummer       FOR COLUMN ZXVARE CHAR(15) NOT NULL,
  Enhet            FOR COLUMN ZXENHE CHAR(3) CCSID 277 NOT NULL,
  Avdelingsgruppe  FOR COLUMN ZXAGRP NUMERIC(4, 0) NOT NULL,
  Kundegruppe      FOR COLUMN ZXKUGR CHAR(10) CCSID 277 NOT NULL,
  Kundekjopstype   FOR COLUMN ZXKKTY CHAR(10) CCSID 277 NOT NULL,
  Startpris        FOR COLUMN ZXSTPR NUMERIC(9, 2) NOT NULL,
  Targetpris       FOR COLUMN ZXTGPR NUMERIC(9, 2) NOT NULL,
  Floorprice       FOR COLUMN ZXFLPR NUMERIC(9, 2) NOT NULL,
  Timestamp        FOR COLUMN ZXTMST TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  OpprettetDato    FOR COLUMN ZXODAT DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetKl      FOR COLUMN ZXOTIM TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN ZXOUSR CHAR(10) NOT NULL DEFAULT ' ',
  EndretDato       FOR COLUMN ZXEDAT DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretTid        FOR COLUMN ZXETIM TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN ZXEUSR CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

  CREATE INDEX ZKAPI1
   ON ZKAPST (ZXINST, ZXFIRM, ZXKUND, ZXORDR, ZXVARE, ZXENHE);

  CREATE UNIQUE INDEX ZKAPIR
   ON ZKAPST (ZXINST, ZXFIRM, ZXKUND, ZXORDR, ZXVARE, ZXENHE);

  CREATE INDEX ZKAPIU
   ON ZKAPST (ZXINST, ZXFIRM, ZXKUND, ZXORDR, ZXVARE, ZXENHE);

LABEL ON TABLE ZKAPST IS 'Kunde anbefalt pris for Zilliant';
