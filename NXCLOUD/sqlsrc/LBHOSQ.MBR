CREATE OR REPLACE TABLE PAKKSEDDELBESTILLINGSHODE FOR SYSTEM NAME LBHOST
(
  UID              FOR COLUMN PBHUID NUMERIC(18, 0) NOT NULL GENERATED ALWAYS
                   AS IDENTITY (START WITH 1 INCREMENT BY 1 CYCLE),
  Firma            FOR COLUMN PBHFIR NUMERIC(3, 0) NOT NULL,
  SSCCKode         FOR COLUMN PBHSSC NUMERIC(18, 0) NOT NULL,
  NXBestNr         FOR COLUMN PBHNUM NUMERIC(8, 0) NOT NULL,
  NXBestSuffiks    FOR COLUMN PBHSUF NUMERIC(2, 0) NOT NULL,
  PakkseddelID     FOR COLUMN PBHPID CHAR(17) NOT NULL DEFAULT ' ',
  Versjonsnummer   FOR COLUMN PBHPVE NUMERIC(3, 0) NOT NULL,
  Ar               FOR COLUMN PBHAAR NUMERIC(4, 0) NOT NULL,

  Meldingsnummer   FOR COLUMN PBHMNU NUMERIC(8, 0) NOT NULL,
  Pakningsantall   FOR COLUMN PBHPAN NUMERIC(8, 0) NOT NULL,
  Status           FOR COLUMN PBHSTA CHAR(2) NOT NULL DEFAULT ' ',
  Lasekode         FOR COLUMN PBHLCK NUMERIC(1, 0) NOT NULL,
  Pakkseddeldato   FOR COLUMN PBHPDT DATE NOT NULL DEFAULT CURRENT_DATE,
  BestillingsNr    FOR COLUMN PBHBNU CHAR(17) NOT NULL DEFAULT ' ',
  LevOrdrenummer   FOR COLUMN PBHLON CHAR(35) NOT NULL DEFAULT ' ',
  Prosjektnummer   FOR COLUMN PBHPNR CHAR(35) NOT NULL DEFAULT ' ',
  ForsStrukturNiva FOR COLUMN PBHFSN CHAR(18) NOT NULL DEFAULT ' ',
  ForsNiva         FOR COLUMN PBHFNI NUMERIC(6, 0) NOT NULL,
  ManVaremottak    FOR COLUMN PBHMVA NUMERIC(1, 0) NOT NULL,

  OpprettetDato    FOR COLUMN PBHODA DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetKl      FOR COLUMN PBHOTI TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN PBHOUS CHAR(10) NOT NULL DEFAULT ' ',
  EndretDato       FOR COLUMN PBHEDA DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretTid        FOR COLUMN PBHETI TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN PBHEUS CHAR(10) NOT NULL DEFAULT ' ')

ON REPLACE PRESERVE ALL ROWS;

CREATE UNIQUE INDEX PAKKSEDDELBESTILLINGSHODE_IU FOR SYSTEM NAME LBHOIU ON
                    PAKKSEDDELBESTILLINGSHODE(Firma,SSCCKode,NXBestNr,
                    NXBestSuffiks,PakkseddelID,Versjonsnummer,Ar);

CREATE UNIQUE INDEX PAKKSEDDELBESTILLINGSHODE_IR FOR SYSTEM NAME LBHOIR ON
                    PAKKSEDDELBESTILLINGSHODE(Firma,SSCCKode,NXBestNr,
                    NXBestSuffiks,PakkseddelID,Versjonsnummer,Ar);

CREATE UNIQUE INDEX PAKKSEDDELBESTILLINGSHODE_I1 FOR SYSTEM NAME LBHOI1 ON
                    PAKKSEDDELBESTILLINGSHODE(Firma,SSCCKode,NXBestNr,
                    NXBestSuffiks,PakkseddelID,Versjonsnummer,Ar);

CREATE UNIQUE INDEX PAKKSEDDELBESTILLINGSHODE_I2 FOR SYSTEM NAME LBHOI2 ON
                    PAKKSEDDELBESTILLINGSHODE(Firma,PakkseddelID,Versjonsnummer,
                    NXBestNr,NXBestSuffiks,SSCCKode,Ar);

CREATE UNIQUE INDEX PAKKSEDDELBESTILLINGSHODE_I3 FOR SYSTEM NAME LBHOI3 ON
                    PAKKSEDDELBESTILLINGSHODE(Firma,PakkseddelID,Versjonsnummer,
                    SSCCKode,Ar,NXBestNr,NXBestSuffiks);

CREATE INDEX PAKKSEDDELBESTILLINGSHODE_I4 FOR SYSTEM NAME LBHOI4 ON
                    PAKKSEDDELBESTILLINGSHODE(Firma,NXBestNr,NXBestSuffiks,
                    Ar);


