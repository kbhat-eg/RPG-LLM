CREATE OR REPLACE TABLE PAKKSEDDELLINJE FOR SYSTEM NAME LPKLST
(
  UID              FOR COLUMN PLPUID NUMERIC(18, 0) NOT NULL GENERATED ALWAYS
                   AS IDENTITY (START WITH 1 INCREMENT BY 1 CYCLE),
  Firma            FOR COLUMN PLFIRM NUMERIC(3, 0) NOT NULL,
  Type             FOR COLUMN PLTYPE CHAR(4) NOT NULL DEFAULT ' ',
  Meldingsnummer   FOR COLUMN PLMNUM NUMERIC(8, 0) NOT NULL,
  Ar               FOR COLUMN PLAARR NUMERIC(4, 0) NOT NULL,
  PakkseddelID     FOR COLUMN PLPAID CHAR(17) NOT NULL DEFAULT ' ',
  Versjonsnummer   FOR COLUMN PLPVER NUMERIC(3, 0) NOT NULL,
  ForsStrukturNiva FOR COLUMN PLFSNI CHAR(18) NOT NULL DEFAULT ' ',
  ForsNiva         FOR COLUMN PLFNIV NUMERIC(6, 0) NOT NULL,
  LinjeNummer      FOR COLUMN PLLINR NUMERIC(6, 0) NOT NULL,

  ForsStrukturPare FOR COLUMN PLFSPA CHAR(18) NOT NULL DEFAULT ' ',
  SSCCkode         FOR COLUMN PLSSCC NUMERIC(18, 0) NOT NULL,
  GTINnummer       FOR COLUMN PLGTIN CHAR(14) NOT NULL DEFAULT ' ',
  LevVarenummer    FOR COLUMN PLLVAR CHAR(35) NOT NULL DEFAULT ' ',
  NOBBnummer       FOR COLUMN PLNOBB NUMERIC(8, 0) NOT NULL,
  TUNnummer        FOR COLUMN PLTUNN CHAR(35) NOT NULL DEFAULT ' ',
  FINFOnummer      FOR COLUMN PLFINF CHAR(35) NOT NULL DEFAULT ' ',
  ArtikkelNavn     FOR COLUMN PLNAVN CHAR(70) NOT NULL DEFAULT ' ',
  BestiltAntall    FOR COLUMN PLBANT NUMERIC(15, 4) NOT NULL,
  BestiltEnhet     FOR COLUMN PLBENH CHAR(3) NOT NULL DEFAULT ' ',
  PakkseddelAntall FOR COLUMN PLPANT NUMERIC(15, 4) NOT NULL,
  PakkseddelEnhet  FOR COLUMN PLPENH CHAR(3) NOT NULL DEFAULT ' ',
  RestetAntall     FOR COLUMN PLRANT NUMERIC(15, 4) NOT NULL,
  RestetEnhet      FOR COLUMN PLRENH CHAR(3) NOT NULL DEFAULT ' ',
  RestetKode       FOR COLUMN PLRKOD CHAR(3) NOT NULL DEFAULT ' ',
  RestetArsak      FOR COLUMN PLRBES CHAR(70) NOT NULL DEFAULT ' ',
  RestetLevDato    FOR COLUMN PLRDAT DATE NOT NULL DEFAULT CURRENT_DATE,
  VaremottatAntall FOR COLUMN PLVANT NUMERIC(15, 4) NOT NULL,
  VaremotattEnhet  FOR COLUMN PLVENH CHAR(3) NOT NULL DEFAULT ' ',
  BestillingsNr    FOR COLUMN PLBNUM CHAR(17) NOT NULL DEFAULT ' ',
  NXBestNr         FOR COLUMN PLNUMM NUMERIC(8, 0) NOT NULL,
  NXBestSuffiks    FOR COLUMN PLSUFF NUMERIC(2, 0) NOT NULL,
  NXBestLinjeNr    FOR COLUMN PLBLIN NUMERIC(6, 0) NOT NULL,
  Status           FOR COLUMN PLSTAT CHAR(2) NOT NULL DEFAULT ' ',
  Lasekode         FOR COLUMN PLLOCK NUMERIC(1, 0) NOT NULL,

  OpprettetDato    FOR COLUMN PLODAT DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetKl      FOR COLUMN PLOTIM TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN PLOUSR CHAR(10) NOT NULL DEFAULT ' ',
  EndretDato       FOR COLUMN PLEDAT DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretTid        FOR COLUMN PLETIM TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN PLEUSR CHAR(10) NOT NULL DEFAULT ' ')

ON REPLACE PRESERVE ALL ROWS;

CREATE UNIQUE INDEX PAKKSEDDELLINJE_IU FOR SYSTEM NAME LPKLIU ON
                    PAKKSEDDELLINJE(Firma,Type,Meldingsnummer,Ar,Pakkseddelid,
                                   Versjonsnummer,ForsStrukturNiva,ForsNiva,
                                   SSCCKode,LinjeNummer);

CREATE UNIQUE INDEX PAKKSEDDELLINJE_I1 FOR SYSTEM NAME LPKLI1 ON
                    PAKKSEDDELLINJE(Firma,Type,Meldingsnummer,Ar,Pakkseddelid,
                                   Versjonsnummer,ForsStrukturNiva,ForsNiva,
                                   SSCCKode,LinjeNummer);

CREATE UNIQUE INDEX PAKKSEDDELLINJE_IR FOR SYSTEM NAME LPKLIR ON
                    PAKKSEDDELLINJE(Firma,Type,Meldingsnummer,Ar,Pakkseddelid,
                                   Versjonsnummer,ForsStrukturNiva,ForsNiva,
                                   SSCCKode,LinjeNummer);

CREATE UNIQUE INDEX PAKKSEDDELLINJE_I2 FOR SYSTEM NAME LPKLI2 ON
                    PAKKSEDDELLINJE(Firma,Type,SSCCkode,Ar,Pakkseddelid,
                                   Versjonsnummer,ForsStrukturNiva,ForsNiva,
                                   LinjeNummer);

CREATE INDEX PAKKSEDDELLINJE_I3 FOR SYSTEM NAME LPKLI3 ON
                    PAKKSEDDELLINJE(Firma,Type,Meldingsnummer,Ar,Pakkseddelid,
                                   Versjonsnummer,NXBestNr,NXBestSuffiks,
                                   NXBestLinjeNr);

LABEL ON TABLE PAKKSEDDELLINJE     IS 'Pakkseddel kolli linjer';
LABEL ON INDEX PAKKSEDDELLINJE_IU  IS 'Pakkseddel kolli linjer';
LABEL ON INDEX PAKKSEDDELLINJE_I1  IS 'Pakkseddel kolli linjer';
LABEL ON INDEX PAKKSEDDELLINJE_IR  IS 'Pakkseddel kolli linjer';
LABEL ON INDEX PAKKSEDDELLINJE_I2  IS 'Pakkseddel kolli linjer';
LABEL ON INDEX PAKKSEDDELLINJE_I3  IS 'Pakkseddel kolli linjer';
