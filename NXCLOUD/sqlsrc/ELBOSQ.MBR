-- Leverandør bonus

CREATE OR REPLACE TABLE ELBOST( 
 Firma               FOR COLUMN ELFIRM NUMERIC(3, 0) NOT NULL,
 Bonusleverandor     FOR COLUMN ELBLEV NUMERIC(6, 0) NOT NULL,
 Leverandor          FOR COLUMN ELLDOR NUMERIC(6, 0) DEFAULT 0,
 Overgruppe          FOR COLUMN ELOGRP NUMERIC(2, 0) DEFAULT 0,
 Hovedgruppe         FOR COLUMN ELHGRP NUMERIC(2, 0) DEFAULT 0,
 Undergruppe         FOR COLUMN ELUGRP NUMERIC(3, 0) DEFAULT 0,
 Modulnr             FOR COLUMN ELMODN NUMERIC(8, 0) DEFAULT 0,
 Varenr              FOR COLUMN ELVARE CHAR(15) DEFAULT ' ',
 Enhet               FOR COLUMN ELENHE CHAR(3) DEFAULT ' ',
 Leveringstype       FOR COLUMN ELLETY NUMERIC(1, 0) DEFAULT 0,
 Bonustype           FOR COLUMN ELBOTY CHAR(2) DEFAULT ' ',
 FraDato             FOR COLUMN ELFDAT DATE NOT NULL DEFAULT '0001-01-01',
 TilDato             FOR COLUMN ELTDAT DATE NOT NULL DEFAULT '0001-01-01',
 Prosjektbegrensning FOR COLUMN ELPBGR NUMERIC(1, 0) DEFAULT 0,
 Merknad             FOR COLUMN ELMERK CHAR(50) DEFAULT ' ',
 Bonusgrunnlag       FOR COLUMN ELBGRU NUMERIC(11, 2) DEFAULT 0,
 SumBonus            FOR COLUMN ELSBON NUMERIC(9, 0) DEFAULT 0,
 BeregnetDato        FOR COLUMN ELBDAT DATE NOT NULL DEFAULT '0001-01-01',
 BeregnetTid         FOR COLUMN ELBTIM TIME NOT NULL DEFAULT '00:00:00',
 OpprettetDato       FOR COLUMN ELODAT DATE NOT NULL DEFAULT CURRENT_DATE,
 OpprettetTid        FOR COLUMN ELOTIM TIME NOT NULL DEFAULT CURRENT_TIME,
 OpprettetAv         FOR COLUMN ELOUSR CHAR(10) NOT NULL DEFAULT ' ',
 EndretDato          FOR COLUMN ELEDAT DATE NOT NULL DEFAULT CURRENT_DATE,
 EndretTid           FOR COLUMN ELETIM TIME NOT NULL DEFAULT CURRENT_TIME,
 EndretAv            FOR COLUMN ELEUSR CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

CREATE UNIQUE INDEX ELBOIU
	ON ELBOST (ELFIRM, ELBLEV, ELLDOR, ELOGRP, ELHGRP, ELUGRP, ELMODN,
	           ELVARE, ELENHE, ELLETY, ELBOTY, ELFDAT, ELTDAT);

CREATE UNIQUE INDEX ELBOIR
	ON ELBOST (ELFIRM, ELBLEV, ELLDOR, ELOGRP, ELHGRP, ELUGRP, ELMODN,
	           ELVARE, ELENHE, ELLETY, ELBOTY, ELFDAT, ELTDAT);

