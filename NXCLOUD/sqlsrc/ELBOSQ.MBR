CREATE INDEX ELBOI4
	ON ELBOST (ELFIRM, ELBLEV, ELUGRP, ELLDOR, ELOGRP, ELHGRP, ELMODN,
	           ELVARE, ELENHE, ELLETY, ELBOTY, ELFDAT, ELTDAT);

CREATE INDEX ELBOI5
	ON ELBOST (ELFIRM, ELBLEV, ELMODN, ELLDOR, ELOGRP, ELHGRP, ELUGRP,
