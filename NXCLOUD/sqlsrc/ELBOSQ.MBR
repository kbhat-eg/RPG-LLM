	ON ELBOST (ELFIRM, ELBLEV, ELLETY, ELLDOR, ELOGRP, ELHGRP, ELUGRP,
	           ELMODN, ELVARE, ELENHE, ELBOTY, ELFDAT, ELTDAT);

CREATE INDEX ELBOI9
	ON ELBOST (ELFIRM, ELBLEV, ELBOTY, ELLDOR, ELOGRP, ELHGRP, ELUGRP,
	           ELMODN, ELVARE, ELENHE, ELLETY, ELFDAT, ELTDAT);

CREATE INDEX ELBOIA
	ON ELBOST (ELFIRM, ELLDOR, ELBLEV);

LABEL ON TABLE ELBOST
	IS 'Leverandør bonus';
