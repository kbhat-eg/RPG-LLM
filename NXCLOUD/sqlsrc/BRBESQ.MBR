CREATE OR REPLACE TABLE BRBEST(
  UID              FOR COLUMN BREUID NUMERIC(18, 0) NOT NULL
                   GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  Firma            FOR COLUMN BREFIR NUMERIC(3, 0) NOT NULL,
  BlueridgeID      FOR COLUMN BREREF CHAR(25) NOT NULL DEFAULT ' ',
  Lager            FOR COLUMN BRELAG NUMERIC(2, 0) NOT NULL,
  LagerTekst       FOR COLUMN BRELTX CHAR(35) NOT NULL DEFAULT ' ',
  Varenummer       FOR COLUMN BREVAR CHAR(15) NOT NULL DEFAULT ' ',
  VareTekst        FOR COLUMN BREVTX CHAR(70) NOT NULL DEFAULT ' ',
  Leverandor       FOR COLUMN BRELDO NUMERIC(6, 0) NOT NULL,
  LeverandorTekst  FOR COLUMN BRELDT CHAR(35) NOT NULL DEFAULT ' ',
  Bestillingsfors  FOR COLUMN BREFOR NUMERIC(6, 0) NOT NULL,
  BestNummer       FOR COLUMN BRENUM NUMERIC(8, 0) NOT NULL,
  BestSuffiks      FOR COLUMN BRESUF NUMERIC(2, 0) NOT NULL,
  BestiltKvantum   FOR COLUMN BREBQT NUMERIC(11, 3) NOT NULL,
  LevertKvantum    FOR COLUMN BRELQT NUMERIC(11, 3) NOT NULL,
  Enhet            FOR COLUMN BREENH CHAR(3) NOT NULL DEFAULT ' ',
  Bestillingsdato  FOR COLUMN BREBDA DATE NOT NULL DEFAULT CURRENT_DATE,
  Leveringsdato    FOR COLUMN BRELDA DATE NOT NULL DEFAULT CURRENT_DATE,
  Status           FOR COLUMN BRESTA NUMERIC(1, 0) NOT NULL,
  OpprettetDato    FOR COLUMN BREODA DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetKl      FOR COLUMN BREOTI TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN BREOUS CHAR(10) NOT NULL DEFAULT ' ',
  EndretDato       FOR COLUMN BREEDA DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretKl         FOR COLUMN BREETI TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN BREEUS CHAR(10) NOT NULL DEFAULT ' ')

ON REPLACE PRESERVE ALL ROWS;

  CREATE INDEX BRBEIU
   ON BRBEST (BREFIR, BREREF, BRELAG, BREVAR);
  CREATE INDEX BRBEIR
   ON BRBEST (BREFIR, BREREF, BRELAG, BREVAR);
  CREATE INDEX BRBEI1
   ON BRBEST (BREFIR, BREREF, BRELAG, BREVAR);
  CREATE INDEX BRBEI2
   ON BRBEST (BREFIR, BREFOR, BRELAG, BREVAR);
  CREATE INDEX BRBEI3
   ON BRBEST (BREFIR, BRENUM, BRESUF, BREVAR);


LABEL ON INDEX BRBEI3 IS 'Blueridge export original orders';
LABEL ON INDEX BRBEI2 IS 'Blueridge export original orders';
LABEL ON INDEX BRBEI1 IS 'Blueridge export original orders';
LABEL ON INDEX BRBEIR IS 'Blueridge export original orders';
LABEL ON INDEX BRBEIU IS 'Blueridge export original orders';
LABEL ON TABLE BRBEST IS 'Blueridge export original orders';
