CREATE OR REPLACE TABLE VGKTST(
  UID              FOR COLUMN VGTUID NUMERIC(18, 0) NOT NULL
                   GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  Firma            FOR COLUMN VTFIRM NUMERIC(3, 0) NOT NULL,
  Faktortype       FOR COLUMN VTFTYP CHAR(20) NOT NULL DEFAULT ' ',
  Kalkulasjon      FOR COLUMN VTKALK CHAR(1) NOT NULL,
  KtoHovedbok      FOR COLUMN VTHKTO NUMERIC(6, 0) NOT NULL,
  Motkonto         FOR COLUMN VTMOTK NUMERIC(6, 0) NOT NULL,
  SistEndret       FOR COLUMN VTTDAT DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretAv         FOR COLUMN VTTUSR CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

LABEL ON TABLE VGKTST IS 'Faktortyper for gj.kostpris';

CREATE UNIQUE INDEX VGKTIU ON VGKTST(VTFIRM,VTFTYP);
CREATE UNIQUE INDEX VGKTI1 ON VGKTST(VTFIRM,VTFTYP);
CREATE UNIQUE INDEX VGKTIR ON VGKTST(VTFIRM,VTFTYP);

