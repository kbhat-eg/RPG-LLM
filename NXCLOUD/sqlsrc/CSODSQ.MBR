CREATE OR REPLACE TABLE CSODST(
  UID              NUMERIC(15, 0) NOT NULL GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  CSOHST_UID       FOR COLUMN CSDUID NUMERIC(15, 0) NOT NULL ,
  Firma            FOR COLUMN CSDFIR NUMERIC(3, 0) NOT NULL DEFAULT 0,
  Sortimentskode   FOR COLUMN CSDKOD CHAR(15) NOT NULL DEFAULT ' ',
  Varenummer       FOR COLUMN CSDVNU CHAR(8) NOT NULL DEFAULT ' ',
  Varetekst        FOR COLUMN CSDVTK CHAR(35) NOT NULL DEFAULT ' ',
  Vareenhet        FOR COLUMN CSDENH CHAR(3) NOT NULL DEFAULT ' ',
  MinsteMengde     FOR COLUMN CSDVLM NUMERIC(8, 0) NOT NULL DEFAULT 0,
  Leverandornummer FOR COLUMN CSDLNR NUMERIC(6, 0) NOT NULL DEFAULT 0,
  Leverandortekst  FOR COLUMN CSDLNA CHAR(30) NOT NULL DEFAULT ' ',
  Overgruppe       FOR COLUMN CSDOGR NUMERIC(2, 0) NOT NULL DEFAULT 0,
  Hovedgruppe      FOR COLUMN CSDHGR NUMERIC(2, 0) NOT NULL DEFAULT 0,
  Undergruppe      FOR COLUMN CSDUGR NUMERIC(3, 0) NOT NULL DEFAULT 0,
  OpprettetDato    FOR COLUMN CSDODA DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretDato       FOR COLUMN CSDEDA DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretKl         FOR COLUMN CSDETI TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN CSDEUS CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

ALTER TABLE CSODST ADD CONSTRAINT CSODPK PRIMARY KEY (UID);
CREATE UNIQUE INDEX CSODIU on CSODST(CSDFIR,CSDKOD,CSDVNU,CSDENH,CSDLNR);
CREATE INDEX CSODIR on CSODST(CSDFIR,CSDKOD);
CREATE INDEX CSODI1 on CSODST(CSDFIR,CSDKOD);
CREATE INDEX CSODI2 on CSODST(CSDFIR,CSDKOD,CSDVNU);

LABEL ON TABLE CSODST IS 'Sortiment Detaljer';
