
CREATE OR REPLACE TABLE XHLVST
(
UID                       BIGINT NOT NULL GENERATED
 ALWAYS AS IDENTITY (START WITH 1, INCREMENT BY 1),
FIRMA_NR                  BIGINT NOT NULL,
LEVERANDOR_NR             INTEGER NOT NULL,
LEVERANDOR_ORG            INTEGER NOT NULL,
OVERGRUPPE                INTEGER NOT NULL DEFAULT 0,
HOVEDGRUPPE               INTEGER NOT NULL DEFAULT 0,
UNDERGRUPPE               INTEGER NOT NULL DEFAULT 0,
OPPRETTET_DATO            DATE DEFAULT CURRENT_DATE,
BRUKER                    VARCHAR(20),
PRIMARY KEY (UID)
)
ON REPLACE PRESERVE ALL ROWS;
LABEL ON TABLE XHLVST IS 'RA HovedLeverandorVaregruppe';
