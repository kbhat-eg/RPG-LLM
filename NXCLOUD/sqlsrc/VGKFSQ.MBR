CREATE OR REPLACE TABLE VGKFST(
  UID              FOR COLUMN VGFUID NUMERIC(18, 0) NOT NULL
                   GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  Firma            FOR COLUMN VGFIRM NUMERIC(3, 0) NOT NULL,
  Lager            FOR COLUMN VGFLAG NUMERIC(2, 0) NOT NULL,
  Leverandor       FOR COLUMN VGFLEV NUMERIC(6, 0) NOT NULL,
  Faktortype       FOR COLUMN VGFTYP CHAR(20) NOT NULL DEFAULT ' ',
  Overgruppe       FOR COLUMN VGFOGR NUMERIC(2, 0) NOT NULL,
  Hovedgruppe      FOR COLUMN VGFHGR NUMERIC(2, 0) NOT NULL,
  Undergruppe      FOR COLUMN VGFUGR NUMERIC(3, 0) NOT NULL,
  Varenummer       FOR COLUMN VGFVAR CHAR(15) NOT NULL DEFAULT ' ',
  Faktor           FOR COLUMN VGFFAK NUMERIC(8, 6) NOT NULL,
  DatoEndret       FOR COLUMN VGFDAT DATE NOT NULL DEFAULT CURRENT_DATE,
  SistBruker       FOR COLUMN VGFUSR CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

LABEL ON TABLE VGKFST IS 'Faktor som brukes for Gj.snitt kostpris';

CREATE UNIQUE INDEX VGKFIU ON VGKFST(VGFIRM,VGFLAG,VGFLEV,VGFTYP,VGFOGR,VGFHGR,
                    VGFUGR,VGFVAR);
CREATE INDEX VGKFIR ON VGKFST(VGFIRM,VGFLAG,VGFLEV,VGFTYP,VGFOGR,VGFHGR,VGFUGR,
                    VGFVAR);
CREATE INDEX VGKFI1 ON VGKFST(VGFIRM,VGFLAG,VGFLEV,VGFTYP,VGFOGR,VGFHGR,VGFUGR,
                    VGFVAR);

