CREATE OR REPLACE TABLE FAKTURA_SUM_PR_SORTERINGSBEGREP FOR SYSTEM NAME FFAKST
(
  UID              FOR COLUMN FAKUID NUMERIC(18, 0) NOT NULL
                   GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  Firmanummer      FOR COLUMN FAKFIR NUMERIC(3, 0) NOT NULL,
  Sorteringsbegrep FOR COLUMN FAKSRT CHAR(114) NOT NULL DEFAULT ' ',
  Ordrenummer      FOR COLUMN FAKNUM NUMERIC(8, 0) NOT NULL,
  Suffiks          FOR COLUMN FAKSUF NUMERIC(2, 0) NOT NULL,
  KreditOrdretype  FOR COLUMN FAKKOT CHAR(2) NOT NULL DEFAULT ' ',
  DebetOrdretype   FOR COLUMN FAKDOT CHAR(2) NOT NULL DEFAULT ' ',
  Fakturasum       FOR COLUMN FAKSUM NUMERIC(15, 2) NOT NULL,
  EndretDato       FOR COLUMN FAKEDA DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretKl         FOR COLUMN FAKETI TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN FAKEUS CHAR(10) NOT NULL DEFAULT ' ',
  OpprettetDato    FOR COLUMN FAKODA DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetKl      FOR COLUMN FAKOTI TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN FAKOUS CHAR(10) NOT NULL DEFAULT ' ')

ON REPLACE PRESERVE ALL ROWS;

  CREATE INDEX FFAKIU
   ON FFAKST (FAKFIR, FAKSRT, FAKNUM, FAKSUF);

  CREATE INDEX FFAKIR
   ON FFAKST (FAKFIR, FAKSRT, FAKNUM, FAKSUF);

  CREATE INDEX FFAKI1
   ON FFAKST (FAKFIR, FAKSRT, FAKNUM, FAKSUF);

LABEL ON INDEX FFAKIU IS 'Summary for invoicing - firm/sort';
LABEL ON INDEX FFAKIR IS 'Summary for invoicing - firm/sort';
LABEL ON INDEX FFAKI1 IS 'Summary for invoicing - firm/sort';
LABEL ON TABLE FFAKST IS 'Summary for invoicing';
