CREATE OR REPLACE TABLE RA60ST(
  UID              FOR COLUMN RLVUID NUMERIC(18, 0) NOT NULL
                   GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  Firma            FOR COLUMN RLVFIR NUMERIC(3, 0) NOT NULL,
  Leverandor       FOR COLUMN RLVLEV NUMERIC(6, 0) NOT NULL,
  Valutakode       FOR COLUMN RLVVAL CHAR(3) NOT NULL DEFAULT ' ',
  Valkurs          FOR COLUMN RLVKUR NUMERIC(10, 6) NOT NULL,
  FraDato          FOR COLUMN RLVFDA DATE NOT NULL DEFAULT CURRENT_DATE,
  TilDato          FOR COLUMN RLVTDA DATE NOT NULL DEFAULT CURRENT_DATE,
  SistEndretDat    FOR COLUMN RLVEDA DATE NOT NULL DEFAULT CURRENT_DATE,
  SistEndretTid    FOR COLUMN RLVETI TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN RLVEUS CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

LABEL ON TABLE RA60ST IS 'Låst valutakurs på leverandør';

CREATE UNIQUE INDEX RA60IU ON RA60ST(RLVUID);
CREATE INDEX RA60I1 ON RA60ST(RLVUID);
CREATE INDEX RA60IR ON RA60ST(RLVUID);
CREATE INDEX RA60I2 ON RA60ST(RLVFIR,RLVLEV,RLVFDA DESC);

