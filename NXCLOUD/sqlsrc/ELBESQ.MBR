-- Leverandør bonuselement

CREATE OR REPLACE TABLE ELBEST( 
 Firma               FOR COLUMN ELEFIR NUMERIC(3, 0) NOT NULL,
 Bonusleverandor     FOR COLUMN ELEBLE NUMERIC(6, 0) NOT NULL,
 Leverandor          FOR COLUMN ELELDO NUMERIC(6, 0) DEFAULT 0,
 Overgruppe          FOR COLUMN ELEOGR NUMERIC(2, 0) DEFAULT 0,
 Hovedgruppe         FOR COLUMN ELEHGR NUMERIC(2, 0) DEFAULT 0,
 Undergruppe         FOR COLUMN ELEUGR NUMERIC(3, 0) DEFAULT 0,
 Modulnr             FOR COLUMN ELEMOD NUMERIC(8, 0) DEFAULT 0,
 Varenr              FOR COLUMN ELEVAR CHAR(15) DEFAULT ' ',
 Enhet               FOR COLUMN ELEENH CHAR(3) DEFAULT ' ',
 Leveringstype       FOR COLUMN ELELET NUMERIC(1, 0) DEFAULT 0,
 Bonustype           FOR COLUMN ELEBOT CHAR(2) DEFAULT ' ',
 FraDato             FOR COLUMN ELEFDA DATE DEFAULT '0001-01-01',
 TilDato             FOR COLUMN ELETDA DATE DEFAULT '0001-01-01',
 BelopsgrenseFra     FOR COLUMN ELEBGF NUMERIC(9, 0) DEFAULT 0,
 BelopsgrenseTil     FOR COLUMN ELEBGT NUMERIC(9, 0) DEFAULT 0,
 BonusProsent        FOR COLUMN ELEBPR NUMERIC(5, 2) DEFAULT 0,
 BonusBelop          FOR COLUMN ELEBBE NUMERIC(9, 2) DEFAULT 0,
 BonusEnhet          FOR COLUMN ELEBEN CHAR(3) DEFAULT ' ',
 KalkulerTilbake     FOR COLUMN ELEKTB NUMERIC(1, 0) DEFAULT 0,
 Merknad             FOR COLUMN ELEMRK CHAR(50) DEFAULT ' ',
 SumBonus            FOR COLUMN ELESBO NUMERIC(9, 0) DEFAULT 0,
 BeregnetDato        FOR COLUMN ELEBDA DATE NOT NULL DEFAULT '0001-01-01',
 BeregnetTid         FOR COLUMN ELEBTI TIME NOT NULL DEFAULT '00:00:00',
 OpprettetDato       FOR COLUMN ELEODA DATE NOT NULL DEFAULT CURRENT_DATE,
 OpprettetTid        FOR COLUMN ELEOTI TIME NOT NULL DEFAULT CURRENT_TIME,
 OpprettetAv         FOR COLUMN ELEOUS CHAR(10) NOT NULL DEFAULT ' ',
 EndretDato          FOR COLUMN ELEEDA DATE NOT NULL DEFAULT CURRENT_DATE,
 EndretTid           FOR COLUMN ELEETI TIME NOT NULL DEFAULT CURRENT_TIME,
 EndretAv            FOR COLUMN ELEEUS CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

CREATE UNIQUE INDEX ELBEIU
	ON ELBEST (ELEFIR, ELEBLE, ELELDO, ELEOGR, ELEHGR, ELEUGR, ELEMOD,
	           ELEVAR, ELEENH, ELELET, ELEBOT, ELEFDA, ELETDA, ELEBGF,
	           ELEBGT);

CREATE UNIQUE INDEX ELBEIR
	ON ELBEST (ELEFIR, ELEBLE, ELELDO, ELEOGR, ELEHGR, ELEUGR, ELEMOD,
	           ELEVAR, ELEENH, ELELET, ELEBOT, ELEFDA, ELETDA, ELEBGF,
	           ELEBGT);

CREATE UNIQUE INDEX ELBEI1
	ON ELBEST (ELEFIR, ELEBLE, ELELDO, ELEOGR, ELEHGR, ELEUGR, ELEMOD,
	           ELEVAR, ELEENH, ELELET, ELEBOT, ELEFDA, ELETDA, ELEBGF,
	           ELEBGT);

CREATE INDEX ELBEI2
	ON ELBEST (ELEFIR, ELEBLE, ELELDO, ELEOGR, ELEHGR, ELEUGR, ELEMOD,
	           ELEVAR, ELEENH, ELELET, ELEBOT, ELEFDA, ELETDA,
	           ELEBGT DESC, ELEBGF DESC);

LABEL ON TABLE ELBEST
	IS 'Leverandør bonuselement';
