-- Slettede records i diverse tabeller;

CREATE OR REPLACE TABLE XPSLST(
 Firma              FOR COLUMN XSFIRM NUMERIC(3, 0) NOT NULL DEFAULT 0,
 Tabell             FOR COLUMN XSTABL CHAR(10) CCSID 277 NOT NULL,
 LogiskKey          FOR COLUMN XSLKEY CHAR(100) CCSID 277 NOT NULL,
 Opperasjon         FOR COLUMN XSOPPR CHAR(1) CCSID 277 NOT NULL,
 Dato               FOR COLUMN XSEDAT DATE DEFAULT CURRENT_DATE,
 Tid                FOR COLUMN XSETIM TIME DEFAULT CURRENT_TIME,
 Bruker             FOR COLUMN XSEUSR CHAR(10) CCSID 277 DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

CREATE UNIQUE INDEX XPSLIU
 ON XPSLST (XSFIRM, XSTABL, XSLKEY);

CREATE INDEX XPSLIR
 ON XPSLST (XSFIRM, XSTABL, XSLKEY);

CREATE INDEX XPSLI1
 ON XPSLST (XSFIRM, XSTABL, XSLKEY, XSOPPR);

CREATE INDEX XPSLI2
 ON XPSLST (XSFIRM, XSTABL, XSOPPR, XSEDAT, XSETIM);

LABEL ON TABLE XPSLST
 IS 'Slettede records i tabeller';
