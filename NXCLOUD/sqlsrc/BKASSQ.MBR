-- ButikkKasse

CREATE OR REPLACE TABLE BKASST( 
 Firma              FOR COLUMN BKFIRM NUMERIC(3, 0) NOT NULL,
 Kasse              FOR COLUMN BKKASS CHAR(3) CCSID 277 NOT NULL,
 Beskrivelse        FOR COLUMN BKBESK CHAR(35) CCSID 277 DEFAULT ' ',
 Plassering         FOR COLUMN BKPLAS CHAR(35) CCSID 277 DEFAULT ' ',
 Gruppe             FOR COLUMN BKGRUP CHAR(6) CCSID 277 DEFAULT ' ',
 Avdeling           FOR COLUMN BKAVDE NUMERIC(4, 0),
 Kostnadsbaerer     FOR COLUMN BKBAER NUMERIC(4, 0),
 Lager              FOR COLUMN BKLAGE NUMERIC(2, 0),
 Leveringstype      FOR COLUMN BKLETY NUMERIC(1, 0),
 BongnrTeller       FOR COLUMN BKBTEL NUMERIC(8, 0),
 GavekortTeller     FOR COLUMN BKGTEL NUMERIC(6, 0),
 Faktura            FOR COLUMN BKKFAK NUMERIC(1, 0),
 Pakkseddel         FOR COLUMN BKKPAK NUMERIC(1, 0),
 Hurtigordre        FOR COLUMN BKKHUO NUMERIC(1, 0),
 BetaleFaktura      FOR COLUMN BKKBFA NUMERIC(1, 0),
 BekrefteSpesAvtale FOR COLUMN BKKAVT NUMERIC(1, 0),
 BekrefteMottatt    FOR COLUMN BKKMOT NUMERIC(1, 0),
 KreverKundensRef   FOR COLUMN BKKKRF NUMERIC(1, 0),
 ViseTastatur       FOR COLUMN BKKTAS NUMERIC(1, 0),
 ViseKostpris       FOR COLUMN BKKKOP NUMERIC(1, 0),
 ViseSelgere        FOR COLUMN BKKSEL NUMERIC(1, 0),
 ViseVaredetalj     FOR COLUMN BKKVAD NUMERIC(1, 0),
 BeholdeSelger      FOR COLUMN BKKBSE NUMERIC(1, 0),
 CursorAntall       FOR COLUMN BKKCAN NUMERIC(1, 0),
 BongA4             FOR COLUMN BKKBA4 NUMERIC(1, 0),
 FortryktBlankett   FOR COLUMN BKKFTB NUMERIC(1, 0),
 HentHoldtOrdre     FOR COLUMN BKHHOR NUMERIC(1, 0) DEFAULT 0,
 BrukLokalDb        FOR COLUMN BKBLDB NUMERIC(1, 0) DEFAULT 0,
 OverforBakgrunn    FOR COLUMN BKOBKG NUMERIC(1, 0) DEFAULT 0,
 AntallPakksedler   FOR COLUMN BKANTP NUMERIC(1, 0) DEFAULT 1,
 AntallA4Bonger     FOR COLUMN BKANTB NUMERIC(1, 0) DEFAULT 1,
 Debug              FOR COLUMN BKDEBG NUMERIC(1, 0) DEFAULT 0,
 EagerOnlineCheck   FOR COLUMN BKEAGR NUMERIC(1, 0) DEFAULT 1,
 ConnectionCheck1   FOR COLUMN BKCON1 NUMERIC(1, 0) DEFAULT 1,
 ConnectionCheck2   FOR COLUMN BKCON2 NUMERIC(1, 0) DEFAULT 0,
 As400MsgLogging    FOR COLUMN BKMSGL NUMERIC(1, 0) DEFAULT 0,
 BrukLyder          FOR COLUMN BKLYDR NUMERIC(1, 0) DEFAULT 0,
 EkstraHjelp        FOR COLUMN BKEKSH NUMERIC(1, 0) DEFAULT 0,
 ReplikeringsVarsel FOR COLUMN BKREPV NUMERIC(2, 0) DEFAULT 7,
 ReplikeringsKrav   FOR COLUMN BKREPK NUMERIC(3, 0) DEFAULT 0,
 TimeoutSekunder    FOR COLUMN BKTIMO NUMERIC(4, 0) DEFAULT 0,
 MacAdresse         FOR COLUMN BKMACA CHAR(17) CCSID 277 DEFAULT ' ',
 OpprettetDato      FOR COLUMN BKODAT DATE DEFAULT CURRENT_DATE,
 OpprettetTid       FOR COLUMN BKOTIM TIME DEFAULT CURRENT_TIME,
 OpprettetAv        FOR COLUMN BKOUSR CHAR(10) CCSID 277 DEFAULT ' ',
 EndretDato         FOR COLUMN BKEDAT DATE DEFAULT CURRENT_DATE,
 EndretTid          FOR COLUMN BKETIM TIME DEFAULT CURRENT_TIME,
 EndretAv           FOR COLUMN BKEUSR CHAR(10) CCSID 277 DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

CREATE UNIQUE INDEX BKASI1
	ON BKASST (BKFIRM, BKKASS);

CREATE UNIQUE INDEX BKASIR
	ON BKASST (BKFIRM, BKKASS);

CREATE UNIQUE INDEX BKASIU
	ON BKASST (BKFIRM, BKKASS);

CREATE INDEX BKASI2
	ON BKASST (BKFIRM, BKBESK, BKKASS);

LABEL ON TABLE BKASST
	IS 'ButikkKasse';
