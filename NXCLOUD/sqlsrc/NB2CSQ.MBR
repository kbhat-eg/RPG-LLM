CREATE OR REPLACE TABLE NB2CST(
  UID              FOR COLUMN NB2UID NUMERIC(18, 0) NOT NULL
                   GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  Firma            FOR COLUMN NB2FIR NUMERIC(3, 0) NOT NULL DEFAULT 0,
  Lager            FOR COLUMN NB2LAG NUMERIC(2, 0) NOT NULL DEFAULT 0,
  Sortimentskode   FOR COLUMN NB2SKD CHAR(10) NOT NULL DEFAULT ' ',
  Type             FOR COLUMN NB2TYP CHAR(1)  NOT NULL DEFAULT ' ',
  Aktiv            FOR COLUMN NB2AKT CHAR(1)  NOT NULL DEFAULT ' ',
  Beskrivelse      FOR COLUMN NB2BES CHAR(35) NOT NULL DEFAULT ' ',
  Filnavn          FOR COLUMN NB2FNA CHAR(35) NOT NULL DEFAULT ' ',
  OpprettetDato    FOR COLUMN NB2ODA DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetKl      FOR COLUMN NB2OTI TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN NB2OUS CHAR(10) NOT NULL DEFAULT ' ',
  EndretDato       FOR COLUMN NB2EDA DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretKl         FOR COLUMN NB2ETI TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN NB2EUS CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

CREATE UNIQUE INDEX NB2CIU on NB2CST(NB2FIR,NB2LAG,NB2SKD);
CREATE INDEX NB2CIR on NB2CST(NB2FIR,NB2LAG,NB2SKD);
CREATE INDEX NB2CI1 on NB2CST(NB2FIR,NB2LAG,NB2SKD);

LABEL ON TABLE NB2CST IS 'Oppsett av B2C eksport';
