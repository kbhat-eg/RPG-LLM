CREATE OR REPLACE TABLE CKAUST (
    UID NUMERIC(15, 0) NOT NULL GENERATED ALWAYS AS IDENTITY
        (START WITH 1 INCREMENT BY 1 CYCLE),
    Firma             FOR COLUMN CKAFIR NUMERIC(3, 0) NOT NULL DEFAULT 0,
    Brukerid          FOR COLUMN CKAUSR CHAR(50) NOT NULL DEFAULT ' ',
    Navn              FOR COLUMN CKANAV CHAR(30) NOT NULL DEFAULT ' ',
    Mobil             FOR COLUMN CKAMOB CHAR(11) NOT NULL DEFAULT ' ',
    Aktiv             FOR COLUMN CKAAKT CHAR(1) NOT NULL DEFAULT 'N'
                      CHECK(AKTIV = 'J' OR AKTIV = 'N'),
    Smskode           FOR COLUMN CKASMK CHAR(6) NOT NULL DEFAULT ' ',
    Smskode_Opprettet FOR COLUMN CKASMO TIMESTAMP,
    Opprettetdato     FOR COLUMN CKAODA DATE NOT NULL DEFAULT CURRENT_DATE,
    Endretdato        FOR COLUMN CKAEDA DATE NOT NULL DEFAULT CURRENT_DATE,
    Endretkl          FOR COLUMN CKAETI TIME NOT NULL DEFAULT CURRENT_TIME,
    Endretav          FOR COLUMN CKAEUS CHAR(10) NOT NULL DEFAULT ' ',
    PRIMARY KEY(UID))
ON REPLACE PRESERVE ALL ROWS;

CREATE UNIQUE INDEX CKAUIU on CKAUST(CKAFIR,CKAUSR);

LABEL ON TABLE CKAUST IS 'Nedlastings autorisasjon';
