-- Overføring Vare

CREATE OR REPLACE TABLE BOVAST(
 Firma             FOR COLUMN FIRM NUMERIC(3, 0) NOT NULL,
 Varenr            FOR COLUMN VARE CHAR(15) CCSID 277 NOT NULL,
 Overgruppe        FOR COLUMN OGRP NUMERIC(2, 0),
 Hovedgruppe       FOR COLUMN HGRP NUMERIC(2, 0),
 Undergruppe       FOR COLUMN UGRP NUMERIC(3, 0),
 Varetekst1        FOR COLUMN TEK1 CHAR(35) CCSID 277,
 Varetekst2        FOR COLUMN TEK2 CHAR(35) CCSID 277,
 Nobbnr            FOR COLUMN NOBB NUMERIC(8, 0),
 Modulnr           FOR COLUMN MODN NUMERIC(8, 0),
 Leverandor        FOR COLUMN LDOR NUMERIC(6, 0),
 LeverandorNavn    FOR COLUMN LNAV CHAR(35) CCSID 277,
 LeverandorVarenr  FOR COLUMN LVAR CHAR(20) CCSID 277,
 NobbDeltakernr    FOR COLUMN DELT NUMERIC(6, 0),
 AltVarenr         FOR COLUMN AVAR CHAR(15) CCSID 277,
 AltHovedgruppe    FOR COLUMN AHGR NUMERIC(2, 0),
 AltUndergruppe    FOR COLUMN AUGR NUMERIC(3, 0),
 Priskode          FOR COLUMN KPRI CHAR(1) CCSID 277,
 Varetype          FOR COLUMN VTYP CHAR(1) CCSID 277,
 Basisenhet        FOR COLUMN ENHE CHAR(3) CCSID 277,
 Statistikkenhet   FOR COLUMN ENHS CHAR(3) CCSID 277,
 Lagerenhet        FOR COLUMN ENHL CHAR(3) CCSID 277,
 Produktansvarlig  FOR COLUMN PRAN CHAR(35) CCSID 277,
 CrossDocking      FOR COLUMN CRDO NUMERIC(1, 0),
 Momskode          FOR COLUMN KMVA CHAR(1) CCSID 277 NOT NULL DEFAULT ' ',
 Ordrerabattkode   FOR COLUMN KORD NUMERIC(1, 0),
 NominellOmrFaktor FOR COLUMN OMRN NUMERIC(12, 6),
 NobbUtgarDato     FOR COLUMN NUDA DATE,
 UtgarDato         FOR COLUMN UDAT DATE,
 Soketekst         FOR COLUMN STEK CHAR(250) CCSID 277,
 OpprettetDato     FOR COLUMN ODAT DATE NOT NULL DEFAULT CURRENT_DATE,
 OpprettetTid      FOR COLUMN OTIM TIME NOT NULL DEFAULT CURRENT_TIME,
 OpprettetAv       FOR COLUMN OUSR CHAR(10) CCSID 277 NOT NULL DEFAULT ' ',
 EndretDato        FOR COLUMN EDAT DATE NOT NULL DEFAULT CURRENT_DATE,
 EndretTid         FOR COLUMN ETIM TIME NOT NULL DEFAULT CURRENT_TIME,
 EndretAv          FOR COLUMN EUSR CHAR(10) CCSID 277 NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

CREATE UNIQUE INDEX BOVAI1
	ON BOVAST (FIRM, VARE);

LABEL ON TABLE BOVAST
	IS 'Overføring Vare';
