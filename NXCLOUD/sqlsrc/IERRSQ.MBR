CREATE OR REPLACE TABLE IERRST(
  UID              INTEGER GENERATED ALWAYS AS IDENTITY,
  Company          FOR COLUMN IEFIRM NUMERIC(3, 0) NOT NULL,
  OppdatertDato    FOR COLUMN IEODAT DATE NOT NULL DEFAULT CURRENT_DATE,
  OppdatertKl      FOR COLUMN IEOTIM TIME NOT NULL DEFAULT CURRENT_TIME,
  OppdatertAv      FOR COLUMN IEOUSR CHAR(10) NOT NULL DEFAULT 'NAVSYSTEM',
  Feilkode         FOR COLUMN IEFKOD CHAR(1) NOT NULL,
  Program          FOR COLUMN IEPROG CHAR(40) NOT NULL,
  Command          FOR COLUMN IECOMD CHAR(20) NOT NULL,
  Params           FOR COLUMN IEPARM VARCHAR(2048) NOT NULL)
ON REPLACE PRESERVE ALL ROWS;

ALTER TABLE IERRST ADD CONSTRAINT IE_UID PRIMARY KEY (UID);

CREATE INDEX IERRI1
	ON IERRST (IEFIRM, IEODAT DESC, IEOTIM DESC);
CREATE INDEX IERRIR
	ON IERRST (UID);

LABEL ON TABLE IERRST IS 'Feiltransaksjoner fra NAV';
