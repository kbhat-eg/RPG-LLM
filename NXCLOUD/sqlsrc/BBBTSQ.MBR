-- KASSE BEHOLDNINGS TRANSAKSJONER

CREATE OR REPLACE TABLE BBBTST( 
 Firma              FOR COLUMN BTFIRM NUMERIC(3, 0) NOT NULL,
 Kasse              FOR COLUMN BTKASS CHAR(3) CCSID 277 NOT NULL,
 Teller             FOR COLUMN BTTELL NUMERIC(9, 0) NOT NULL,
 Type               FOR COLUMN BTTYPE NUMERIC(1, 0) DEFAULT 0,
 Summ               FOR COLUMN BTSUMS NUMERIC(9, 2) DEFAULT 0,
 MacAdresse         FOR COLUMN BTMACA CHAR(17) CCSID 277 DEFAULT ' ',
 OpprettetDato      FOR COLUMN BTODAT DATE NOT NULL DEFAULT CURRENT DATE,
 OpprettetTid       FOR COLUMN BTOTIM TIME NOT NULL DEFAULT CURRENT TIME,
 OpprettetAv        FOR COLUMN BTOUSR CHAR(10) CCSID 277 NOT NULL DEFAULT ' ',
 EndretDato         FOR COLUMN BTEDAT DATE NOT NULL DEFAULT CURRENT DATE,
 EndretTid          FOR COLUMN BTETIM TIME NOT NULL DEFAULT CURRENT TIME,
 EndretAv           FOR COLUMN BTEUSR CHAR(10) CCSID 277 NOT NULL DEFAULT ' ')
 ON REPLACE PRESERVE ALL ROWS;

CREATE INDEX BBBTI1
	ON BBBTST (BTFIRM, BTKASS, BTTELL);

CREATE UNIQUE INDEX BBBTIR
	ON BBBTST (BTFIRM, BTKASS, BTTELL);

CREATE INDEX BBBTIU
	ON BBBTST (BTFIRM, BTKASS, BTTELL);

LABEL ON TABLE BBBTST
	IS 'Kasse beholdnings transaksjoner';
