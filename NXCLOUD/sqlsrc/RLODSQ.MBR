CREATE OR REPLACE TABLE RLODST(
  UID              FOR COLUMN RLODID NUMERIC(18, 0) NOT NULL
                   GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  Firma            FOR COLUMN RLDFIR NUMERIC(3, 0) NOT NULL,
  Transtype        FOR COLUMN RLDTYP CHAR(4) NOT NULL DEFAULT ' ',
  Tid_dannet       FOR COLUMN RLDTS1 TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  Linjenr          FOR COLUMN RLDLIN NUMERIC(8, 0) NOT NULL,
  Periode          FOR COLUMN RLDPER NUMERIC(4, 0) NOT NULL,
  Regnskapsbunt    FOR COLUMN RLDBUN NUMERIC(5, 0) NOT NULL,
  Bilagsnummer     FOR COLUMN RLDBIN NUMERIC(8, 0) NOT NULL,
  Bilagslinje      FOR COLUMN RLDBLI NUMERIC(4, 0) NOT NULL,
  Bilagsdato       FOR COLUMN RLDBDA DATE NOT NULL DEFAULT CURRENT_DATE,
  Forfallsdato     FOR COLUMN RLDFDA DATE NOT NULL DEFAULT CURRENT_DATE,
  Bilagskode       FOR COLUMN RLDBKO NUMERIC(2, 0) NOT NULL,
  Bilagstekst      FOR COLUMN RLDBTX CHAR(20) NOT NULL DEFAULT ' ',
  Debetavd         FOR COLUMN RLDDAV NUMERIC(4, 0) NOT NULL,
  Debetkonto       FOR COLUMN RLDDKO NUMERIC(6, 0) NOT NULL,
  Debetspes        FOR COLUMN RLDDSP NUMERIC(6, 0) NOT NULL,
  Debetmvakode     FOR COLUMN RLDDMV CHAR(1) NOT NULL DEFAULT ' ',
  Belop            FOR COLUMN RLDBEL NUMERIC(10, 2) NOT NULL,
  Mvagrunnlag      FOR COLUMN RLDMVG NUMERIC(10, 2) NOT NULL,
  Kreditavd        FOR COLUMN RLDKAV NUMERIC(4, 0) NOT NULL,
  Kreditkonto      FOR COLUMN RLDKKO NUMERIC(6, 0) NOT NULL,
  Kreditspes       FOR COLUMN RLDKSP NUMERIC(6, 0) NOT NULL,
  Kreditmvakode    FOR COLUMN RLDKMV CHAR(1) NOT NULL DEFAULT ' ',
  Prosjekt         FOR COLUMN RLDPRO CHAR(6) NOT NULL DEFAULT ' ',
  Prosjektakt      FOR COLUMN RLDPRA CHAR(6) NOT NULL DEFAULT ' ',
  Underprosjekt    FOR COLUMN RLDPRU CHAR(6) NOT NULL DEFAULT ' ',
  Arbeidsordre     FOR COLUMN RLDPAO CHAR(6) NOT NULL DEFAULT ' ',
  Kreditreferanse  FOR COLUMN RLDKRF NUMERIC(8, 0) NOT NULL,
  Reskontronummer  FOR COLUMN RLDRES NUMERIC(6, 0) NOT NULL,
  Langkid          FOR COLUMN RLDLKI CHAR(25) NOT NULL DEFAULT ' ',
  Kortkid          FOR COLUMN RLDKKI NUMERIC(8, 0) NOT NULL,
  Kortkidkontr     FOR COLUMN RLDKKK NUMERIC(1, 0) NOT NULL,
  Alternativkid    FOR COLUMN RLDAKI CHAR(25) NOT NULL DEFAULT ' ',
  Valutakode       FOR COLUMN RLDVKO CHAR(3) NOT NULL DEFAULT ' ',
  Valutabelop      FOR COLUMN RLDVBE NUMERIC(11, 2) NOT NULL,
  Mengdekode       FOR COLUMN RLDMKO NUMERIC(2, 0) NOT NULL,
  Mengde           FOR COLUMN RLDMEN NUMERIC(9, 2) NOT NULL,
  Salderingsmerke  FOR COLUMN RLDSAL CHAR(1) NOT NULL DEFAULT ' ',
  Selgersfaktura   FOR COLUMN RLDSFA CHAR(15) NOT NULL DEFAULT ' ',
  Transaksjonstype FOR COLUMN RLDTTY CHAR(4) NOT NULL DEFAULT ' ',
  BetBet           FOR COLUMN RLDBET NUMERIC(2, 0) NOT NULL,
  Remittering      FOR COLUMN RLDREM CHAR(3) NOT NULL DEFAULT)
ON REPLACE PRESERVE ALL ROWS;

LABEL ON TABLE RLODST IS 'Regnskapstranslogg linjer';

CREATE UNIQUE INDEX RLODIU ON RLODST(RLDFIR,RLDTS1,RLDLIN);
CREATE INDEX RLODIR ON RLODST(RLDFIR,RLDTS1,RLDLIN);
CREATE INDEX RLODI1 ON RLODST(RLDFIR,RLDTS1,RLDLIN);

