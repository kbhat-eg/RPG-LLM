-- ButikkGavekortKjøp

CREATE OR REPLACE TABLE BGAKST( 
 Firma             FOR COLUMN BGKFIR NUMERIC(3, 0) NOT NULL,
 Gavekortnr        FOR COLUMN BGKGAV CHAR(12) NOT NULL CCSID 277,
 Bongnr            FOR COLUMN BGKBON CHAR(12) NOT NULL,
 Belop             FOR COLUMN BGKBEL NUMERIC(9, 2),
 OpprettetDato     FOR COLUMN BGKODA DATE NOT NULL DEFAULT CURRENT_DATE,
 OpprettetTid      FOR COLUMN BGKOTI TIME NOT NULL DEFAULT CURRENT_TIME,
 OpprettetAv       FOR COLUMN BGKOUS CHAR(10) CCSID 277 NOT NULL DEFAULT ' ',
 EndretDato        FOR COLUMN BGKEDA DATE NOT NULL DEFAULT CURRENT_DATE,
 EndretTid         FOR COLUMN BGKETI TIME NOT NULL DEFAULT CURRENT_TIME,
 EndretAv          FOR COLUMN BGKEUS CHAR(10) CCSID 277 NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

CREATE UNIQUE INDEX BGAKI1
	ON BGAKST (BGKFIR, BGKGAV, BGKBON);

CREATE UNIQUE INDEX BGAKIR
	ON BGAKST (BGKFIR, BGKGAV, BGKBON);

CREATE UNIQUE INDEX BGAKIU
	ON BGAKST (BGKFIR, BGKGAV, BGKBON);

LABEL ON TABLE BGAKST
	IS 'ButikkGavekortKjøp';
