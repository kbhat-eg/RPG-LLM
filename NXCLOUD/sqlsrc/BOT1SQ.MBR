-- Beholdning pr kasseskuff

CREATE OR REPLACE TABLE BOT1ST( 
 Firma              FOR COLUMN B1FIRM NUMERIC(3, 0) NOT NULL,
 Gruppe             FOR COLUMN B1GRUP CHAR(10) CCSID 277 DEFAULT ' ',
 Kasse              FOR COLUMN B1KASS CHAR(3) CCSID 277 DEFAULT ' ',
 Bruker             FOR COLUMN B1BRUK CHAR(10) CCSID 277 DEFAULT ' ',
 Beholdning         FOR COLUMN B1BEHO NUMERIC(9, 2) DEFAULT 0,
 MacAdresse         FOR COLUMN B1MACA CHAR(17) CCSID 277 DEFAULT ' ',
 OpprettetDato      FOR COLUMN B1ODAT DATE NOT NULL DEFAULT CURRENT DATE,
 OpprettetTid       FOR COLUMN B1OTIM TIME NOT NULL DEFAULT CURRENT TIME,
 OpprettetAv        FOR COLUMN B1OUSR CHAR(10) CCSID 277 NOT NULL DEFAULT ' ',
 EndretDato         FOR COLUMN B1EDAT DATE NOT NULL DEFAULT CURRENT DATE,
 EndretTid          FOR COLUMN B1ETIM TIME NOT NULL DEFAULT CURRENT TIME,
 EndretAv           FOR COLUMN B1EUSR CHAR(10) CCSID 277 NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

CREATE INDEX BOT1I1
	ON BOT1ST (B1FIRM, B1GRUP, B1KASS, B1BRUK);

CREATE UNIQUE INDEX BOT1IR
	ON BOT1ST (B1FIRM, B1GRUP, B1KASS, B1BRUK);

CREATE INDEX BOT1IU
	ON BOT1ST (B1FIRM, B1GRUP, B1KASS, B1BRUK);

LABEL ON TABLE BOT1ST
	IS 'Beholdning pr kasseskuff';
