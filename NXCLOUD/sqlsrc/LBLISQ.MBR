CREATE OR REPLACE TABLE PAKKSEDDELBESTILLINGSLINJE FOR SYSTEM NAME LBLIST
(
  UID              FOR COLUMN PBLUID NUMERIC(18, 0) NOT NULL GENERATED ALWAYS
                   AS IDENTITY (START WITH 1 INCREMENT BY 1 CYCLE),
  Firma            FOR COLUMN PBLFIR NUMERIC(3, 0) NOT NULL,
  SSCCKode         FOR COLUMN PBLSSC NUMERIC(18, 0) NOT NULL,
  NXBestNr         FOR COLUMN PBLNUM NUMERIC(8, 0) NOT NULL,
  NXBestSuffiks    FOR COLUMN PBLSUF NUMERIC(2, 0) NOT NULL,
  NXBestLinjeNr    FOR COLUMN PBLLIN NUMERIC(6, 0) NOT NULL,
  PakkseddelID     FOR COLUMN PBLPID CHAR(17) NOT NULL DEFAULT ' ',
  Versjonsnummer   FOR COLUMN PBLPVE NUMERIC(3, 0) NOT NULL,
  Ar               FOR COLUMN PBLAAR NUMERIC(4, 0) NOT NULL,

  Status           FOR COLUMN PBLSTA CHAR(2) NOT NULL DEFAULT ' ',
  Lasekode         FOR COLUMN PBLLCK NUMERIC(1, 0) NOT NULL,
  GTINnummer       FOR COLUMN PBLGTI CHAR(14) NOT NULL DEFAULT ' ',
  LevVarenummer    FOR COLUMN PBLLVA CHAR(35) NOT NULL DEFAULT ' ',
  NOBBnummer       FOR COLUMN PBLNOB NUMERIC(8, 0) NOT NULL,
  TUNnummer        FOR COLUMN PBLTUN CHAR(35) NOT NULL DEFAULT ' ',
  FINFOnummer      FOR COLUMN PBLFIN CHAR(35) NOT NULL DEFAULT ' ',
  ArtikkelNavn     FOR COLUMN PBLBES CHAR(70) NOT NULL DEFAULT ' ',
  BestiltAntall    FOR COLUMN PBLBAN NUMERIC(15, 4) NOT NULL,
  BestiltEnhet     FOR COLUMN PBLBEN CHAR(3) NOT NULL DEFAULT ' ',
  PakkseddelAntall FOR COLUMN PBLPAN NUMERIC(15, 4) NOT NULL,
  PakkseddelEnhet  FOR COLUMN PBLPEN CHAR(3) NOT NULL DEFAULT ' ',
  RestetAntall     FOR COLUMN PBLRAN NUMERIC(15, 4) NOT NULL,
  RestetEnhet      FOR COLUMN PBLREN CHAR(3) NOT NULL DEFAULT ' ',
  RestetKode       FOR COLUMN PBLRKD CHAR(3) NOT NULL DEFAULT ' ',
  RestetArsak      FOR COLUMN PBLRBE CHAR(70) NOT NULL DEFAULT ' ',
  RestetLevDato    FOR COLUMN PBLRDT DATE NOT NULL DEFAULT CURRENT_DATE,
  VaremottatAntall FOR COLUMN PBLVAN NUMERIC(15, 4) NOT NULL,
  VaremotattEnhet  FOR COLUMN PBLVEN CHAR(3) NOT NULL DEFAULT ' ',
  ForsStrukturNiva FOR COLUMN PBLFSN CHAR(18) NOT NULL DEFAULT ' ',
  ForsNiva         FOR COLUMN PBLFNI NUMERIC(6, 0) NOT NULL,
  LinjeNummer      FOR COLUMN PBLFLI NUMERIC(6, 0) NOT NULL,

  OpprettetDato    FOR COLUMN PBLODA DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetKl      FOR COLUMN PBLOTI TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN PBLOUS CHAR(10) NOT NULL DEFAULT ' ',
  EndretDato       FOR COLUMN PBLEDA DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretTid        FOR COLUMN PBLETI TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN PBLEUS CHAR(10) NOT NULL DEFAULT ' ')

ON REPLACE PRESERVE ALL ROWS;


