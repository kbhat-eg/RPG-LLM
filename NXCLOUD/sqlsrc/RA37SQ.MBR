CREATE OR REPLACE TABLE RA37ST(
  UID              FOR COLUMN RKEUID NUMERIC(18, 0) NOT NULL
                   GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  Firma            FOR COLUMN RKEFIR NUMERIC(3, 0) NOT NULL,
  Ekst_lag         FOR COLUMN RKEELA CHAR(20) NOT NULL DEFAULT ' ',
  Ekst_navn        FOR COLUMN RKENAV CHAR(30) NOT NULL DEFAULT ' ',
  Ekst_adr1        FOR COLUMN RKEAD1 CHAR(30) NOT NULL DEFAULT ' ',
  Ekst_adr2        FOR COLUMN RKEAD2 CHAR(30) NOT NULL DEFAULT ' ',
  Ekst_sted        FOR COLUMN RKESTE CHAR(30) NOT NULL DEFAULT ' ',
  Ekst_GLN         FOR COLUMN RKEGLN NUMERIC(14, 0) NOT NULL,
  Ekst_lev         FOR COLUMN RKELEV NUMERIC(6, 0) NOT NULL,
  SistEndretDat    FOR COLUMN RKEEDA DATE NOT NULL DEFAULT CURRENT_DATE,
  SistEndretTid    FOR COLUMN RKEETI TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN RKEEUS CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

LABEL ON TABLE RA37ST IS 'Informasjon om eksternt lager';

CREATE UNIQUE INDEX RA37IU ON RA37ST(RKEUID);
CREATE INDEX RA37IR ON RA37ST(RKEUID);
CREATE INDEX RA37I1 ON RA37ST(RKEFIR,RKEELA);
CREATE INDEX RA37I2 ON RA37ST(RKEFIR,RKEELA);


