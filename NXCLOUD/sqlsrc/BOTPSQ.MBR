-- Overføring Tilbudspriser

CREATE OR REPLACE TABLE BOTPST( 
 Firma             FOR COLUMN FIRM NUMERIC(3, 0) NOT NULL,
 Varenr            FOR COLUMN VARE CHAR(15) CCSID 277 NOT NULL,
 Leveringstype     FOR COLUMN LETY NUMERIC(1, 0) NOT NULL,
 FraDato           FOR COLUMN FDAT DATE NOT NULL,
 FraTid            FOR COLUMN FTIM TIME NOT NULL,
 TilDato           FOR COLUMN TDAT DATE NOT NULL,
 TilTid            FOR COLUMN TTIM TIME NOT NULL,
 Kampanje          FOR COLUMN KAMP CHAR(5) CCSID 277,
 Enhet1            FOR COLUMN ENH1 CHAR(3) CCSID 277,
 Tilbudspris1      FOR COLUMN TIP1 NUMERIC(9, 2),
 Kostpris1         FOR COLUMN KOP1 NUMERIC(9, 2),
 Enhet2            FOR COLUMN ENH2 CHAR(3) CCSID 277,
 Tilbudspris2      FOR COLUMN TIP2 NUMERIC(9, 2),
 Kostpris2         FOR COLUMN KOP2 NUMERIC(9, 2),
 Enhet3            FOR COLUMN ENH3 CHAR(3) CCSID 277,
 Tilbudspris3      FOR COLUMN TIP3 NUMERIC(9, 2),
 Kostpris3         FOR COLUMN KOP3 NUMERIC(9, 2),
 OpprettetDato     FOR COLUMN ODAT DATE NOT NULL DEFAULT CURRENT_DATE,
 OpprettetTid      FOR COLUMN OTIM TIME NOT NULL DEFAULT CURRENT_TIME,
 OpprettetAv       FOR COLUMN OUSR CHAR(10) CCSID 277 NOT NULL DEFAULT ' ',
 EndretDato        FOR COLUMN EDAT DATE NOT NULL DEFAULT CURRENT_DATE,
 EndretTid         FOR COLUMN ETIM TIME NOT NULL DEFAULT CURRENT_TIME,
 EndretAv          FOR COLUMN EUSR CHAR(10) CCSID 277 NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

LABEL ON TABLE BOTPST
	IS 'Overføring Tilbudspriser';
