-- ButikkHode

CREATE OR REPLACE TABLE BBHEST( 
 Firma               FOR COLUMN BHFIRM NUMERIC(3, 0) NOT NULL,
 Bongnr              FOR COLUMN BHBONG CHAR(12) NOT NULL,
 Kasse               FOR COLUMN BHKASS CHAR(3) CCSID 277 NOT NULL,
 Leveringstype       FOR COLUMN BHLETY NUMERIC(1, 0) NOT NULL DEFAULT 0,
 Avdeling            FOR COLUMN BHAVDE NUMERIC(4, 0) NOT NULL DEFAULT 0,
 Lager               FOR COLUMN BHLAGE NUMERIC(2, 0) NOT NULL DEFAULT 0,
 Selger              FOR COLUMN BHSELG NUMERIC(4, 0) NOT NULL DEFAULT 0,
 Kunde               FOR COLUMN BHKUND NUMERIC(6, 0) NOT NULL DEFAULT 0,
 Kundeprosjekt       FOR COLUMN BHKPRO NUMERIC(6, 0) NOT NULL DEFAULT 0,
 Fakturakunde        FOR COLUMN BHFKUN NUMERIC(6, 0) NOT NULL DEFAULT 0,
 Navn                FOR COLUMN BHNAVN CHAR(35) CCSID 277 NOT NULL DEFAULT ' ',
 Adresse1            FOR COLUMN BHADR1 CHAR(35) CCSID 277 NOT NULL DEFAULT ' ',
 Adresse2            FOR COLUMN BHADR2 CHAR(35) CCSID 277 NOT NULL DEFAULT ' ',
 Postnr              FOR COLUMN BHPONR CHAR(10) CCSID 277 NOT NULL DEFAULT ' ',
 Poststed            FOR COLUMN BHSTED CHAR(35) CCSID 277 NOT NULL DEFAULT ' ',
 Ordrerabatt         FOR COLUMN BHORRA NUMERIC(5, 2) NOT NULL DEFAULT 0,
 OrdrerabattBelop    FOR COLUMN BHORBE NUMERIC(9, 2) NOT NULL DEFAULT 0,
 Referanse           FOR COLUMN BHVREF CHAR(30) CCSID 277 NOT NULL DEFAULT ' ',
 KundensReferanse    FOR COLUMN BHDREF CHAR(30) CCSID 277 NOT NULL DEFAULT ' ',
 Rekvisisjonsnr      FOR COLUMN BHREKV CHAR(20) CCSID 277 NOT NULL DEFAULT ' ',
 LeveringsDato       FOR COLUMN BHLDAT DATE NOT NULL DEFAULT '0001-01-01',
 Leveringsmate       FOR COLUMN BHLMAT NUMERIC(2, 0) NOT NULL DEFAULT 0,
 LeveringsmateText   FOR COLUMN BHLMTX CHAR(20) CCSID 277 NOT NULL DEFAULT ' ',
 IkkeFakturagebyr    FOR COLUMN BHIFGB NUMERIC(1, 0) NOT NULL DEFAULT 0,
 Oreavrunding        FOR COLUMN BHAVRB NUMERIC(2, 2) NOT NULL DEFAULT 0,
 MottattBelop        FOR COLUMN BHMOTB NUMERIC(11, 2) NOT NULL DEFAULT 0,
 Reskontrototal      FOR COLUMN BHRESK NUMERIC(11, 2) NOT NULL DEFAULT 0,
 EkstraUttak         FOR COLUMN BHEKSU NUMERIC(11, 2) NOT NULL DEFAULT 0,
 BetaltKort          FOR COLUMN BHBKRT NUMERIC(11, 2) NOT NULL DEFAULT 0,
 BetaltKontant       FOR COLUMN BHBKNT NUMERIC(11, 2) NOT NULL DEFAULT 0,
 BetaltGavekort      FOR COLUMN BHBGKV NUMERIC(11, 2) NOT NULL DEFAULT 0,
 BetaltDepositum     FOR COLUMN BHBDPO NUMERIC(11, 2) NOT NULL DEFAULT 0,
 Valuta              FOR COLUMN BHVALU CHAR(3) CCSID 277 NOT NULL DEFAULT ' ',
 TermAutentifikasjon FOR COLUMN BHTAUT CHAR(14) CCSID 277 NOT NULL DEFAULT ' ',
 TermTimestamp       FOR COLUMN BHTTIM CHAR(14) CCSID 277 NOT NULL DEFAULT ' ',
 BongA4              FOR COLUMN BHKBA4 NUMERIC(1, 0) NOT NULL DEFAULT 0,
 Ordrenr             FOR COLUMN BHORNR NUMERIC(8, 0) NOT NULL DEFAULT 0,
 OfflineSalg         FOR COLUMN BHOFFL NUMERIC(1, 0) NOT NULL DEFAULT 0,
 Betalingstype       FOR COLUMN BHBTYP NUMERIC(1, 0) NOT NULL DEFAULT 0,
 KasseVersjon        FOR COLUMN BHKVER NUMERIC(3, 0) NOT NULL DEFAULT 0,
 KasseBuild          FOR COLUMN BHKBUL NUMERIC(4, 0) NOT NULL DEFAULT 0,
 OpprettetDato       FOR COLUMN BHODAT DATE NOT NULL DEFAULT CURRENT DATE,
 OpprettetTid        FOR COLUMN BHOTIM TIME NOT NULL DEFAULT CURRENT TIME,
 OpprettetAv         FOR COLUMN BHOUSR CHAR(10) CCSID 277 NOT NULL DEFAULT ' ',
 EndretDato          FOR COLUMN BHEDAT DATE NOT NULL DEFAULT CURRENT DATE,
 EndretTid           FOR COLUMN BHETIM TIME NOT NULL DEFAULT CURRENT TIME,
 EndretAv            FOR COLUMN BHEUSR CHAR(10) CCSID 277 NOT NULL DEFAULT ' ')
 ON REPLACE PRESERVE ALL ROWS;

CREATE UNIQUE INDEX BBHEI1
	ON BBHEST (BHFIRM, BHBONG);

CREATE UNIQUE INDEX BBHEIR
	ON BBHEST (BHFIRM, BHBONG);

CREATE UNIQUE INDEX BBHEIU
	ON BBHEST (BHFIRM, BHBONG);

CREATE INDEX BBHEI2
	ON BBHEST (BHFIRM, BHKASS);

LABEL ON TABLE BBHEST
	IS 'ButikkHode';
