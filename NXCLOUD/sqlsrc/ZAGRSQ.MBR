CREATE OR REPLACE TABLE ZAGRST(
  Instans          FOR COLUMN ZGINST CHAR(10) CCSID 277 NOT NULL,
  Firma            FOR COLUMN ZGFIRM NUMERIC(3, 0) NOT NULL,
  Avdeling         FOR COLUMN ZGAVDE NUMERIC(4, 0) NOT NULL,
  Avdelingsgruppe  FOR COLUMN ZGAVDG NUMERIC(4, 0) NOT NULL,
  Timestamp        FOR COLUMN ZGTMST TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  OpprettetDato    FOR COLUMN ZGODAT DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetKl      FOR COLUMN ZGOTIM TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN ZGOUSR CHAR(10) NOT NULL DEFAULT ' ',
  EndretDato       FOR COLUMN ZGEDAT DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretTid        FOR COLUMN ZGETIM TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN ZGEUSR CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

  CREATE INDEX ZAGRI1
   ON ZAGRST (ZGINST, ZGFIRM, ZGAVDE);

  CREATE UNIQUE INDEX ZAGRIR
   ON ZAGRST (ZGINST, ZGFIRM, ZGAVDE);

  CREATE INDEX ZAGRIU
   ON ZAGRST (ZGINST, ZGFIRM, ZGAVDE);

LABEL ON TABLE ZAGRST IS 'Avdelingsgruppe for Zilliant';
