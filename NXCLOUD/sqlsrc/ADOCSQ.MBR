-- Printfiler som PDF. Historikk.

CREATE OR REPLACE  TABLE ADOCST(
 Uid                FOR COLUMN ADUIDN NUMERIC(9, 0) NOT NULL,
 Firma              FOR COLUMN ADFIRM NUMERIC(3, 0) NOT NULL,
 Kundenr            FOR COLUMN ADKUND NUMERIC(6, 0) DEFAULT 0,
 Prosjektnr         FOR COLUMN ADPROS NUMERIC(6, 0) DEFAULT 0,
 Dokumenttype       FOR COLUMN ADOTYP CHAR(2) CCSID 277 DEFAULT ' ',
 Filnavn            FOR COLUMN ADNAME CHAR(50) CCSID 277 DEFAULT ' ',
 Fillengde          FOR COLUMN ADFILS NUMERIC(8, 0) DEFAULT 0,
 Dokumentdata       FOR COLUMN ADDATA BLOB(10000000),
 MottagerMail       FOR COLUMN ADRCVE CHAR(100) CCSID 277 DEFAULT ' ',
 AvsenderMail       FOR COLUMN ADSNDR CHAR(100) CCSID 277 DEFAULT ' ',
 OpprettetDato      FOR COLUMN BIODAT DATE DEFAULT CURRENT DATE,
 OpprettetTid       FOR COLUMN BIOTIM TIME DEFAULT CURRENT TIME,
 EndretDato         FOR COLUMN BIEDAT DATE DEFAULT CURRENT DATE,
 EndretTid          FOR COLUMN BIETIM TIME DEFAULT CURRENT TIME,
 EndretAv           FOR COLUMN BIEUSR CHAR(10) CCSID 277 DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

CREATE UNIQUE INDEX ADOCI1
	ON ADOCST (ADUIDN);

CREATE INDEX ADOCI2
	ON ADOCST (ADFIRM, ADKUND, ADPROS);

CREATE INDEX ADOCI3
	ON ADOCST (ADFIRM, ADOTYP);

LABEL ON TABLE ADOCST
	IS 'Printdokumentasjon';
