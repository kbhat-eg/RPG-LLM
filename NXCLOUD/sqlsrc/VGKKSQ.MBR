CREATE OR REPLACE TABLE VGKKST(
  UID              FOR COLUMN VGKUID NUMERIC(18, 0) NOT NULL
                   GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  Firma            FOR COLUMN VGKFRM NUMERIC(3, 0) NOT NULL,
  Priskode         FOR COLUMN VGKPRK CHAR(1) NOT NULL DEFAULT ' ',
  Bilagskode       FOR COLUMN VGKBIK NUMERIC(2, 0) NOT NULL,
  Bilagsserie      FOR COLUMN VGKBIS CHAR(6) NOT NULL DEFAULT ' ',
  OppdRegn         FOR COLUMN VGKRGN CHAR(1) NOT NULL DEFAULT ' ',
  OppdTyp          FOR COLUMN VGOPPD CHAR(1) NOT NULL DEFAULT ' ',
  PrisLager        FOR COLUMN VGPRLG CHAR(1) NOT NULL DEFAULT ' ',
  KostkontoSalg    FOR COLUMN VGKKOS NUMERIC(5, 0) NOT NULL,
  KostkontoIntern  FOR COLUMN VGKKOI NUMERIC(5, 0) NOT NULL,
  SistEndretDat    FOR COLUMN VGKDAT DATE NOT NULL DEFAULT CURRENT_DATE,
  SistEndretTid    FOR COLUMN VGKTIM TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN VGKUSR CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

LABEL ON TABLE VGKKST IS 'Koderegister for gj.kostpis';

CREATE UNIQUE INDEX VGKKIU ON VGKKST(VGKFRM);
CREATE INDEX VGKKI1 ON VGKKST(VGKFRM);
CREATE INDEX VGKKIR ON VGKKST(VGKFRM);

