CREATE OR REPLACE TABLE XRHEST(
  UID              NUMERIC(15, 0) NOT NULL GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  Firmanr          FOR COLUMN XRFIRM NUMERIC(3, 0) NOT NULL,
  Batch            FOR COLUMN XRBATC CHAR(50) NOT NULL,
  docType          FOR COLUMN XRDOCT VARCHAR(50) NOT NULL,
  Xml              FOR COLUMN XRXMLD CLOB(10M),
  DisplayTag       FOR COLUMN XRDSPT VARCHAR(250) NOT NULL DEFAULT ' ',
  RefNr            FOR COLUMN XRREFN VARCHAR(256) DEFAULT ' ',
  OpprettetDato    FOR COLUMN XRODAT DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetKl      FOR COLUMN XROTIM TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretDato       FOR COLUMN XREDAT DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretKl         FOR COLUMN XRETIM TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN XROUSR CHAR(10) NOT NULL DEFAULT ' ',
  EndretAv         FOR COLUMN XREUSR CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

ALTER TABLE XRHEST ADD CONSTRAINT XRHEPK PRIMARY KEY (XRFIRM,
 XRBATC);
CREATE UNIQUE INDEX XRHEIU ON XRHEST(UID);

LABEL ON TABLE XRHEST IS 'Arkiv, hode';
