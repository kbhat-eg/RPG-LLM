CREATE OR REPLACE TABLE CLDPST(
  Firma            FOR COLUMN CLPFIR NUMERIC(3, 0) NOT NULL DEFAULT 0,
  Leverandor       FOR COLUMN CLPLEV NUMERIC(6, 0) NOT NULL DEFAULT 0,
  Kjedekategori    FOR COLUMN CLPKAT NUMERIC(4, 0) NOT NULL DEFAULT 0,
  Peker            FOR COLUMN CLPPEK NUMERIC(15, 0) NOT NULL DEFAULT 0,
  OpprettetDato    FOR COLUMN CLPODA DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretDato       FOR COLUMN CLPEDA DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretKl         FOR COLUMN CLPETI TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN CLPEUS CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

CREATE UNIQUE INDEX CLDPIU on CLDPST(CLPFIR,CLPLEV,CLPKAT,CLPPEK);
CREATE INDEX CLDPIR on CLDPST(CLPFIR,CLPLEV,CLPPEK);
CREATE INDEX CLDPI1 on CLDPST(CLPFIR,CLPLEV,CLPPEK);

LABEL ON TABLE CLDPST IS 'Leverand√∏r dokumentpeker';
