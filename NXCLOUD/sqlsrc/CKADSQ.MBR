CREATE OR REPLACE TABLE CKADST(
  UID              NUMERIC(15, 0) NOT NULL GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  CKAHST_UID       NUMERIC(15, 0) NOT NULL ,
  Firma            FOR COLUMN CKDFIR NUMERIC(3, 0) NOT NULL DEFAULT 0,
  Kampanjekode     FOR COLUMN CKDKOD CHAR(15) NOT NULL DEFAULT ' ',
  Varenummer       FOR COLUMN CKDVNU CHAR(8) NOT NULL DEFAULT ' ',
  Varetekst        FOR COLUMN CKDVTK CHAR(35) NOT NULL DEFAULT ' ',
  Leverandornummer FOR COLUMN CKDLNR NUMERIC(6, 0) NOT NULL DEFAULT 0,
  Leverandortekst  FOR COLUMN CKDLTK CHAR(30) NOT NULL DEFAULT ' ',
  Vareenhet        FOR COLUMN CKDENH CHAR(3) NOT NULL DEFAULT ' ',
  Kampanjeinnpris  FOR COLUMN CKDKPI NUMERIC(11, 2) NOT NULL DEFAULT 0,
  Kostpris         FOR COLUMN CKDKPK NUMERIC(11, 2) NOT NULL DEFAULT 0,
  Anbefaltutpris   FOR COLUMN CKDKPA NUMERIC(11, 2) NOT NULL DEFAULT 0,
  Lastutpris       FOR COLUMN CKDKPL NUMERIC(11, 2) NOT NULL DEFAULT 0,
  Visportal        FOR COLUMN CKDVIS CHAR(1) NOT NULL DEFAULT ' ',
  Varebilde        FOR COLUMN CKDBLD BLOB(20M) DEFAULT NULL,
  Varenotater      FOR COLUMN CKDNOT VARCHAR(2000) NOT NULL DEFAULT ' ',
  OpprettetDato    FOR COLUMN CKDODA DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretDato       FOR COLUMN CKDEDA DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretKl         FOR COLUMN CKDETI TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN CKDEUS CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

ALTER TABLE CKADST ADD CONSTRAINT CKADPK PRIMARY KEY (UID);

CREATE UNIQUE INDEX CKADIU
on CKADST(CKDFIR,CKDKOD,CKDVNU);
CREATE INDEX CKADIR on CKADST(CKDFIR,CKDKOD,CKDVNU);
CREATE INDEX CKADI1 on CKADST(CKDFIR,CKDKOD);

LABEL ON TABLE CKADST IS 'Kampanje detaljer';
