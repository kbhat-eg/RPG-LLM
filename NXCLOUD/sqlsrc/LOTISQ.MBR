CREATE OR REPLACE TABLE LOTIST(
  UID              FOR COLUMN LOTUID NUMERIC(18, 0) NOT NULL
                   GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  Company          FOR COLUMN LOTFIR NUMERIC(3, 0) NOT NULL DEFAULT 0,
  BlueridgeID      FOR COLUMN LOTREF CHAR(25) NOT NULL DEFAULT ' ',
  Bestillingsfor   FOR COLUMN LOTFOR NUMERIC(6, 0) NOT NULL DEFAULT 0,
  Ordernbr         FOR COLUMN LOTNUM NUMERIC(8, 0) NOT NULL DEFAULT 0,
  Ordersuf         FOR COLUMN LOTSUF NUMERIC(2, 0) NOT NULL DEFAULT 0,
  Code1            FOR COLUMN LOTKO1 CHAR(1) NOT NULL DEFAULT ' ',
  Code2            FOR COLUMN LOTKO2 CHAR(1) NOT NULL DEFAULT ' ',
  Code3            FOR COLUMN LOTKO3 CHAR(1) NOT NULL DEFAULT ' ',
  Code4            FOR COLUMN LOTKO4 CHAR(1) NOT NULL DEFAULT ' ',
  Code5            FOR COLUMN LOTKO5 CHAR(1) NOT NULL DEFAULT ' ',
  Status           FOR COLUMN LOTSTA NUMERIC(1, 0) NOT NULL DEFAULT 0,
  SistEndretDat    FOR COLUMN LOTEDA DATE NOT NULL DEFAULT CURRENT_DATE,
  SistEndretTid    FOR COLUMN LOTETI TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN LOTEUS CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

LABEL ON TABLE LOTIST IS 'Tilleggsregister bestilling';

CREATE UNIQUE INDEX LOTIIU ON LOTIST(UID);
CREATE INDEX LOTIIR ON LOTIST(LOTFIR,LOTREF);
CREATE INDEX LOTII1 ON LOTIST(LOTFIR,LOTREF);
CREATE INDEX LOTII2 ON LOTIST(LOTFIR,LOTNUM,LOTSUF);
CREATE INDEX LOTII3 ON LOTIST(LOTFIR,LOTFOR);
CREATE INDEX LOTII4 ON LOTIST(LOTFIR,LOTKO1,LOTNUM,LOTSUF);
