CREATE OR REPLACE TABLE BRIDST(
  UID              FOR COLUMN BIDUID NUMERIC(18, 0) NOT NULL
                   GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  WorkMember       FOR COLUMN BIDMEM CHAR(10) NOT NULL DEFAULt ' ',
  WorkLine         FOR COLUMN BIDLIN NUMERIC(8, 0) NOT NULL,
  Lager            FOR COLUMN BIDLAG NUMERIC(2, 0) NOT NULL,
  LagerTekst       FOR COLUMN BIDLTX CHAR(35) NOT NULL DEFAULT ' ',
  LagerID          FOR COLUMN BIDLID CHAR(5) NOT NULL DEFAULT ' ',
  Varenummer       FOR COLUMN BIDVAR CHAR(15) NOT NULL DEFAULT ' ',
  VareTekst        FOR COLUMN BIDVTX CHAR(70) NOT NULL DEFAULT ' ',
  Id               FOR COLUMN BIDIVD CHAR(20) NOT NULL DEFAULT ' ',
  Leverandor       FOR COLUMN BIDLDO NUMERIC(6, 0) NOT NULL,
  LeverandorTekst  FOR COLUMN BIDLDT CHAR(35) NOT NULL DEFAULT ' ',
  BestiltKvantum   FOR COLUMN BIDOQT NUMERIC(11, 3) NOT NULL,
  LevertKvantum    FOR COLUMN BIDLQT NUMERIC(11, 3) NOT NULL,
  Enhet            FOR COLUMN BIDENH CHAR(3) NOT NULL DEFAULT ' ',
  Kundenummer      FOR COLUMN BIDKUN NUMERIC(6, 0) NOT NULL,
  TransDato        FOR COLUMN BIDTDA DATE NOT NULL DEFAULT CURRENT_DATE,
  Status           FOR COLUMN BIDSTA NUMERIC(1, 0) NOT NULL,
  OpprettetDato    FOR COLUMN BIDODA DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetKl      FOR COLUMN BIDOTI TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN BIDOUS CHAR(10) NOT NULL DEFAULT ' ')

ON REPLACE PRESERVE ALL ROWS;

  CREATE INDEX BRIDIU
   ON BRIDST (BIDMEM, BIDVAR, BIDLAG, BIDIVD);
  CREATE INDEX BRIDIR
   ON BRIDST (BIDMEM, BIDVAR, BIDLAG, BIDIVD);

LABEL ON INDEX BRIDIR IS 'Blueridge export invoice daily - workfile';
LABEL ON INDEX BRIDIU IS 'Blueridge export invoice daily - workfile';
LABEL ON TABLE BRIDST IS 'Blueridge export invoice daily - workfile';
