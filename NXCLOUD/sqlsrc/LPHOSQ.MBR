CREATE OR REPLACE TABLE PAKKSEDDELHODE FOR SYSTEM NAME LPHOST
(
  UID              FOR COLUMN PHPUID NUMERIC(18, 0) NOT NULL GENERATED ALWAYS
                   AS IDENTITY (START WITH 1 INCREMENT BY 1 CYCLE),
  Firma            FOR COLUMN PHFIRM NUMERIC(3, 0) NOT NULL,
  Type             FOR COLUMN PHTYPE CHAR(4) NOT NULL DEFAULT ' ',
  Meldingsnummer   FOR COLUMN PHMNUM NUMERIC(8, 0) NOT NULL,
  Ar               FOR COLUMN PHAARR NUMERIC(4, 0) NOT NULL,
  PakkseddelID     FOR COLUMN PHPAID CHAR(17) NOT NULL DEFAULT ' ',
  Versjonsnummer   FOR COLUMN PHPVER NUMERIC(3, 0) NOT NULL,

  Status           FOR COLUMN PHSTAT CHAR(2) NOT NULL DEFAULT ' ',
  Lasekode         FOR COLUMN PHLOCK NUMERIC(1, 0) NOT NULL,
  Pakkseddeldato   FOR COLUMN PHPADT DATE NOT NULL DEFAULT CURRENT_DATE,
  Leveringsstart   FOR COLUMN PHPSDT DATE NOT NULL DEFAULT CURRENT_DATE,
  Leveringslutt    FOR COLUMN PHPEDT DATE NOT NULL DEFAULT CURRENT_DATE,
  BestillingsNr    FOR COLUMN PHBNUM CHAR(17) NOT NULL DEFAULT ' ',
  NXBestNr         FOR COLUMN PHNUMM NUMERIC(8, 0) NOT NULL,
  NXBestSuffiks    FOR COLUMN PHSUFF NUMERIC(2, 0) NOT NULL,
  LevOrdrenummer   FOR COLUMN PHLONR CHAR(35) NOT NULL DEFAULT ' ',
  Prosjektnummer   FOR COLUMN PHPRNR CHAR(35) NOT NULL DEFAULT ' ',
  TransportStadie  FOR COLUMN PHTRST CHAR(3) NOT NULL DEFAULT ' ',
  TransportMate    FOR COLUMN PHTMAT CHAR(25) NOT NULL DEFAULT ' ',
  TransportInfo    FOR COLUMN PHTINF CHAR(256) NOT NULL DEFAULT ' ',
  TotalVolum       FOR COLUMN PHTVOL NUMERIC(8, 4) NOT NULL,
  TotalVekt        FOR COLUMN PHTVEK NUMERIC(10, 4) NOT NULL,
  TotalHoyde       FOR COLUMN PHTHOY NUMERIC(6, 3) NOT NULL,
  TotalLengde      FOR COLUMN PHTLEN NUMERIC(6, 3) NOT NULL,
  TotalBredde      FOR COLUMN PHTBRE NUMERIC(6, 3) NOT NULL,
  LeveringsMate    FOR COLUMN PHLMAT CHAR(3) NOT NULL DEFAULT ' ',
  LeveringsBeting  FOR COLUMN PHLBET CHAR(3) NOT NULL DEFAULT ' ',
  ManVaremottak    FOR COLUMN PHMVAR NUMERIC(1, 0) NOT NULL,

  OpprettetDato    FOR COLUMN PHODAT DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetKl      FOR COLUMN PHOTIM TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN PHOUSR CHAR(10) NOT NULL DEFAULT ' ',
  EndretDato       FOR COLUMN PHEDAT DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretTid        FOR COLUMN PHETIM TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN PHEUSR CHAR(10) NOT NULL DEFAULT ' ')

ON REPLACE PRESERVE ALL ROWS;

CREATE UNIQUE INDEX PAKKSEDDELHODE_IU FOR SYSTEM NAME LPHOIU ON
                    PAKKSEDDELHODE(Firma,Type,Meldingsnummer,Ar,Pakkseddelid,
                                   Versjonsnummer);

CREATE UNIQUE INDEX PAKKSEDDELHODE_I1 FOR SYSTEM NAME LPHOI1 ON
                    PAKKSEDDELHODE(Firma,Type,Meldingsnummer,Ar,Pakkseddelid,
                                   Versjonsnummer);

CREATE UNIQUE INDEX PAKKSEDDELHODE_IR FOR SYSTEM NAME LPHOIR ON
                    PAKKSEDDELHODE(Firma,Type,Meldingsnummer,Ar,Pakkseddelid,
                                   Versjonsnummer);

LABEL ON TABLE PAKKSEDDELHODE      IS 'Pakkseddel hode';
LABEL ON INDEX PAKKSEDDELHODE_IU   IS 'Pakkseddel hode';
LABEL ON INDEX PAKKSEDDELHODE_I1   IS 'Pakkseddel hode';
LABEL ON INDEX PAKKSEDDELHODE_IR   IS 'Pakkseddel hode';
