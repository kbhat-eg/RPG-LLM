-- BongTekst

CREATE OR REPLACE TABLE BBTXST( 
 Firma              FOR COLUMN BTFIRM NUMERIC(3, 0) NOT NULL,
 BongTekst1         FOR COLUMN BTBTX1 CHAR(40) CCSID 277,
 BongTekst2         FOR COLUMN BTBTX2 CHAR(40) CCSID 277,
 BongTekst3         FOR COLUMN BTBTX3 CHAR(40) CCSID 277,
 BongTekst4         FOR COLUMN BTBTX4 CHAR(40) CCSID 277,
 BongTekst5         FOR COLUMN BTBTX5 CHAR(40) CCSID 277,
 OpprettetDato      FOR COLUMN BTODAT DATE NOT NULL DEFAULT CURRENT_DATE,
 OpprettetTid       FOR COLUMN BTOTIM TIME NOT NULL DEFAULT CURRENT_TIME,
 OpprettetAv        FOR COLUMN BTOUSR CHAR(10) CCSID 277 NOT NULL DEFAULT ' ',
 EndretDato         FOR COLUMN BTEDAT DATE NOT NULL DEFAULT CURRENT_DATE,
 EndretTid          FOR COLUMN BTETIM TIME NOT NULL DEFAULT CURRENT_TIME,
 EndretAv           FOR COLUMN BTEUSR CHAR(10) CCSID 277 NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

CREATE UNIQUE INDEX BBTXI1
	ON BBTXST (BTFIRM);

CREATE UNIQUE INDEX BBTXIR
	ON BBTXST (BTFIRM);

CREATE UNIQUE INDEX BBTXIU
	ON BBTXST (BTFIRM);

LABEL ON TABLE BBTXST
	IS 'BongTekst';
