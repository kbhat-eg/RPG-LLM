-- Betalingskort styring

CREATE OR REPLACE TABLE BOKOST( 
 Firma               FOR COLUMN BYFIRM NUMERIC(3, 0) NOT NULL,
 Korttype            FOR COLUMN BYKTYP CHAR(3) CCSID 277 NOT NULL,
 KorttypeTekst       FOR COLUMN BYKTTX CHAR(20) CCSID 277 NOT NULL,
 Hovedbokskonto      FOR COLUMN BYHKON NUMERIC(6, 0) NOT NULL,
 Spesifikasjon       FOR COLUMN BYSPES NUMERIC(4, 0) NOT NULL DEFAULT 0,
 Bilagskode          FOR COLUMN BYBILK NUMERIC(2, 0) NOT NULL DEFAULT 0,
 Reskontronr         FOR COLUMN BYRESK NUMERIC(6, 0) NOT NULL DEFAULT 0,
 Bilagsnummerserie   FOR COLUMN BYBINU CHAR(6) CCSID 277 NOT NULL,
 OpprettetDato       FOR COLUMN BYODAT DATE NOT NULL DEFAULT CURRENT DATE,
 OpprettetTid        FOR COLUMN BYOTIM TIME NOT NULL DEFAULT CURRENT TIME,
 OpprettetAv         FOR COLUMN BYOUSR CHAR(10) CCSID 277 NOT NULL DEFAULT ' ',
 EndretDato          FOR COLUMN BYEDAT DATE NOT NULL DEFAULT CURRENT DATE,
 EndretTid           FOR COLUMN BYETIM TIME NOT NULL DEFAULT CURRENT TIME,
 EndretAv            FOR COLUMN BYEUSR CHAR(10) CCSID 277 NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

CREATE UNIQUE INDEX BOKOI1
	ON BOKOST (BYFIRM, BYKTYP);

CREATE UNIQUE INDEX BOKOIR
	ON BOKOST (BYFIRM, BYKTYP);

CREATE UNIQUE INDEX BOKOIU
	ON BOKOST (BYFIRM, BYKTYP);

LABEL ON TABLE BOKOST
	IS 'Betalingskort styring';
