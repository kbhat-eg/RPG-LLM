
CREATE OR REPLACE TABLE XNTAST
(
UID                       BIGINT NOT NULL GENERATED
 ALWAYS AS IDENTITY (START WITH 1, INCREMENT BY 1),
COMPANY                   NUMERIC (3, 0),
ORDER_NUMBER              NUMERIC (8, 0),
ORDER_SUFFIX              NUMERIC (2, 0),
ORDER_TAG_KEY             VARCHAR(250),
ORDER_TAG                 VARCHAR(1000))
ON REPLACE PRESERVE ALL ROWS;

CREATE UNIQUE INDEX XNTAIU ON XNTAST(COMPANY, ORDER_NUMBER, ORDER_SUFFIX,
                    ORDER_TAG_KEY);
CREATE INDEX XNTAI1 ON XNTAST(COMPANY, ORDER_NUMBER);
CREATE INDEX XNTAI2 ON XNTAST(COMPANY, ORDER_NUMBER);
CREATE INDEX XNTAI3 ON XNTAST(COMPANY, ORDER_NUMBER, ORDER_SUFFIX);

LABEL ON TABLE XNTAST IS 'Ordre TAG Tabell';
