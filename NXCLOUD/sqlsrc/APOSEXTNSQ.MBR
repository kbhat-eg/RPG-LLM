CREATE OR REPLACE TABLE COMPANY_SETTINGS  FOR SYSTEM NAME APOSEXTNST
(
  UID              NUMERIC(18, 0) NOT NULL GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  COMPANY          FOR COLUMN APOSFIRM NUMERIC(3, 0) NOT NULL,
  SYSTEMNAME       FOR COLUMN APOSSYST VARCHAR(256)  NOT NULL,
  CONFIG_KEY       FOR COLUMN APOSCKEY VARCHAR(256)  NOT NULL,
  CONFIG_VALUE     FOR COLUMN APOSKVAL VARCHAR(4000) NOT NULL,
  CREATED_AT       FOR COLUMN APOSCRTT TIMESTAMP     DEFAULT CURRENT_TIMESTAMP,
  CREATED_BY       FOR COLUMN APOSCRTB VARCHAR(128)  WITH DEFAULT USER,
  MODIFIED_AT      FOR COLUMN APOSMODT TIMESTAMP     DEFAULT CURRENT_TIMESTAMP,
  MODIFIED_BY      FOR COLUMN APOSMODB VARCHAR(128)  WITH DEFAULT USER)
ON REPLACE PRESERVE ALL ROWS;

LABEL ON TABLE COMPANY_SETTINGS  IS 'Company settings';

