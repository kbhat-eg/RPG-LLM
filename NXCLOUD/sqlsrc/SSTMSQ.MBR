CREATE OR REPLACE TABLE SSTMST(
  Firma            FOR COLUMN SFFIRM NUMERIC(3, 0) NOT NULL,
  Periode_ar       FOR COLUMN SFPAAR NUMERIC(4, 0) NOT NULL,
  Bilagsnummer     FOR COLUMN SFBINR NUMERIC(8, 0) NOT NULL,
  Bilag_linjenr    FOR COLUMN SFLINE NUMERIC(4, 0) NOT NULL,
  Bilagsdato       FOR COLUMN SFBIDA DATE NOT NULL DEFAULT CURRENT_DATE,
  Ordrenummer      FOR COLUMN SFORNR NUMERIC(8, 0) NOT NULL,
  Ordresuffiks     FOR COLUMN SFORSU NUMERIC(2, 0) NOT NULL,
  Ordrelinje       FOR COLUMN SFORLI NUMERIC(4, 0) NOT NULL,
  Ordredato        FOR COLUMN SFORDA DATE NOT NULL DEFAULT CURRENT_DATE,
  Bongnummer       FOR COLUMN SFBONG CHAR(12) NOT NULL DEFAULT ' ',
  OpprSalgspris    FOR COLUMN SFOSAP NUMERIC(9, 2) NOT NULL,
  OpprTilbudspris  FOR COLUMN SFOTIP NUMERIC(9, 2) NOT NULL,
  OpprKostpris     FOR COLUMN SFOKOP NUMERIC(9, 2) NOT NULL,
  OpprInnkjPris    FOR COLUMN SFOINP NUMERIC(9, 2) NOT NULL,
  OpprPriskode     FOR COLUMN SFOPPK CHAR(1) NOT NULL DEFAULT ' ',
  OpprKundepris    FOR COLUMN SFOKPR NUMERIC(9, 2) NOT NULL,
  OpprKundeRab1    FOR COLUMN SFOKR1 NUMERIC(5, 2) NOT NULL,
  OpprKundeRab2    FOR COLUMN SFOKR2 NUMERIC(5, 2) NOT NULL,
  OpprKundePrisK   FOR COLUMN SFOKPK CHAR(1) NOT NULL DEFAULT ' ',
  Timestamp        FOR COLUMN SFTMST TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  OpprettetDato    FOR COLUMN SFODAT DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetKl      FOR COLUMN SFOTIM TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN SFOUSR CHAR(10) NOT NULL DEFAULT ' ',
  EndretDato       FOR COLUMN SFEDAT DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretTid        FOR COLUMN SFETIM TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN SFEUSR CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

  CREATE INDEX SSTMI1
   ON SSTMST (SFFIRM, SFPAAR, SFBINR, SFLINE, SFBIDA, SFORNR, SFORSU +
              SFORLI, SFORDA, SFBONG);

  CREATE INDEX SSTMIU
   ON SSTMST (SFFIRM, SFPAAR, SFBINR, SFLINE, SFBIDA, SFORNR, SFORSU +
              SFORLI, SFORDA, SFBONG);

  CREATE INDEX SSTMIR
   ON SSTMST (SFFIRM, SFPAAR, SFBINR, SFLINE, SFBIDA, SFORNR, SFORSU +
              SFORLI, SFORDA, SFBONG);


LABEL ON TABLE SSTMST IS 'Salgsstatistikk - skygge';
