CREATE OR REPLACE TABLE BROOST(
  UID              FOR COLUMN BOOUID NUMERIC(18, 0) NOT NULL
                   GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  WorkMember       FOR COLUMN BOOMEM CHAR(10) NOT NULL DEFAULt ' ',
  WorkLine         FOR COLUMN BOOLIN NUMERIC(8, 0) NOT NULL,
  BlueridgeID      FOR COLUMN BOOREF CHAR(25) NOT NULL DEFAULT ' ',
  Lager            FOR COLUMN BOOLAG NUMERIC(2, 0) NOT NULL,
  LagerTekst       FOR COLUMN BOOLTX CHAR(35) NOT NULL DEFAULT ' ',
  LagerID          FOR COLUMN BOOLID CHAR(5) NOT NULL DEFAULT ' ',
  Varenummer       FOR COLUMN BOOVAR CHAR(15) NOT NULL DEFAULT ' ',
  VareTekst        FOR COLUMN BOOVTX CHAR(70) NOT NULL DEFAULT ' ',
  Leverandor       FOR COLUMN BOOLDO NUMERIC(6, 0) NOT NULL,
  LeverandorTekst  FOR COLUMN BOOLDT CHAR(35) NOT NULL DEFAULT ' ',
  OrdreID          FOR COLUMN BOOOID CHAR(15) NOT NULL DEFAULT ' ',
  OrdreSuffiks     FOR COLUMN BOOOSU NUMERIC(2, 0) NOT NULL,
  BestiltKvantum   FOR COLUMN BOOBQT NUMERIC(11, 3) NOT NULL,
  LevertKvantum    FOR COLUMN BOOLQT NUMERIC(11, 3) NOT NULL,
  Enhet            FOR COLUMN BOOENH CHAR(3) NOT NULL DEFAULT ' ',
  Ordredato        FOR COLUMN BOOORD DATE NOT NULL DEFAULT CURRENT_DATE,
  Leveringsdato    FOR COLUMN BOOLDA DATE NOT NULL DEFAULT CURRENT_DATE,
  Status           FOR COLUMN BOOSTA NUMERIC(1, 0) NOT NULL,
  OpprettetDato    FOR COLUMN BOOODA DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetKl      FOR COLUMN BOOOTI TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN BOOOUS CHAR(10) NOT NULL DEFAULT ' ')

ON REPLACE PRESERVE ALL ROWS;

  CREATE INDEX BROOIU
   ON BROOST (BOOMEM, BOOREF, BOOOID, BOOLAG, BOOVAR);
  CREATE INDEX BROOIR
   ON BROOST (BOOMEM, BOOREF, BOOOID, BOOLAG, BOOVAR);

LABEL ON INDEX BROOIR IS 'Blueridge export open orders - workfile';
LABEL ON INDEX BROOIU IS 'Blueridge export open orders - workfile';
LABEL ON TABLE BROOST IS 'Blueridge export open orders - workfile';
