CREATE OR REPLACE TABLE BRITST(
  UID              FOR COLUMN BRIUID NUMERIC(18, 0) NOT NULL
                   GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  WorkMember       FOR COLUMN BRIMEM CHAR(10) NOT NULL DEFAULt ' ',
  WorkLine         FOR COLUMN BRILIN NUMERIC(8, 0) NOT NULL,
  Lager            FOR COLUMN BRILAG NUMERIC(2, 0) NOT NULL,
  LagerTekst       FOR COLUMN BRILTX CHAR(35) NOT NULL DEFAULT ' ',
  LagerID          FOR COLUMN BRILID CHAR(5) NOT NULL DEFAULT ' ',
  Varenummer       FOR COLUMN BRIVAR CHAR(15) NOT NULL DEFAULT ' ',
  VareTekst        FOR COLUMN BRIVTX CHAR(70) NOT NULL DEFAULT ' ',
  AktivKode        FOR COLUMN BRIAKT CHAR(1)  NOT NULL DEFAULT ' ',
  Leverandor       FOR COLUMN BRILDO NUMERIC(6, 0) NOT NULL,
  LeverandorTekst  FOR COLUMN BRILDT CHAR(35) NOT NULL DEFAULT ' ',
  Overgruppe       FOR COLUMN BRIOGP CHAR(2)  NOT NULL DEFAULT ' ',
  OverrgrpTekst    FOR COLUMN BRIOGT CHAR(35) NOT NULL DEFAULT ' ',
  Hovedgruppe      FOR COLUMN BRIHGP CHAR(4)  NOT NULL DEFAULT ' ',
  HovedgrpTekst    FOR COLUMN BRIHGT CHAR(35) NOT NULL DEFAULT ' ',
  Undergruppe      FOR COLUMN BRIUGP CHAR(7)  NOT NULL DEFAULT ' ',
  UndergrpTekst    FOR COLUMN BRIUGT CHAR(35) NOT NULL DEFAULT ' ',
  Modul            FOR COLUMN BRIMOD NUMERIC(8, 0) NOT NULL,
  Hovedleverandor  FOR COLUMN BRIHLD NUMERIC(6, 0) NOT NULL,
  HovedlevTekst    FOR COLUMN BRIHLT CHAR(35) NOT NULL DEFAULT ' ',
  Kostpris         FOR COLUMN BRIKPR NUMERIC(9, 2) NOT NULL,
  Salgspris        FOR COLUMN BRISPR NUMERIC(9, 2) NOT NULL,
  Vekt             FOR COLUMN BRIVEK NUMERIC(11, 3) NOT NULL,
  Volum            FOR COLUMN BRIVOL NUMERIC(11, 3) NOT NULL,
  Ledetid          FOR COLUMN BRILED NUMERIC(3, 0) NOT NULL,
  BestillingPkt    FOR COLUMN BRIMBE NUMERIC(11, 3) NOT NULL,
  Slettekode       FOR COLUMN BRIDEL CHAR(1) NOT NULL DEFAULT ' ',
  Salgsenhet       FOR COLUMN BRISEN CHAR(3) NOT NULL DEFAULT ' ',
  StatusLager      FOR COLUMN BRISLG CHAR(1) NOT NULL DEFAULT ' ',
  Status           FOR COLUMN BRISTA NUMERIC(1, 0) NOT NULL,
  NOBBnummer       FOR COLUMN BRINOB NUMERIC(8, 0) NOT NULL,
  LeveVarenr       FOR COLUMN BRILVA CHAR(20) NOT NULL DEFAULT ' ',
  ErstattesAv      FOR COLUMN BRIERV CHAR(15) NOT NULL DEFAULT ' ',
  Makslager        FOR COLUMN BRIMAX NUMERIC(11, 3) NOT NULL,
  Minimumslager    FOR COLUMN BRIMIN NUMERIC(11, 3) NOT NULL,
  UtgarDato        FOR COLUMN BRIUDA DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetDato    FOR COLUMN BRIODA DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetKl      FOR COLUMN BRIOTI TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN BRIOUS CHAR(10) NOT NULL DEFAULT ' ')

ON REPLACE PRESERVE ALL ROWS;

  CREATE INDEX BRITIU
   ON BRITST (BRIMEM, BRIVAR, BRILAG);
  CREATE INDEX BRITIR
   ON BRITST (BRIMEM, BRIVAR, BRILAG);

LABEL ON INDEX BRITIR IS 'Blueridge export items - workfile';
LABEL ON INDEX BRITIU IS 'Blueridge export items - workfile';
LABEL ON TABLE BRITST IS 'Blueridge export items - workfile';
