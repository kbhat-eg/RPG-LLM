-- ButikkBruker

CREATE OR REPLACE TABLE BUSRST( 
 Firma                 FOR COLUMN BBFIRM NUMERIC(3, 0) NOT NULL,
 Bruker                FOR COLUMN BBUSER CHAR(10) NOT NULL CCSID 277,
 Referanse             FOR COLUMN BBVREF CHAR(20) CCSID 277 NOT NULL,
 Selger                FOR COLUMN BBSELG NUMERIC(4, 0) NOT NULL,
 Rettigheter           FOR COLUMN BBKRET NUMERIC(1, 0) DEFAULT 0,
 --                    0=Ikke tilgang
 --                    1=Bruker
 --                    2=Bruker endre eget oppsett
 --                    9=Administrator
 Kassaoppgjoer         FOR COLUMN BBKOPG NUMERIC(1, 0) DEFAULT 0,
 --                    0=Ikke kassaoppgjør
 --                    1=Kassaoppgjør uten regnskapsoppdatering
 --                    2=Kassaoppgjør med regnskapsoppdatering
 Kostpris              FOR COLUMN BBKKPR NUMERIC(1, 0) DEFAULT 1,
 --                    0=Ikke se kostpris/DG
 --                    1=Se kostpris/DG
 --                    2=Endre kostpris/DG
 EndreSalgspris        FOR COLUMN BBKSPR NUMERIC(1, 0) DEFAULT 1,
 EndreRabatt           FOR COLUMN BBKRAB NUMERIC(1, 0) DEFAULT 1,
 EndreVaretekst        FOR COLUMN BBKVTX NUMERIC(1, 0) DEFAULT 1,
 EndreLager            FOR COLUMN BBKLAG NUMERIC(1, 0) DEFAULT 0,
 EndreAvdeling         FOR COLUMN BBKAVD NUMERIC(1, 0) DEFAULT 0,
 OverstyreKreditGrense FOR COLUMN BBKKGR NUMERIC(1, 0) DEFAULT 0,
 ViseKundeposter       FOR COLUMN BBKKUP NUMERIC(1, 0) DEFAULT 1,
 ViseKostpris          FOR COLUMN BBKKOP NUMERIC(1, 0) DEFAULT 0,
 ViseVaredetalj        FOR COLUMN BBKVAD NUMERIC(1, 0) DEFAULT 0,
 ViseTastatur          FOR COLUMN BBKTAS NUMERIC(1, 0) DEFAULT 0,
 CursorAntall          FOR COLUMN BBKCAN NUMERIC(1, 0) DEFAULT 0,
 BeholdeSelger         FOR COLUMN BBKBSE NUMERIC(1, 0) DEFAULT 0,
 EkstraHjelp           FOR COLUMN BBEKSH NUMERIC(1, 0) DEFAULT 1,
 HentHoldtOrdre        FOR COLUMN BBHHOR NUMERIC(1, 0) DEFAULT 0,
 OpprettetDato         FOR COLUMN BBODAT DATE NOT NULL DEFAULT CURRENT_DATE,
 OpprettetTid          FOR COLUMN BBOTIM TIME NOT NULL DEFAULT CURRENT_TIME,
 OpprettetAv           FOR COLUMN BBOUSR CHAR(10) CCSID 277
                                                  NOT NULL DEFAULT ' ',
 EndretDato            FOR COLUMN BBEDAT DATE NOT NULL DEFAULT CURRENT_DATE,
 EndretTid             FOR COLUMN BBETIM TIME NOT NULL DEFAULT CURRENT_TIME,
 EndretAv              FOR COLUMN BBEUSR CHAR(10) CCSID 277
                                                  NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

CREATE UNIQUE INDEX BUSRI1
	ON BUSRST (BBFIRM, BBUSER);

CREATE UNIQUE INDEX BUSRIR
	ON BUSRST (BBFIRM, BBUSER);

CREATE UNIQUE INDEX BUSRIU
	ON BUSRST (BBFIRM, BBUSER);

LABEL ON TABLE BUSRST
	IS 'ButikkBruker';
