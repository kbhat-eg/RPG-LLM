CREATE OR REPLACE TABLE VLA2ST(
  UID              FOR COLUMN VL2UID NUMERIC(18, 0) NOT NULL
                   GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  Firma            FOR COLUMN VL2FIR NUMERIC(3, 0) NOT NULL,
  Varenummer       FOR COLUMN VL2VAR CHAR(15) NOT NULL DEFAULT ' ',
  Lager            FOR COLUMN VL2LAG NUMERIC(2, 0) NOT NULL,
  RDSLeverandor    FOR COLUMN VL2RLE NUMERIC(6, 0) NOT NULL,
  GenRDSInnkjop    FOR COLUMN VL2GIN NUMERIC(1, 0) NOT NULL,
  OpprettetDato    FOR COLUMN VL2ODA DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetTid     FOR COLUMN VL2OTI TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN VL2OUS CHAR(10) NOT NULL DEFAULT ' ',
  SistEndretDat    FOR COLUMN VL2EDA DATE NOT NULL DEFAULT CURRENT_DATE,
  SistEndretTid    FOR COLUMN VL2ETI TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN VL2EUS CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

LABEL ON TABLE VLA2ST IS 'Tilleggstabell til lager';

CREATE UNIQUE INDEX VLA2IU ON VLA2ST(VL2FIR,VL2VAR,VL2LAG);
CREATE INDEX VLA2I1 ON VLA2ST(VL2FIR,VL2VAR,VL2LAG);
CREATE INDEX VLA2IR ON VLA2ST(VL2FIR,VL2VAR,VL2LAG);
CREATE INDEX VLA2I2 ON VLA2ST(VL2FIR,VL2LAG,VL2VAR);
