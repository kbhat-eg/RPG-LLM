CREATE OR REPLACE TABLE AMERST(
  UID              NUMERIC(15, 0) NOT NULL GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  Forhandlernr     FOR COLUMN AXFORH CHAR(10) NOT NULL DEFAULT ' ',
  BrukerRolle      FOR COLUMN AXBROL CHAR(20) NOT NULL,
  OpprettetDato    FOR COLUMN AXODAT DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretDato       FOR COLUMN AXEDAT DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretKl         FOR COLUMN AXETIM TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN AXEUSR CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

ALTER TABLE AMERST ADD CONSTRAINT AMERPK PRIMARY KEY (UID);
CREATE UNIQUE INDEX AMERIU on AMERST(AXFORH, AXBROL);
CREATE INDEX AMERIR on AMERST(AXFORH, AXBROL);
CREATE INDEX AMERI1 on AMERST(AXFORH, AXBROL);

LABEL ON TABLE AMERST IS 'Forhandler roller';
