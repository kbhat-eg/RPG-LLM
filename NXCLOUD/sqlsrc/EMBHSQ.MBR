-- Kunde bonuselement

CREATE OR REPLACE TABLE EMBHST( 
 Firma               FOR COLUMN EMHFIR NUMERIC(3, 0) NOT NULL,
 Bonustype           FOR COLUMN EMHBOT CHAR(2) DEFAULT ' ',
 Malnummer           FOR COLUMN EMHMNR NUMERIC(5, 0) NOT NULL,
 Beskrivelse         FOR COLUMN EMHBES CHAR(35) DEFAULT ' ',
 Bonuskategori       FOR COLUMN EMHBKA NUMERIC(2, 0) NOT NULL,
 Fradato             FOR COLUMN EMHFRA DATE DEFAULT '0001-01-01',
 Tildato             FOR COLUMN EMHTIL DATE DEFAULT '0001-01-01',
 OpprettetDato       FOR COLUMN EMHODA DATE NOT NULL DEFAULT CURRENT_DATE,
 OpprettetTid        FOR COLUMN EMHOTI TIME NOT NULL DEFAULT CURRENT_TIME,
 OpprettetAv         FOR COLUMN EMHOUS CHAR(10) NOT NULL DEFAULT ' ',
 EndretDato          FOR COLUMN EMHEDA DATE NOT NULL DEFAULT CURRENT_DATE,
 EndretTid           FOR COLUMN EMHETI TIME NOT NULL DEFAULT CURRENT_TIME,
 EndretAv            FOR COLUMN EMHEUS CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

CREATE UNIQUE INDEX EMBHIU
	ON EMBHST (EMHFIR, EMHBOT, EMHMNR);

CREATE UNIQUE INDEX EMBHIR
	ON EMBHST (EMHFIR, EMHBOT, EMHMNR);

CREATE UNIQUE INDEX EMBHI1
	ON EMBHST (EMHFIR, EMHBOT, EMHMNR);

LABEL ON TABLE EMBHST
	IS 'Maler bonuselement';
