CREATE OR REPLACE TABLE VGUIST(
  UID              FOR COLUMN PMAUID NUMERIC(18, 0) NOT NULL
                   GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  PropertyID       FOR COLUMN VGUPID CHAR(50) NOT NULL DEFAULT ' ',
  PropertiName     FOR COLUMN VGIPNA CHAR(256) NOT NULL DEFAULT ' ',
  CreatedDate      FOR COLUMN VPGODA DATE NOT NULL DEFAULT CURRENT_DATE,
  CreatedTime      FOR COLUMN VPGOTI TIME NOT NULL DEFAULT CURRENT_TIME,
  CreatedBy        FOR COLUMN VPGOUS CHAR(10) NOT NULL DEFAULT ' ')

ON REPLACE PRESERVE ALL ROWS;

  CREATE INDEX VGUIIU
   ON VGUIST (VGUPID);
  CREATE INDEX VGUII1
   ON VGUIST (VGUPID);
  CREATE INDEX VGUIIR
   ON VGUIST (VGUPID);

LABEL ON INDEX VGUII1 IS 'EPD GUI properties - article';
LABEL ON INDEX VGUIIR IS 'EPD GUI properties - article';
LABEL ON INDEX VGUIIU IS 'EPD GUI properties - article';
LABEL ON TABLE VGUIST IS 'EPD GUI properties - article';
