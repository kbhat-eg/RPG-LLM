CREATE OR REPLACE TABLE BRSOST(
  UID              FOR COLUMN BRSUID NUMERIC(18, 0) NOT NULL
                   GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  WorkMember       FOR COLUMN BRSMEM CHAR(10) NOT NULL DEFAULt ' ',
  WorkLine         FOR COLUMN BRSLIN NUMERIC(8, 0) NOT NULL,
  Leverandor       FOR COLUMN BRSLDO NUMERIC(6, 0) NOT NULL,
  LeverandorTekst  FOR COLUMN BRSLDT CHAR(35) NOT NULL DEFAULT ' ',
  Adresse_1        FOR COLUMN BRSAD1 CHAR(30) NOT NULL DEFAULT ' ',
  Adresse_2        FOR COLUMN BRSAD2 CHAR(30) NOT NULL DEFAULT ' ',
  Postnummer       FOR COLUMN BRSPNR NUMERIC(4, 0) NOT NULL,
  Sted             FOR COLUMN BRSSTD CHAR(30) NOT NULL DEFAULT ' ',
  Distrikt         FOR COLUMN BRSDIS CHAR(50) NOT NULL DEFAULT ' ',
  Landkode         FOR COLUMN BRSLAN CHAR(2) NOT NULL DEFAULT ' ',
  Valutakode       FOR COLUMN BRSVAL CHAR(3) NOT NULL DEFAULT ' ',
  Saksbehandler    FOR COLUMN BRSSAK CHAR(50) NOT NULL DEFAULT ' ',
  Telefon_Mobil    FOR COLUMN BRSMOB CHAR(15) NOT NULL DEFAULT ' ',
  Fax              FOR COLUMN BRSFAX CHAR(15) NOT NULL DEFAULT ' ',
  Email            FOR COLUMN BRSEMA CHAR(50) NOT NULL DEFAULT ' ',
  Lager            FOR COLUMN BRSLAG NUMERIC(2, 0) NOT NULL,
  LagerTekst       FOR COLUMN BRSLTX CHAR(35) NOT NULL DEFAULT ' ',
  LagerID          FOR COLUMN BRSLID CHAR(5) NOT NULL DEFAULT ' ',
  Status           FOR COLUMN BRSSTA NUMERIC(1, 0) NOT NULL,
  OpprettetDato    FOR COLUMN BRSODA DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetKl      FOR COLUMN BRSOTI TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN BRSOUS CHAR(10) NOT NULL DEFAULT ' ')

ON REPLACE PRESERVE ALL ROWS;

  CREATE INDEX BRSOIR
   ON BRSOST (BRSMEM, BRSLDO, BRSLAG);

LABEL ON INDEX BRSOIR IS 'Blueridge export sources - workfile';
LABEL ON TABLE BRSOST IS 'Blueridge export sources - workfile';
