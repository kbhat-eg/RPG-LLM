CREATE OR REPLACE TABLE ZVPRST(
  Instans          FOR COLUMN ZPINST CHAR(10) CCSID 277 NOT NULL,
  Firma            FOR COLUMN ZPFIRM NUMERIC(3, 0) NOT NULL,
  Varenummer       FOR COLUMN ZPVARE CHAR(15) NOT NULL,
  Leverandor       FOR COLUMN ZPLDOR NUMERIC(6, 0) NOT NULL,
  Enhet            FOR COLUMN ZPENHE CHAR(3) CCSID 277 NOT NULL,
  Kundegruppe      FOR COLUMN ZPKUGR CHAR(10) CCSID 277 NOT NULL,
  Kundekjopstype   FOR COLUMN ZPKKTY CHAR(10) CCSID 277 NOT NULL,
  Avdelingsgruppe  FOR COLUMN ZPAGRP NUMERIC(4, 0) NOT NULL,
  Rulleringstype   FOR COLUMN ZPRUTY CHAR(10) CCSID 277 DEFAULT ' ',
  Startpris        FOR COLUMN ZPSTPR NUMERIC(9, 2) NOT NULL,
  Targetpris       FOR COLUMN ZPTGPR NUMERIC(9, 2) NOT NULL,
  Floorprice       FOR COLUMN ZPFLPR NUMERIC(9, 2) NOT NULL,
  Timestamp        FOR COLUMN ZPTMST TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  OpprettetDato    FOR COLUMN ZPODAT DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetKl      FOR COLUMN ZPOTIM TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN ZPOUSR CHAR(10) NOT NULL DEFAULT ' ',
  EndretDato       FOR COLUMN ZPEDAT DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretTid        FOR COLUMN ZPETIM TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN ZPEUSR CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

  CREATE INDEX ZVPRI1
   ON ZVPRST (ZPINST, ZPFIRM, ZPVARE, ZPLDOR, ZPENHE, ZPKUGR, ZPKKTY, ZPAGRP);

  CREATE UNIQUE INDEX ZVPRIR
   ON ZVPRST (ZPINST, ZPFIRM, ZPVARE, ZPLDOR, ZPENHE, ZPKUGR, ZPKKTY, ZPAGRP);

  CREATE INDEX ZVPRIU
   ON ZVPRST (ZPINST, ZPFIRM, ZPVARE, ZPLDOR, ZPENHE, ZPKUGR, ZPKKTY, ZPAGRP);

LABEL ON TABLE ZVPRST IS 'Vareprisinformasjon for Zilliant';
