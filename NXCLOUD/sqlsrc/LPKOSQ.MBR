CREATE OR REPLACE TABLE PAKKSEDDELKOLLI FOR SYSTEM NAME LPKOST
(
  UID              FOR COLUMN POPUID NUMERIC(18, 0) NOT NULL GENERATED ALWAYS
                   AS IDENTITY (START WITH 1 INCREMENT BY 1 CYCLE),
  Firma            FOR COLUMN POFIRM NUMERIC(3, 0) NOT NULL,
  Type             FOR COLUMN POTYPE CHAR(4) NOT NULL DEFAULT ' ',
  Meldingsnummer   FOR COLUMN POMNUM NUMERIC(8, 0) NOT NULL,
  Ar               FOR COLUMN POAARR NUMERIC(4, 0) NOT NULL,
  PakkseddelID     FOR COLUMN POPAID CHAR(17) NOT NULL DEFAULT ' ',
  Versjonsnummer   FOR COLUMN POPVER NUMERIC(3, 0) NOT NULL,
  ForsStrukturNiva FOR COLUMN POFSNI CHAR(18) NOT NULL DEFAULT ' ',
  ForsNiva         FOR COLUMN POFNIV NUMERIC(6, 0) NOT NULL,

  ForsStrukturPare FOR COLUMN POFSPA CHAR(18) NOT NULL DEFAULT ' ',
  Kollitype        FOR COLUMN POKOTY CHAR(3) NOT NULL DEFAULT ' ',
  Pakningsantall   FOR COLUMN POPANT NUMERIC(8, 0) NOT NULL,
  Serienummer      FOR COLUMN POKSNR CHAR(20) NOT NULL DEFAULT ' ',
  SSCCkode         FOR COLUMN POSSCC NUMERIC(18, 0) NOT NULL,
  Hoyde            FOR COLUMN POHOYD NUMERIC(8, 4) NOT NULL,
  Hoydeenhet       FOR COLUMN POHENH CHAR(3) NOT NULL DEFAULT ' ',
  Lengde           FOR COLUMN POLENG NUMERIC(8, 4) NOT NULL,
  Lengdeenhet      FOR COLUMN POLENH CHAR(3) NOT NULL DEFAULT ' ',
  Bredde           FOR COLUMN POBRED NUMERIC(8, 4) NOT NULL,
  Breddeenhet      FOR COLUMN POBENH CHAR(3) NOT NULL DEFAULT ' ',
  Volum            FOR COLUMN POVOLU NUMERIC(8, 4) NOT NULL,
  Volumenhet       FOR COLUMN POVENH CHAR(3) NOT NULL DEFAULT ' ',
  Bruttovek        FOR COLUMN POBVKT NUMERIC(10, 4) NOT NULL,
  Nettovekt        FOR COLUMN PONVKT NUMERIC(10, 4) NOT NULL,
  Vektenhet        FOR COLUMN POVEEN CHAR(3) NOT NULL DEFAULT ' ',
  Status           FOR COLUMN POSTAT CHAR(2) NOT NULL DEFAULT ' ',
  Lasekode         FOR COLUMN POLOCK NUMERIC(1, 0) NOT NULL,

  OpprettetDato    FOR COLUMN POODAT DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetKl      FOR COLUMN POOTIM TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN POOUSR CHAR(10) NOT NULL DEFAULT ' ',
  EndretDato       FOR COLUMN POEDAT DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretTid        FOR COLUMN POETIM TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN POEUSR CHAR(10) NOT NULL DEFAULT ' ')

ON REPLACE PRESERVE ALL ROWS;

CREATE UNIQUE INDEX PAKKSEDDELKOLLI_IU FOR SYSTEM NAME LPKOIU ON
                    PAKKSEDDELKOLLI(Firma,Type,Meldingsnummer,Ar,Pakkseddelid,
                                   Versjonsnummer,ForsStrukturNiva,ForsNiva,
                                   SSCCKode);

CREATE UNIQUE INDEX PAKKSEDDELKOLLI_I1 FOR SYSTEM NAME LPKOI1 ON
                    PAKKSEDDELKOLLI(Firma,Type,Meldingsnummer,Ar,Pakkseddelid,
                                   Versjonsnummer,ForsStrukturNiva,ForsNiva,
                                   SSCCKode);

CREATE UNIQUE INDEX PAKKSEDDELKOLLI_IR FOR SYSTEM NAME LPKOIR ON
                    PAKKSEDDELKOLLI(Firma,Type,Meldingsnummer,Ar,Pakkseddelid,
                                   Versjonsnummer,ForsStrukturNiva,ForsNiva,
                                   SSCCKode);

CREATE UNIQUE INDEX PAKKSEDDELKOLLI_I2 FOR SYSTEM NAME LPKOI2 ON
                    PAKKSEDDELKOLLI(Firma,Type,SSCCkode,Ar,Pakkseddelid,
                                    Versjonsnummer,ForsStrukturNiva,ForsNiva);

CREATE UNIQUE INDEX PAKKSEDDELKOLLI_I3 FOR SYSTEM NAME LPKOI3 ON
                    PAKKSEDDELKOLLI(Firma,Type,Ar,Pakkseddelid,
                                    Versjonsnummer,SSCCkode);

LABEL ON TABLE PAKKSEDDELKOLLI     IS 'Pakkseddel kolli';
LABEL ON INDEX PAKKSEDDELKOLLI_IU  IS 'Pakkseddel kolli';
LABEL ON INDEX PAKKSEDDELKOLLI_I1  IS 'Pakkseddel kolli';
LABEL ON INDEX PAKKSEDDELKOLLI_IR  IS 'Pakkseddel kolli';
LABEL ON INDEX PAKKSEDDELKOLLI_I2  IS 'Pakkseddel kolli';
LABEL ON INDEX PAKKSEDDELKOLLI_I3  IS 'Pakkseddel kolli';
