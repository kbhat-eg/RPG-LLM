CREATE OR REPLACE TABLE VGKAST(
  UID              FOR COLUMN VGAUID NUMERIC(18, 0) NOT NULL
                   GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  Firma            FOR COLUMN VGAFRM NUMERIC(3, 0) NOT NULL,
  Overgruppe       FOR COLUMN VGAOGR NUMERIC(2, 0) NOT NULL,
  Hovedgruppe      FOR COLUMN VGAHGR NUMERIC(2, 0) NOT NULL,
  Undergruppe      FOR COLUMN VGAUGR NUMERIC(3, 0) NOT NULL,
  Leverandor       FOR COLUMN VGALDO NUMERIC(6, 0) NOT NULL,
  Modul            FOR COLUMN VGAMOD NUMERIC(8, 0) NOT NULL,
  Artikkel         FOR COLUMN VGAART NUMERIC(8, 0) NOT NULL,
  Prosentsats      FOR COLUMN VGAPRO NUMERIC(3, 1) NOT NULL,
  SistEndretDat    FOR COLUMN VGADAT DATE NOT NULL DEFAULT CURRENT_DATE,
  SistEndretTid    FOR COLUMN VGATIM TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN VGAUSR CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

LABEL ON TABLE VGKAST IS 'Avviksprosent for gj.kostpis';

CREATE UNIQUE INDEX VGKAIU ON
        VGKAST(VGAFRM,VGAOGR,VGAHGR,VGAUGR,VGALDO,VGAMOD,VGAART);
CREATE INDEX VGKAIR ON VGKAST(VGAFRM,VGAOGR,VGAHGR,VGAUGR,VGALDO,VGAMOD,VGAART);
CREATE INDEX VGKAI1 ON VGKAST(VGAFRM,VGAOGR,VGAHGR,VGAUGR,VGALDO,VGAMOD,VGAART);

