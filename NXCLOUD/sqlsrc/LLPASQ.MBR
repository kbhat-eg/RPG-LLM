CREATE OR REPLACE TABLE PAKKSEDDELNIVA FOR SYSTEM NAME LLPAST
(
  UID              FOR COLUMN PVPUID NUMERIC(18, 0) NOT NULL GENERATED ALWAYS
                   AS IDENTITY (START WITH 1 INCREMENT BY 1 CYCLE),
  Firma            FOR COLUMN PVFIRM NUMERIC(3, 0) NOT NULL,
  Leverandor       FOR COLUMN PVLDOR NUMERIC(6, 0) NOT NULL,
  Lager            FOR COLUMN PVLAGE NUMERIC(2, 0) NOT NULL,

  PakkseddelNiva   FOR COLUMN PVPNIV NUMERIC(1, 0) NOT NULL,
  Testfrekvens     FOR COLUMN PVTFRK NUMERIC(3, 0) NOT NULL,

  OpprettetDato    FOR COLUMN PVODAT DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetKl      FOR COLUMN PVOTIM TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN PVOUSR CHAR(10) NOT NULL DEFAULT ' ',
  EndretDato       FOR COLUMN PVEDAT DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretTid        FOR COLUMN PVETIM TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN PVEUSR CHAR(10) NOT NULL DEFAULT ' ')

ON REPLACE PRESERVE ALL ROWS;

CREATE UNIQUE INDEX PAKKSEDDELNIVA_IU FOR SYSTEM NAME LLPAIU ON
                    PAKKSEDDELNIVA(Firma,Leverandor,Lager);

CREATE UNIQUE INDEX PAKKSEDDELNIVA_I1 FOR SYSTEM NAME LLPAI1 ON
                    PAKKSEDDELNIVA(Firma,Leverandor,Lager);

CREATE UNIQUE INDEX PAKKSEDDELNIVA_IR FOR SYSTEM NAME LLPAIR ON
                    PAKKSEDDELNIVA(Firma,Leverandor,Lager);

LABEL ON TABLE PAKKSEDDELNIVA      IS 'Pakkseddelnivå pr leverandør';
LABEL ON INDEX PAKKSEDDELNIVA_IU   IS 'Pakkseddelnivå pr leverandør';
LABEL ON INDEX PAKKSEDDELNIVA_I1   IS 'Pakkseddelnivå pr leverandør';
LABEL ON INDEX PAKKSEDDELNIVA_IR   IS 'Pakkseddelnivå pr leverandør';
