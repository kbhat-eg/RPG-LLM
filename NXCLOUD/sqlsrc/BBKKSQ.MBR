-- Kunde kort overføring

CREATE OR REPLACE TABLE BBKKST(
 Firma               FOR COLUMN BKTFIR NUMERIC(3, 0) NOT NULL,
 Bongnr              FOR COLUMN BKTBON CHAR(12) CCSID 277 NOT NULL,
 Kortnr              FOR COLUMN BKTKNR CHAR(50) CCSID 277 NOT NULL,
 Opprettet           FOR COLUMN BKTOTI TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
 OpprettetAv         FOR COLUMN BKTUSR CHAR(10) CCSID 277 NOT NULL)
 ON REPLACE PRESERVE ALL ROWS;

CREATE INDEX BBKKI1
 ON BBKKST (BKTFIR, BKTBON, BKTKNR);

CREATE INDEX BBKKIR
 ON BBKKST (BKTFIR, BKTBON, BKTKNR);

CREATE UNIQUE INDEX BBKKIU
 ON BBKKST (BKTFIR, BKTBON, BKTKNR);

CREATE INDEX BBKKI2
 ON BBKKST (BKTFIR, BKTKNR);

LABEL ON TABLE BBKKST
 IS 'Kundekort overføring';
