CREATE OR REPLACE TABLE CLTIST(
  Firma             FOR COLUMN CLTFIR NUMERIC(3, 0) NOT NULL DEFAULT 0,
  Leverandor        FOR COLUMN CLTLEV NUMERIC(6, 0) NOT NULL DEFAULT 0,
  Rolle             FOR COLUMN CLTROL VARCHAR(2000) NOT NULL DEFAULT ' ',
  Avtale1           FOR COLUMN CLTAV1 VARCHAR(2000) NOT NULL DEFAULT ' ',
  Avtale2           FOR COLUMN CLTAV2 VARCHAR(2000) NOT NULL DEFAULT ' ',
  Rekl_meld_hvor1   FOR COLUMN CLTREH1 VARCHAR(500) NOT NULL DEFAULT ' ',
  Rekl_tilbakemeld1 FOR COLUMN CLTRET1 VARCHAR(500) NOT NULL DEFAULT ' ',
  Rekl_mindre1      FOR COLUMN CLTREM1 VARCHAR(500) NOT NULL DEFAULT ' ',
  Rekl_storre1      FOR COLUMN CLTRES1 VARCHAR(500) NOT NULL DEFAULT ' ',
  Rekl_meld_hvor2   FOR COLUMN CLTREH2 VARCHAR(500) NOT NULL DEFAULT ' ',
  Rekl_tilbakemeld2 FOR COLUMN CLTRET2 VARCHAR(500) NOT NULL DEFAULT ' ',
  Rekl_mindre2      FOR COLUMN CLTREM2 VARCHAR(500) NOT NULL DEFAULT ' ',
  Rekl_storre2      FOR COLUMN CLTRES2 VARCHAR(500) NOT NULL DEFAULT ' ',
  Leveringsbet1     FOR COLUMN CLTLB1 VARCHAR(2000) NOT NULL DEFAULT ' ',
  Leveringsbet2     FOR COLUMN CLTLB2 VARCHAR(2000) NOT NULL DEFAULT ' ',
  Soketekst         FOR COLUMN CLTSOK VARCHAR(300) NOT NULL DEFAULT ' ',
  Logo              FOR COLUMN CLTLOG BLOB(20M) DEFAULT NULL,
  Logo_typ          FOR COLUMN CLTLTY CHAR(5) NOT NULL DEFAULT ' ',
  Hit_count         FOR COLUMN CLTCNT NUMERIC(6, 0) NOT NULL DEFAULT 0,
  OpprettetDato     FOR COLUMN CLRODA DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretDato        FOR COLUMN CLREDA DATE NOT NULL DEFAULT CURRENT_DATE,
  EndretKl          FOR COLUMN CLRETI TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv          FOR COLUMN CLREUS CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

CREATE UNIQUE INDEX CLTIIU on CLTIST(CLTFIR,CLTLEV);
CREATE INDEX CLTIIR on CLTIST(CLTFIR,CLTLEV);
CREATE INDEX CLTII1 on CLTIST(CLTFIR,CLTLEV);

