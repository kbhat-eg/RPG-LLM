CREATE OR REPLACE TABLE RLOBST(
  UID              FOR COLUMN RLBOID NUMERIC(18, 0) NOT NULL
                   GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  Firma            FOR COLUMN RLBFIR NUMERIC(3, 0) NOT NULL,
  Bilagsnummer     FOR COLUMN RLBBIL NUMERIC(8, 0) NOT NULL,
  Tid_dannet       FOR COLUMN RLBTS1 TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  Ant_poster_ut    FOR COLUMN RLBAN1 NUMERIC(5, 0) NOT NULL,
  Sum_debet_ut     FOR COLUMN RLBSD1 NUMERIC(12, 2) NOT NULL,
  Sum_kredit_ut    FOR COLUMN RLBSK1 NUMERIC(12, 2) NOT NULL,
  Bruker_dannet    FOR COLUMN RLBBR1 CHAR(10) NOT NULL DEFAULT ' ',
  Tid_overf        FOR COLUMN RLBTS2 TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  Ant_poster_ovf   FOR COLUMN RLBAN2 NUMERIC(3, 0) NOT NULL,
  Sum_debet_ovf    FOR COLUMN RLBSD2 NUMERIC(12, 2) NOT NULL,
  Sum_kredit_ovf   FOR COLUMN RLBSK2 NUMERIC(12, 2) NOT NULL,
  Bruker_overf     FOR COLUMN RLBBR2 CHAR(10) NOT NULL DEFAULT ' ',
  Feilkode_ovf     FOR COLUMN RLBFF2 CHAR(2) NOT NULL DEFAULT ' ',
  Feiltekst_ovf    FOR COLUMN RLBFT2 CHAR(120) NOT NULL DEFAULT ' ',
  Tid_kladd        FOR COLUMN RLBTS3 TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  Ant_poster_kladd FOR COLUMN RLBAN3 NUMERIC(3, 0) NOT NULL,
  Sum_debet_kladd  FOR COLUMN RLBSD3 NUMERIC(12, 2) NOT NULL,
  Sum_kredit_kladd FOR COLUMN RLBSK3 NUMERIC(12, 2) NOT NULL,
  Bruker_kladd     FOR COLUMN RLBBR3 CHAR(10) NOT NULL DEFAULT ' ',
  Feilkode_kladd   FOR COLUMN RLBFF3 CHAR(2) NOT NULL DEFAULT ' ',
  Feiltekst_kladd  FOR COLUMN RLBFT3 CHAR(120) NOT NULL DEFAULT ' ',
  Tid_journ        FOR COLUMN RLBTS4 TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  Ant_poster_journ FOR COLUMN RLBAN4 NUMERIC(3, 0) NOT NULL,
  Sum_debet_journ  FOR COLUMN RLBSD4 NUMERIC(12, 2) NOT NULL,
  Sum_kredit_journ FOR COLUMN RLBSK4 NUMERIC(12, 2) NOT NULL,
  Bruker_journ     FOR COLUMN RLBBR4 CHAR(10) NOT NULL DEFAULT ' ',
  Feilkode_journ   FOR COLUMN RLBFF4 CHAR(2) NOT NULL DEFAULT ' ',
  Feiltekst_journ  FOR COLUMN RLBFT4 CHAR(120) NOT NULL DEFAULT ' ',
  Tid_omkj         FOR COLUMN RLBTS5 TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  Bruker_omkj      FOR COLUMN RLBBR5 CHAR(10) NOT NULL DEFAULT ' ',
  Tid_slett        FOR COLUMN RLBTS6 TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  Bruker_slett     FOR COLUMN RLBBR6 CHAR(10) NOT NULL DEFAULT ' ',
  Ekst_dok_nbr     FOR COLUMN RLBDNR CHAR(50) NOT NULL DEFAULT ' ',
  Ekst_dok_id      FOR COLUMN RLBDID CHAR(25) NOT NULL DEFAULT ' ',
  Slett_flagg      FOR COLUMN RLBSLT CHAR(1) NOT NULL DEFAULT ' ',
  Omkj_flagg       FOR COLUMN RLBOMK CHAR(1) NOT NULL DEFAULT ' ',
  Doku_flagg       FOR COLUMN RLBDOK CHAR(1) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

LABEL ON TABLE RLOBST IS 'Regnskapstranslogg bilag';

CREATE UNIQUE INDEX RLOBIU ON RLOBST(RLBFIR,RLBTS1,RLBBIL);
CREATE INDEX RLOBIR ON RLOBST(RLBFIR,RLBTS1,RLBBIL);
CREATE INDEX RLOBI1 ON RLOBST(RLBFIR,RLBTS1,RLBBIL);

