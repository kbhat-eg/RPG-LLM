CREATE OR REPLACE TABLE RKU3ST(
  UID              FOR COLUMN R3VUID NUMERIC(18, 0) NOT NULL
                   GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  Firma            FOR COLUMN R3FIRM NUMERIC(3, 0) NOT NULL,
  Kundenummer      FOR COLUMN R3KUND NUMERIC(6, 0) NOT NULL,
  ProfileText      FOR COLUMN R3PMTX CHAR(50) NOT NULL DEFAULT ' ',
  ProfileVarer     FOR COLUMN R3NOIT NUMERIC(9, 0) NOT NULL,
  ProfileKey       FOR COLUMN R3PKEY CHAR(15) NOT NULL DEFAULT ' ',
  OpprettetDato    FOR COLUMN R3ODAT DATE NOT NULL DEFAULT CURRENT_DATE,
  OpprettetKl      FOR COLUMN R3OTIM TIME NOT NULL DEFAULT CURRENT_TIME,
  OpprettetAv      FOR COLUMN R3OUSR CHAR(10) NOT NULL DEFAULT ' ',
  SistEndretDat    FOR COLUMN R3EDAT DATE NOT NULL DEFAULT CURRENT_DATE,
  SistEndretTid    FOR COLUMN R3ETIM TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN R3EUSR CHAR(10) NOT NULL DEFAULT ' ')

ON REPLACE PRESERVE ALL ROWS;

  CREATE INDEX RKU3I1
   ON RKU3ST (R3FIRM, R3KUND);

  CREATE INDEX RKU3IU
   ON RKU3ST (R3FIRM, R3KUND);

  CREATE INDEX RKU3IR
   ON RKU3ST (R3FIRM, R3KUND);

LABEL ON INDEX RKU3IU IS 'Kunder - Profile Manager info';
LABEL ON INDEX RKU3I1 IS 'Kunder - Profile Manager info';
LABEL ON INDEX RKU3IR IS 'Kunder - Profile Manager info';
LABEL ON TABLE RKU3ST IS 'Kunder - Profile Manager info';
