CREATE OR REPLACE TABLE RA36ST(
  UID              FOR COLUMN RKRUID NUMERIC(18, 0) NOT NULL
                   GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  Firma            FOR COLUMN RKRFIR NUMERIC(3, 0) NOT NULL,
  Fors_kode        FOR COLUMN RKRFSK NUMERIC(2, 0) NOT NULL,
  Salg_lag         FOR COLUMN RKRSLA NUMERIC(2, 0) NOT NULL,
  Ekst_lag         FOR COLUMN RKRELA CHAR(20) NOT NULL DEFAULT ' ',
  SistEndretDat    FOR COLUMN RKREDA DATE NOT NULL DEFAULT CURRENT_DATE,
  SistEndretTid    FOR COLUMN RKRETI TIME NOT NULL DEFAULT CURRENT_TIME,
  EndretAv         FOR COLUMN RKREUS CHAR(10) NOT NULL DEFAULT ' ')
ON REPLACE PRESERVE ALL ROWS;

LABEL ON TABLE RA36ST IS 'Kobling til eksternt lager';

CREATE UNIQUE INDEX RA36IU ON RA36ST(RKRUID);
CREATE INDEX RA36IR ON RA36ST(RKRUID);
CREATE INDEX RA36I1 ON RA36ST(RKRFIR,RKRFSK,RKRSLA);
CREATE INDEX RA36I2 ON RA36ST(RKRFIR,RKRFSK,RKRSLA,RKRELA);



