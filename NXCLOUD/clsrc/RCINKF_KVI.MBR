             PGM        parm(&bryt)

             DCL        VAR(&p_selsk)  TYPE(*CHAR) LEN(10)
             DCL        VAR(&p_msg1)   TYPE(*CHAR) LEN(50)
             DCL        VAR(&p_msg2)   TYPE(*CHAR) LEN(50)
             DCL        VAR(&p_sva)    TYPE(*CHAR) LEN(1)   value('J')
             DCL        VAR(&in12)     TYPE(*dec)  LEN(1 0)
             DCL        VAR(&bryt)     TYPE(*char) LEN(1)

             DCL        VAR(&FIRM)   TYPE(*CHAR) LEN(3)
             DCL        VAR(&WWFIRM) TYPE(*DEC)  LEN(3 0)
             DCL        VAR(&FILG)   TYPE(*CHAR) LEN(3)
             DCL        VAR(&LAGE)   TYPE(*DEC)  LEN(3 0)  VALUE(0)
             DCL        VAR(&CO402_KEY) TYPE(*CHAR) LEN(50) +
                          VALUE('INKASSO_FLERE_AKTØRER')
             DCL        VAR(&CO402_V1) TYPE(*CHAR) LEN(1)
             DCL        VAR(&CO402_V2) TYPE(*CHAR) LEN(2048)

/*  sjekk om firmaet kjører Inksso mot flerer aktører eks, Lindorf og Svea    */
/* Henter filgruppe og firmanummer:                                  */
             RTVDTAARA  DTAARA(*LDA (931 3)) RTNVAR(&FILG)
             RTVDTAARA  DTAARA(*LDA (944 3)) RTNVAR(&FIRM)
             CHGVAR     VAR(&WWFIRM) VALUE(&FIRM)
             CALL       PGM(CO402R) PARM(&FILG &WWFIRM &LAGE &CO402_KEY +
                          &CO402_V1 &CO402_V2)
             IF         COND(&CO402_V1 *ne '1') THEN(goto cmdlbl(endpgm))

/* _________________________________________________________________ */
/* Valg  ? - Kvitter med selskap                                     */

             CALL       PGM(RC720r)    parm(&P_selsk)
             chgvar     var(&p_msg1)   value('Du kjører nå Inkasso mot ')
             chgvar     var(&p_msg2)   value('       ' *cat &p_selsk)
             call       pgm(aa007r)    parm(&p_msg1 &p_msg2 &p_sva &in12)
/* _________________________________________________________________ */
             if         cond(&p_sva *ne 'J') then(do)
               chgvar   var(&bryt)  value('J')
             enddo
             if         cond(&in12 *eq 1) then(do)
               chgvar   var(&bryt)  value('J')
             enddo


 ENDPGM:     ENDPGM
