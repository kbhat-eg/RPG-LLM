/*   Denne jobben startes fra jobscde på alle maskiner kl 0700 hver morgen untatt søndag     */
/*   Dersom ikke *public har full tilgang til sktist sendes sms til konsulentene i NXC_Distr */
/*          samtidig som det legges ut en linje i ADB/NXLAPF med Jobbnavn CHK_SKTIST         */
/*          &sec og &end styrer hvor ofte jobben kjøres og når den avsluttes om kvelden      */
/*                                                                                           */
 strpgm:     pgm

             dcl        var(&sec)  type(*dec)  len(6 0)   value(300)   /* Interval for kjøring  */
             dcl        var(&end)  type(*char) len(02)    value('23')  /* Slutt klokken         */
             dcl        var(&tid)  type(*char) len(20)

nystart:     dspobjaut obj(sktist) objtype(*file) output(*outfile) outfile(adb/skti_aut)
             dspobjaut obj(sktii1) objtype(*file) output(*outfile) outfile(adb/skti_aut) +
                                                  outmbr(*first *add)

             call       pgm(tst_skti2)

             dlyjob       dly(&sec)
             rtvjoba      datetime(&tid)
             if           cond(%sst(&tid 09 4) *gt '0557' *and +
                               %sst(&tid 09 4) *lt '0602') then(do)
               dlyjob     dly(300)
             enddo
             if           cond(%sst(&tid 09 2) *lt &end) then(do)
               goto       cmdlbl(nystart)
             enddo

             endpgm
