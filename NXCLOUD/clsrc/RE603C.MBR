             PGM

/* Initiering av parametre.                                          */

             DCL        VAR(&FFIR)  TYPE(*CHAR) LEN(3)
             DCL        VAR(&WALI)  TYPE(*DEC)  LEN(2 0)
             DCL        VAR(&WAPO)  TYPE(*DEC)  LEN(2 0)
             DCL        VAR(&MLD1)  TYPE(*CHAR) LEN(40)
             DCL        VAR(&MLD2)  TYPE(*CHAR) LEN(40)
             DCL        VAR(&MEMB)  TYPE(*CHAR) LEN(10) VALUE('KLI   ')
             DCL        VAR(&tilm)  TYPE(*CHAR) LEN(25)
             DCL        VAR(&tild)  TYPE(*CHAR) LEN(25)
             DCL        VAR(&fgr)   TYPE(*CHAR) LEN(3)

/* Henter verdier i fra LDA.                                         */

             RTVDTAARA  DTAARA(*LDA (944 03)) RTNVAR(&FFIR)
             RTVDTAARA  DTAARA(*LDA (931 03)) RTNVAR(&fgr)
             CHGVAR     VAR(%SST(&MEMB 4 3)) VALUE(&FFIR)

/* Varselbilde 1                                                     */

             CHGVAR     VAR(&WALI) VALUE(4)
             CHGVAR     VAR(&WAPO) VALUE(44)
             CHGVAR     VAR(&MLD1) VALUE('Vennligst vent litt .....')
             CHGVAR     VAR(&MLD2) VALUE('Utplukk pågår ...........')
             CALL       PGM(AA006C)  PARM(&WALI &WAPO &MLD1 &MLD2)

/* Bygger membere dersom de ikke finnes                              */

             CHKOBJ     OBJ(RE01PF) OBJTYPE(*FILE) MBR(&MEMB)
             MONMSG     MSGID(CPF9815) EXEC(DO)
             ADDPFM     FILE(RE01PF) MBR(&MEMB) TEXT('Poster til +
                          Triplan budsjett- og rapportsystem')
             ENDDO

             CLRPFM     FILE(RE01PF) MBR(&MEMB)
             MONMSG     MSGID(CPF3100)

/* Utplukking av poster                                              */

             OVRDBF     FILE(RE01PF) MBR(&MEMB)

             CALL       PGM(RE603R)

             DLTOVR     FILE(RE01PF)

/* Utvekslingsfile legges ut i DIR: PCTRIO (I:)                      */

/*           CPYTOPCD   FROMFILE(*LIBL/RE01PF) TOFLR(PCTRIO) +       */
/*                       FROMMBR(&MEMB) TODOC(&MEMB) REPLACE(*YES) + */
                          /* Saldobalanse/budsjett fra AS Økonomi */
             chgvar     var(&tilm) value('/asp/' *cat &fgr *cat +
                                                '/PCTRIO')
             chgvar     var(&tild) value(&memb)
             call       pgm(asptostmf) +
                        parm('RE01PF    ' +
                             &memb   +
                             &tilm   +
                             &tild   +
                             '   ')

             MONMSG     MSGID(CPF0000)

 END:        ENDPGM
