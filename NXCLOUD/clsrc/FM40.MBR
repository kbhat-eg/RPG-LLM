             PGM
             DCLF       FILE(FM40)
             DCL        VAR(&FNAV)     TYPE(*CHAR) LEN(30)
             DCL        VAR(&LEVL)     TYPE(*CHAR) LEN(2)
             DCL        VAR(&OKOK)     TYPE(*CHAR) LEN(2)

             DCL        VAR(&FIRM)   TYPE(*CHAR) LEN(3)
             DCL        VAR(&WWFIRM) TYPE(*DEC)  LEN(3 0)
             DCL        VAR(&FILG)   TYPE(*CHAR) LEN(3)
             DCL        VAR(&LAGE)   TYPE(*DEC)  LEN(3 0)  VALUE(0)
             DCL        VAR(&CO402_KEY) TYPE(*CHAR) LEN(50) +
                          VALUE('FM40_INNL_LOKAL_KAMP')
             DCL        VAR(&CO402_V1) TYPE(*CHAR) LEN(1)
             DCL        VAR(&CO402_V2) TYPE(*CHAR) LEN(2048)

             MONMSG     MSGID(CPF0001) EXEC(GOTO MELDE)
             MONMSG     MSGID(CPA0701) EXEC(GOTO START)
             MONMSG     MSGID(CPF0000) EXEC(GOTO START)
             MONMSG     MSGID(CPF9999) EXEC(GOTO START)

/* Sette opp driftsmiljø                                             */

             CALL       PGM(FSETUP)

/*  12.Kampanjepriser fra fil vises ikke                                      */
             CHGVAR     VAR(&IN41)     VALUE('0')
             CHGVAR     VAR(&IN42)     VALUE('0')

/* Kontrollere brukertilgang                                         */

             CHGVAR     VAR(&LEVL)     VALUE('20')
             CHGVAR     VAR(&OKOK)     VALUE('  ')
             CALL       PGM(AA050C)    PARM(&LEVL &OKOK)
             IF         COND(&OKOK *NE 'OK') THEN(DO)
             CALL       PGM(AA004C)
             GOTO       CMDLBL(ENDPGM)
             ENDDO

/*  sjekk om "12.Kampanjepriser fra fil" er aktiv                             */
/* Henter filgruppe og firmanummer:                                  */
             RTVDTAARA  DTAARA(*LDA (931 3)) RTNVAR(&FILG)
             RTVDTAARA  DTAARA(*LDA (944 3)) RTNVAR(&FIRM)
             CHGVAR     VAR(&WWFIRM) VALUE(&FIRM)
             CALL       PGM(CO402R) PARM(&FILG &WWFIRM &LAGE &CO402_KEY +
                          &CO402_V1 &CO402_V2)
             IF         COND(&CO402_V1 *EQ '1') THEN(CHGVAR VAR(&IN41) +
                          VALUE('1'))
/*  sjekk om "13.Kundeklubbinnlesing fra CSV                            */
/* Henter filgruppe og firmanummer:                                  */
             CHGVAR     VAR(&CO402_KEY) VALUE(FM40_INNL_LOKAL_KLUB)

             CALL       PGM(CO402R) PARM(&FILG &WWFIRM &LAGE &CO402_KEY +
                          &CO402_V1 &CO402_V2)
             IF         COND(&CO402_V1 *EQ '1') THEN(CHGVAR VAR(&IN42) +
                          VALUE('1'))

 START:      RTVDTAARA  DTAARA(*LDA (951 30)) RTNVAR(&FNAV)
             CHGVAR     VAR(&VALG)     VALUE(0)
             CHGVAR     VAR(&A1FNAV)   VALUE(&FNAV)
             SNDRCVF    RCDFMT(A1MNU)

/* Tester på funksjonstaster                                         */

/* F1                                                                */
             IF         COND(&IN01) THEN(DO)
             CALL       PGM(AA001C)
             GOTO       CMDLBL(START)
             ENDDO

/* F3                                                                */
             IF         COND(&IN03) THEN(GOTO CMDLBL(ENDPGM))

/* F5                                                                */
             IF         COND(&IN05) THEN(DO)
             CALL       PGM(AM80)
             GOTO       CMDLBL(START)
             ENDDO

/* F6                                                                */
             IF         COND(&IN06) THEN(DSPMSG)

/* F10                                                               */
             IF         COND(&IN10) THEN(CALL QCMD)

/* F12                                                               */
             IF         COND(&IN12) THEN(GOTO CMDLBL(ENDPGM))

/* Valg 1                                                            */
             IF         COND(&VALG *EQ 1) THEN(DO)
             CALL       PGM(FW100R)
             GOTO       CMDLBL(START)
             ENDDO

/* Valg 2                                                            */
             IF         COND(&VALG *EQ 2) THEN(DO)
             CALL       PGM(FP750R)
             GOTO       CMDLBL(START)
             ENDDO

/* Valg 3                                                            */
             IF         COND(&VALG *EQ 3) THEN(DO)
             CALL       PGM(VP150R)
             GOTO       CMDLBL(START)
             ENDDO

/* Valg 4                                                            */
             IF         COND(&VALG *EQ 4) THEN(DO)
             CALL       PGM(FW120R)
             GOTO       CMDLBL(START)
             ENDDO

/* Valg 5                                                            */
             IF         COND(&VALG *EQ 5) THEN(DO)
             CALL       PGM(FW125R)
             GOTO       CMDLBL(START)
             ENDDO

/* Valg 6                                                            */
             IF         COND(&VALG *EQ 6) THEN(DO)
             CALL       PGM(FW600R)
             GOTO       CMDLBL(START)
             ENDDO

/* Valg 8                                                            */
             IF         COND(&VALG *EQ 8) THEN(DO)
             STRPASTHR  RMTLOCNAME(JERN400)
             GOTO       CMDLBL(START)
             ENDDO

/* Valg 9                                                            */
             IF         COND(&VALG *EQ 9) THEN(DO)
             CALL       PGM(FW190R)
             GOTO       CMDLBL(START)
             ENDDO

/* Valg 10                                                           */
             IF         COND(&VALG *EQ 10) THEN(DO)
             CALL       PGM(FE100R)
             GOTO       CMDLBL(START)
             ENDDO

/* Valg 12                                                           */
             IF         COND(&VALG *EQ 12) THEN(DO)
/* Kontrollere       tilgang                                         */
                IF         COND(&IN41 *NE '1') THEN(DO)
                   CALL       PGM(AA004C)
                   GOTO       CMDLBL(START)
                ENDDO
                CALL       PGM(VT701R)
                GOTO       CMDLBL(START)
             ENDDO
/* Valg 13                                                           */
             IF         COND(&VALG *EQ 13) THEN(DO)
/* Kontrollere       tilgang                                         */
                IF         COND(&IN42 *NE '1') THEN(DO)
                   CALL       PGM(AA004C)
                   GOTO       CMDLBL(START)
                ENDDO
                CALL       PGM(VT711R)
                GOTO       CMDLBL(START)
             ENDDO


/* Valg 90                                                           */
             IF         COND(&VALG *EQ 90) THEN(DO)
             SIGNOFF
             ENDDO

/* Gå til start                                                      */
             GOTO       CMDLBL(START)

 MELDE:      CALL       PGM(AA004C)
             GOTO       CMDLBL(START)

