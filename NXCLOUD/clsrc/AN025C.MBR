             PGM        PARM(&SAVF &BIBL)

             DCL        VAR(&KODE)     TYPE(*DEC)  LEN(2 0)
             DCL        VAR(&SAVF)     TYPE(*CHAR) LEN(1)
             DCL        VAR(&BIBL)     TYPE(*CHAR) LEN(10)

/* Backup via savefile og ut på tape etterpå                         */

             IF         COND(&SAVF *EQ '1') THEN(DO)
             CRTSAVF    FILE(ADB.SAVF/&BIBL)
             MONMSG     MSGID(CPF5813 CPF7302)
             CLRSAVF    FILE(ADB.SAVF/&BIBL)
             SAVLIB     LIB(&BIBL)  DEV(*SAVF) SAVF(ADB.SAVF/&BIBL) +
                          PRECHK(*YES) SAVACT(*LIB) +
                          OMITOBJ((*ALL *JRN) (*ALL *JRNRCV))
             MONMSG     MSGID(CPF3781) EXEC(DO)
             CHGVAR     VAR(&KODE)     VALUE(15)
             CALL       PGM(AN050R)    PARM(&KODE &BIBL)
             ENDDO
             GOTO       CMDLBL(SLUTT)
             ENDDO

/* Backup via savefile og ikke ut på tape direkte                    */

             IF         COND(&SAVF *EQ '2') THEN(DO)
             CRTSAVF    FILE(ADB.SAVF/&BIBL)
             MONMSG     MSGID(CPF5813 CPF7302)
             CLRSAVF    FILE(ADB.SAVF/&BIBL)
             SAVLIB     LIB(&BIBL)  DEV(*SAVF) SAVF(ADB.SAVF/&BIBL) +
                          PRECHK(*YES) SAVACT(*LIB) +
                          OMITOBJ((*ALL *JRN) (*ALL *JRNRCV))
             MONMSG     MSGID(CPF3781) EXEC(DO)
             CHGVAR     VAR(&KODE)     VALUE(15)
             CALL       PGM(AN050R)    PARM(&KODE &BIBL)
             ENDDO
             GOTO       CMDLBL(SLUTT)
             ENDDO

/* Backup direkte til tape uten savefile                             */

             SAVLIB     LIB(&BIBL) DEV(TAP01) ENDOPT(*LEAVE) +
                          PRECHK(*YES) SAVACT(*LIB) +
                          OMITOBJ((*ALL *JRN) (*ALL *JRNRCV))
             MONMSG     MSGID(CPF3781) EXEC(DO)
             CHGVAR     VAR(&KODE)     VALUE(15)
             CALL       PGM(AN050R)    PARM(&KODE &BIBL)
             ENDDO

SLUTT:       ENDPGM
