CREATE OR REPLACE TABLE RX01ST(
  UID              FOR COLUMN RXGUID NUMERIC(18, 0) NOT NULL
                   GENERATED ALWAYS AS IDENTITY
                   (START WITH 1 INCREMENT BY 1 CYCLE),
  Identnr          FOR COLUMN RXOIDE NUMERIC(10, 0) NOT NULL DEFAULT 0,
  Firm             FOR COLUMN RXFIRM NUMERIC(3, 0) NOT NULL DEFAULT 0,
  CustomerNumber   FOR COLUMN RXKUND NUMERIC(6, 0) NOT NULL DEFAULT 0,
  CustomerName     FOR COLUMN RXNAVN CHAR(30) NOT NULL DEFAULT ' ',
  CustomerAlpha    FOR COLUMN RXALFA CHAR(18) NOT NULL DEFAULT ' ',
  CustAdress1      FOR COLUMN RXGATE CHAR(30) NOT NULL DEFAULT ' ',
  CustAdress2      FOR COLUMN RXADR2 CHAR(30) NOT NULL DEFAULT ' ',
  PostalNumber     FOR COLUMN RXPONR NUMERIC(4, 0) NOT NULL DEFAULT 0,
  ForeignPostNbr   FOR COLUMN RXUPNR CHAR(9) NOT NULL DEFAULT ' ',
  PostalPlace      FOR COLUMN RXSTED CHAR(30) NOT NULL DEFAULT ' ',

  PaymTerms        FOR COLUMN RXBETB NUMERIC(2, 0) NOT NULL DEFAULT 0,
  PaymMethod       FOR COLUMN RXBETM NUMERIC(1, 0) NOT NULL DEFAULT 0,
  SamleInvoice     FOR COLUMN RXSAMM CHAR(1) NOT NULL DEFAULT ' ',
  PricePackNote    FOR COLUMN RXPRPA NUMERIC(1, 0) NOT NULL DEFAULT 0,
  CreditLimit      FOR COLUMN RXGRNS NUMERIC(5, 0) NOT NULL DEFAULT 0,
  CreditType       FOR COLUMN RXKRES NUMERIC(1, 0) NOT NULL DEFAULT 0,
  DiscCategory     FOR COLUMN RXRABK NUMERIC(3, 0) NOT NULL DEFAULT 0,
  CustCategory     FOR COLUMN RXKATG NUMERIC(4, 0) NOT NULL DEFAULT 0,
  OrgNumber        FOR COLUMN RXFTNR NUMERIC(9, 0) NOT NULL DEFAULT 0,
  InvoiceFee       FOR COLUMN RXFAGB NUMERIC(1, 0) NOT NULL DEFAULT 0,
  Emailadresse     FOR COLUMN RXEMAL CHAR(50) NOT NULL DEFAULT ' ',
  PhoneNumber      FOR COLUMN RXTLFN CHAR(11) NOT NULL DEFAULT ' ',
  FaxNumber        FOR COLUMN RXTLFX CHAR(11) NOT NULL DEFAULT ' ',
  MobilNumber      FOR COLUMN RXMOBN CHAR(11) NOT NULL DEFAULT ' ',
  CountryCode      FOR COLUMN RXLAND CHAR(2) NOT NULL DEFAULT ' ',
  PassivCode       FOR COLUMN RXPASS CHAR(1) NOT NULL DEFAULT ' ',
  InvoiceSeq       FOR COLUMN RXSEKV NUMERIC(2, 0) NOT NULL DEFAULT 0,
  PriceBookUnit    FOR COLUMN RXPBOK NUMERIC(1, 0) NOT NULL DEFAULT 0,
  SaldoByYear      FOR COLUMN RXSALD NUMERIC(11, 2) NOT NULL DEFAULT 0,
  SaldoLastYear    FOR COLUMN RXSAIF NUMERIC(11, 2) NOT NULL DEFAULT 0,
  VatCode          FOR COLUMN RXMKOD NUMERIC(1, 0) NOT NULL DEFAULT 0,
  ReqCode          FOR COLUMN RXREKV NUMERIC(1, 0) NOT NULL DEFAULT 0,
  InvoiceType      FOR COLUMN RXFATY NUMERIC(2, 0) NOT NULL DEFAULT 0,
  LockCode         FOR COLUMN RXSPRK CHAR(1) NOT NULL DEFAULT ' ',
  CreatetdDate     FOR COLUMN RXNDAT DATE NOT NULL DEFAULT CURRENT_DATE,
  PersonelNumber   FOR COLUMN RXPENR NUMERIC(11, 0) NOT NULL DEFAULT 0,
  EANNumber        FOR COLUMN RXEANK NUMERIC(13, 0) NOT NULL DEFAULT 0,
  EANInvNumber     FOR COLUMN RXEANF NUMERIC(13, 0) NOT NULL DEFAULT 0,
  OppKreditt       FOR COLUMN RXOGRN NUMERIC(5, 0) NOT NULL DEFAULT 0,
  AddKreditt       FOR COLUMN RXTGRN NUMERIC(5, 0) NOT NULL DEFAULT 0,
  KredittDate      FOR COLUMN RXGDAT DATE NOT NULL DEFAULT CURRENT_DATE,
  QtyInvCopy       FOR COLUMN RXFCOP NUMERIC(1, 0) NOT NULL DEFAULT 0,
  InterestCode     FOR COLUMN RXRENK NUMERIC(1, 0) NOT NULL DEFAULT 0,
  PortCode         FOR COLUMN RXPURR NUMERIC(1, 0) NOT NULL DEFAULT 0,
  SalesNumber      FOR COLUMN RXSLGR NUMERIC(4, 0) NOT NULL DEFAULT 0,
  District         FOR COLUMN RXDIST NUMERIC(4, 0) NOT NULL DEFAULT 0,
  Department       FOR COLUMN RXAVDE NUMERIC(4, 0) NOT NULL DEFAULT 0,
  Wharehouse       FOR COLUMN RXLAGE NUMERIC(2, 0) NOT NULL DEFAULT 0,
  FreeCode1        FOR COLUMN RXFRI1 CHAR(1) NOT NULL DEFAULT ' ',
  FreeCode2        FOR COLUMN RXFRI2 CHAR(1) NOT NULL DEFAULT ' ',
  FreeCode3        FOR COLUMN RXFRI3 CHAR(1) NOT NULL DEFAULT ' ',
  FreeCode4        FOR COLUMN RXFRI4 CHAR(1) NOT NULL DEFAULT ' ',
  FreeCode5        FOR COLUMN RXFRI5 CHAR(1) NOT NULL DEFAULT ' ',
  PriceInvoice     FOR COLUMN RXNETO NUMERIC(1, 0) NOT NULL DEFAULT 0,
  KredittCode      FOR COLUMN RXKKOD NUMERIC(1, 0) NOT NULL DEFAULT 0,
  EbizCode         FOR COLUMN RXEBIZ NUMERIC(1, 0) NOT NULL DEFAULT 0,

    PRIMARY KEY(UID))

ON REPLACE PRESERVE ALL ROWS;

LABEL ON TABLE RX01ST IS 'Customer information - export';
